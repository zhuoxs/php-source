page {
    width: 100%;
    height: 100%;
    background: #f9f9f9;
}

.statusBarHeight {
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    color: #fff;
    z-index: 11;
    height: auto;
}

.statusBarHeight text {
    font-size: 33rpx;
    color: #fff;
    margin-left: 0;
}

.left_imga {
    width: 70rpx;
    height: 70rpx;
}

.buttonum {
    height: 44px;
    margin-top: 0;
    width: 100%;
    display: flex;
    align-items: center;
}

.buttonum_ui {
    height: 100%;
    display: flex;
    align-items: center;
}

.buttonum_uicl {
    background: rgba(0,0,0,0.2);
}

button {
    padding: 0;
    margin: 0;
    border-radius: 0;
    background: none;
    line-height: normal;
}

button::after {
    content: none;
}

.button-hover {
    background-color: none;
}

.collection_view {
    width: 100%;
    padding: 15rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.collection_box {
    width: 49%;
    height: 470rpx;
    background: #fff;
    display: flex;
    margin-bottom: 28rpx;
    flex-direction: column;
    padding: 14rpx;
    box-sizing: border-box;
    position: relative;
}

.collection_img {
    height: 310rpx!important;
    width: 310rpx;
}

.collection_tite {
    color: #333333;
    font-size: 30rpx;
    padding-top: 26rpx;
    font-size: 28rpx;
    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.collection_price {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding-top: 22rpx;
}

.collection_price text {
    color: #9c9c9c;
    font-size: 24rpx;
}

.collection_price text:first-child {
    color: #ff423e;
}

.beiji_viewlist_zbotm {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding-top: 22rpx;
}

.beiji_viewlist_zuanteo {
    width: 106rpx;
    height: 40rpx;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
}

.beiji_viewlist_zuanteo image {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.beiji_viewlist_zuanteo text {
    color: #ff423e;
    font-size: 24rpx;
    position: relative;
    z-index: 1;
}

.beiji_viewlist_zuan {
    width: 137rpx;
    height: 40rpx;
    position: relative;
    margin-left: 15rpx;
}

.beiji_viewlist_zuan image {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.beiji_viewlist_zuantxt {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    justify-content: space-between;
    padding: 0 10rpx;
    box-sizing: border-box;
}

.beiji_viewlist_zuantxt text {
    color: #fff;
    font-size: 24rpx;
    text-align: right;
}

.collection_number {
    width: 120rpx;
    height: 44rpx;
    border-top-left-radius: 50rpx;
    border-bottom-left-radius: 50rpx;
    background: #ffcc32;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    right: 0;
    top: 24rpx;
}

.collection_number image {
    width: 31rpx;
    height: 23rpx;
}

.collection_number text {
    color: #ffffff;
    font-size: 25rpx;
    padding-left: 7rpx;
}