page {
    width: 100%;
    height: 100%;
}

.container {
    position: relative;
}

.register {
    width: 50%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    position: fixed;
    bottom: 150rpx;
    left: 50%;
    margin-left: -25%;
}

.logopic {
    width: 100%;
    position: absolute;
    top: 20%;
    left: 50%;
    margin-left: -50%;
}

.wechat {
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
}

.avatar {
    width: 120rpx;
    height: 120rpx;
    margin: auto;
    border-radius: 50%;
    overflow: hidden;
}

.bgv {
    display: block;
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: -1;
}

.username {
    font-size: 30rpx;
    margin: auto;
    text-align: center;
}

.pian {
    position: fixed;
    height: 100%;
    width: 100%;
}

.pian_ssa {
    position: relative;
    height: 225rpx;
    margin: 20rpx 0;
    width: 94%;
    padding: 0 3%;
}

.pian_zheng {
    width: 100%;
    height: 100%;
}

.pian_tyopu {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
    border: 2rpx solid #fff;
    position: absolute;
    top: 20%;
    left: 6%;
    overflow: hidden;
}

.pian_tyoputext {
    position: absolute;
    top: 37%;
    left: 28%;
    color: #fff;
    font-size: 24rpx;
}

.shenpic {
    position: relative;
}

.shenname {
    position: absolute;
    top: 20rpx;
    left: 20rpx;
    font-size: 40rpx;
}

.apple {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    width: 96%;
    padding: 10rpx 2% 20rpx;
    font-size: 30rpx;
    color: #fff;
    overflow: hidden;
}

.nickname {
    max-width: 300rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.left,.right {
    width: 46%;
    padding: 14rpx 2%;
}

.big image {
    width: 100%;
    border-radius: 16rpx;
    margin-bottom: 20rpx;
}