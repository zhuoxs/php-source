.container{ padding-bottom: 120rpx; }
.wrap{ margin:20rpx 20rpx 0; background-color: #fff; border-radius: 10rpx; }
.shop{ display: flex; padding:40rpx 20rpx; }
.shop-img{ flex: 0 0 120rpx; width: 120rpx; height: 120rpx; margin-right: 24rpx; border-radius: 10rpx; }
.shop-right{ display: flex; flex-direction: column; justify-content: space-between; padding-bottom: 8rpx; color:#a0a0a0; font-size: 26rpx; }
.store-name{ color: #222; font-weight: 700; margin-bottom:20rpx; }
.code{ padding-bottom: 80rpx; }
.wrap-title{ padding: 40rpx 30rpx 30rpx; font-size: 30rpx; font-weight: 700; letter-spacing: 2rpx; }
.list{ display: flex; justify-content: space-between; align-items: center; padding-bottom:20rpx; margin:0 30rpx; font-weight: 700; border-bottom: 1rpx solid #ddd; }
.input{ font-weight: 500; text-align: right; }
button::after{ border: none }
.confirm{ margin-top: 30rpx; width: 650rpx; height: 82rpx; font-size: 32rpx; background-image: -webkit-linear-gradient( 0deg, rgb(255,129,47) 0%, rgb(255,69,61) 100%); color: #fff; }
.qrcode{ width: 360rpx; margin: 20rpx auto; }
.qrcode>view{ width: 360rpx; height: 360rpx; box-shadow: 0rpx 0rpx 10rpx 2rpx rgba(255,69,61,0.4); }
.qrcode>view> canvas{ width: 360rpx; height: 360rpx; margin-top:20rpx; }
