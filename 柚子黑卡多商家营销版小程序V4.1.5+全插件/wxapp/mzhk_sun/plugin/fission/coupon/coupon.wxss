.block{ display: flex; justify-content: space-between; align-items: center; padding:0 50rpx; width: 590rpx; height: 200rpx; margin: 30rpx auto; background-image: -webkit-linear-gradient( 0deg, rgb(243,72,108) 0%, rgb(249,141,163) 100%); border-radius: 10rpx; color: #fff; font-size: 34rpx; font-weight: 700; }
.block_1{ background-image: -webkit-linear-gradient( 0deg, rgb(218,88,255) 0%, rgb(240,143,246) 100%); }
.block_2{ background-image: -webkit-linear-gradient( 0deg, rgb(66,186,255) 0%, rgb(44,208,255) 100%); }
.block-right{ position: relative; }
.block-right .img{ position: relative; width: 120rpx; height: 120rpx; border-radius: 50%; z-index: 2; }
.block-right .bg{ position: absolute; right: -44rpx; top:-28rpx; width: 256rpx; height: 174rpx; z-index: 0; }
.remark{ margin-top: 26rpx; font-size: 24rpx; font-weight: 500; }
.session{ margin:60rpx auto; width: 690rpx; background-color: #fff; border-radius: 10rpx; }
.list{ display: flex; justify-content: space-between; align-items: center; margin:0 20rpx; height: 90rpx; border-bottom: 1rpx solid rgb(236, 236, 236); }
.list:last-child{ border-bottom: 0rpx solid rgb(236, 236, 236); }
.list>view{ flex: 1; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }
.list>view>text{ margin-left: 10rpx; color: #f3486c; }
.icon{ flex: 0 0 48rpx; width: 58rpx; height: 48rpx; margin-left: 20rpx; }
