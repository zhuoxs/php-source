.container{ padding-bottom: 120rpx; }
.wrap{ margin:20rpx ; background-color: #fff; }
.head{ position: relative; height: 355rpx; width: 710rpx; }
.bg{ position: absolute; left: 0; top: 0; height: 375rpx; width: 710rpx; z-index: 0; }
.head-cont{ position: absolute; z-index: 1; width: 100%; text-align: center; color: #fff; }
.store-name{ margin-top: 60rpx; margin-bottom: 50rpx; line-height: 52rpx; font-size: 42rpx; font-weight: 700; max-height: 104rpx; overflow: hidden; }
.time{ width: 360rpx; height: 68rpx; text-align: ce; line-height: 68rpx; margin: 0 auto; background-color: rgba(0,0,0,0.5); border-radius: 34rpx; font-size: 24rpx; }
.remark{ margin-top: 40rpx; font-size: 700; }
.session{ margin-top: 0; }
.list{ display: flex; justify-content: space-between; align-items: center; padding:30rpx 0; margin:0 30rpx; font-weight: 700; border-bottom: 4rpx dashed #d6d6d6; }
.list:last-child{ border-bottom: 0rpx dashed #d6d6d6; }
.list>view{ flex: 1; line-height: 36rpx; }
.address>text{ display: inline-block; vertical-align: text-top; }
.address>text.adr{ width: 500rpx; }
.icon{ flex: 0 0 48rpx; margin-left: 20rpx; width: 48rpx; height: 48rpx; }
.wrap-title{ display: flex; align-items: center; justify-content: center; height: 90rpx; width: 100%; }
.wrap-title>text{ margin:0 20rpx; }
.wrap-title::before,.wrap-title::after{ content: " "; display: inline-block; height: 2rpx; width: 100rpx; background: #a5a5a5; }
.content{ padding:0 15rpx; }
.footer{ position: fixed; bottom: 0; left: 0; width: 100%; height: 100rpx; background-color: #fff; box-shadow: 0 0rpx 3rpx 3rpx rgba(180,180,180,0.2) }
.receive{ width: 350rpx; height: 76rpx; line-height: 76rpx; margin-top: 12rpx; background-color: #3ec0fe; font-size: 28rpx; color: #fff; border-radius: 38rpx; margin-left: 200rpx; }
.home{ position: fixed; right: 30rpx; bottom:12rpx; height: 76rpx; width: 76rpx; background-color: #3ec0fe; border-radius: 6rpx; display: flex; align-items: center; justify-content: center; }
.home-icon{ width: 76rpx; height:76rpx; }
button::after{ border: none }
