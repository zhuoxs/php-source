.container {
    border-top: 1rpx solid #ececec;
}

.icn {
    width: 42rpx;
    height: 24rpx;
    margin-right: 6rpx;
}

.listBot {
    display: flex;
    justify-content: space-between;
    color: #999;
    font-size: 26rpx;
    padding: 20rpx 10rpx 0rpx 10rpx;
}

.msg {
    display: flex;
    align-items: center;
    color: #444;
}

.msg>view {
    margin-right: 12rpx;
}

.watch {
    display: flex;
    align-items: center;
}

.news {
    width: 650rpx;
    margin-left: 30rpx;
    background: #fff;
    border-radius: 20rpx;
    margin-top: 30rpx;
    padding: 20rpx;
    box-shadow: 0 3rpx 3rpx 0rpx rgba(180,180,180,0.3);
}

.newsPic {
    width: 650rpx;
}

.newsPic>view {
    bottom: 0rpx;
    width: 650rpx;
    line-height: 42rpx;
    margin-bottom: 20rpx;
    font-size: 32rpx;
}

.newsPic>image {
    width: 650rpx;
    height: 400rpx;
}

.video {
    display: block;
    width: 100%;
    height: 440rpx;
    border-radius: 18rpx;
}

.video-img {
    height: 400rpx;
    width: 650rpx;
    border-radius: 18rpx;
}

.play {
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    left: 275rpx;
    top: 150rpx;
}

.play-btn {
    width: 100rpx;
    height: 100rpx;
}