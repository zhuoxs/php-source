<import src="/mzhk_sun/pages/wxParse/wxParse.wxml"></import>
<view class="container">
    <view>
        <view bindtap="toShop" class="shop" data-bid="{{newsinfo.brand.bid}}" style="position:relative" wx:if="{{newsinfo.brand.bid>0}}">
            <form bindsubmit="oddPushFormSubmit" reportSubmit="true" style="width: 100%; height:100%; position: absolute; top: 0; left: 0">
                <button formType="submit" plain="true" style="width: 100%;height:100%;border:1px solid transparent;background-color:transparent;position: absolute; top: 0; left: 0;-webkit-transform: scale(0.5);transform:scale(1);content:\"\";z-index:10;"></button>
            </form>
            <view class="shopDet">
                <image class="shopimg" src="{{url}}{{newsinfo.brand.img}}"></image>
                <text class="shopName">{{newsinfo.brand.bname}}</text>
            </view>
            <view class="shopDet">
                <text class="shopHome">商家主页</text>
                <image class="right" src="../../../../style/images/right1.png"></image>
            </view>
        </view>
        <view class="cont">
            <view class="title">
        {{newsinfo.title}}
      </view>
            <view class="time">{{newsinfo.addtime}}</view>
            <view class="watch">
                <view>
                    <view class="watchNum">
                        <image class="icn" src="../../../../style/images/icon31.png"></image>
                        <text>{{newsinfo.seenum}}</text>
                    </view>
                    <view class="watchNum">
                        <image class="icn" src="../../../../style/images/icon32.png"></image>
                        <text>{{newsinfo.likenum}}</text>
                    </view>
                </view>
            </view>
            <view class="arcBody">
                <template is="wxParse" data="{{wxParseData:content.nodes}}"></template>
            </view>
            <view class="btnGroup">
                <view bindtap="clickGood" class="clickGood">
                    <view class="{{newsinfo.stlike==1?'isgood':''}}" style="position:relative">
                        <form bindsubmit="oddPushFormSubmit" reportSubmit="true" style="width: 100%; height:100%; position: absolute; top: 0; left: 0">
                            <button formType="submit" plain="true" style="width: 100%;height:100%;border:1px solid transparent;background-color:transparent;position: absolute; top: 0; left: 0;-webkit-transform: scale(0.5);transform:scale(1);content:\"\";z-index:10;"></button>
                        </form>
                        <image class="goodIcon" src="../../../../style/images/good.png"></image>
                    </view>
                    <image class="goodIcn {{isGood?'isActive':''}}" src="../../../../style/images/good36.png"></image>
                    <view>赞一个</view>
                </view>
                <view class="clickGood">
                    <view>
                        <button openType="share" style="position:relative">
                            <form bindsubmit="oddPushFormSubmit" reportSubmit="true" style="width: 100%; height:100%; position: absolute; top: 0; left: 0">
                                <button formType="submit" plain="true" style="width: 100%;height:100%;border:1px solid transparent;background-color:transparent;position: absolute; top: 0; left: 0;-webkit-transform: scale(0.5);transform:scale(1);content:\"\";z-index:10;"></button>
                            </form>
                            <image class="goodIcon" src="../../../../style/images/share4.png"></image>
                        </button>
                    </view>
                    <view>分享</view>
                </view>
            </view>
            <view bindtap="toActive" class="goods" data-gid="{{newsinfo.goods.gid}}" data-lid="{{newsinfo.goods.lid}}" style="position:relative" wx:if="{{newsinfo.goods.gid>0}}">
                <form bindsubmit="oddPushFormSubmit" reportSubmit="true" style="width: 100%; height:100%; position: absolute; top: 0; left: 0">
                    <button formType="submit" plain="true" style="width: 100%;height:100%;border:1px solid transparent;background-color:transparent;position: absolute; top: 0; left: 0;-webkit-transform: scale(0.5);transform:scale(1);content:\"\";z-index:10;"></button>
                </form>
                <view class="goodsImg">
                    <image src="{{url}}{{newsinfo.goods.img}}"></image>
                </view>
                <view class="goodsDet">
                    <view class="goodsTitle">
                        <image src="../../../../style/images/vip.png" wxif="{{newsinfo.goods.is_vip==1}}"></image>
                        <text>{{newsinfo.goods.gname}}</text>
                    </view>
                    <view class="toBuy">去看看</view>
                </view>
            </view>
        </view>
    </view>
</view>
<login bindtogetuserinfo="updateUserInfo" modalHidden="{{is_modal_Hidden}}"></login>
