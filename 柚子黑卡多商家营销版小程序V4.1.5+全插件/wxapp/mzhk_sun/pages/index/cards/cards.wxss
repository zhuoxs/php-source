.banner {
    width: 750rpx;
    height: 230rpx;
}

.order-nav {
    height: 80rpx;
    display: flex;
    align-items: center;
    background: #fff;
    justify-content: space-around;
}

.order-nav view {
    display: inline-block;
    height: 80rpx;
    line-height: 80rpx;
    box-sizing: border-box;
    color: #999;
    font-size: 30rpx;
}

.order-nav .on {
    border-bottom: 4rpx solid #f33030;
    color: #f33030;
}

.order-nav text {
    padding: 0rpx 30rpx;
}

.session {
    margin-bottom: 100rpx;
}

.list {
    padding: 24rpx;
    width: 702rpx;
    background: #fff;
    border-bottom: 1rpx solid #ececec;
    display: flex;
    position: relative;
}

.left {
    width: 222rpx;
    height: 224rpx;
    border-radius: 10rpx;
}

.left image {
    width: 222rpx;
    height: 222rpx;
    border-radius: 10rpx;
}

.rightList {
    margin-left: 20rpx;
    margin-top: 10rpx;
    width: 460rpx;
}

.title {
    font-size: 30rpx;
    color: #000;
    line-height: 32rpx;
    max-height: 64rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.mintitle {
    color: #666;
    display: flex;
    align-items: center;
    height: 100rpx;
    overflow: hidden;
}

.mintitle text:first-child {
    display: inline-block;
    height: 34rpx;
    line-height: 34rpx;
    font-size: 28rpx;
    border-radius: 8rpx;
    margin-right: 12rpx;
}

.oldtitle text:first-child {
    border: 1rpx solid #555;
    color: #fff;
    background: #555;
}

.lis {
    width: 460rpx;
    display: flex;
    justify-content: space-between;
    position: absolute;
    bottom: 12rpx;
    align-items: center;
}

.price {
    display: flex;
    flex: 1;
    color: #666;
    height: 70rpx;
    align-items: center;
    margin-left: 5rpx;
}

.price view {
    display: flex;
    height: 70rpx;
    line-height: 36rpx;
    flex: 1;
    align-items: center;
}

.curPrice {
    font-size: 25rpx;
    color: #f33030;
    font-weight: 700;
    height: 32rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    flex: 1;
}

.old-price {
    color: #666;
}

.oldPrice text {
    margin-top: 30rpx;
    font-size: 24rpx;
    position: relative;
    color: #999;
}

.join {
    width: 182rpx;
    height: 70rpx;
    background-image: -webkit-linear-gradient(0deg,rgb(232,90,90)0%,rgb(243,48,48)100%);
    line-height: 70rpx;
    text-align: center;
    color: #fff;
    border-radius: 6rpx;
}

.oldJoin {
    background-image: none;
    color: #666;
    border: 1rpx solid #222;
}

swiper {
    height: 230rpx;
}

.slide-image {
    width: 750rpx;
    height: 230rpx;
}