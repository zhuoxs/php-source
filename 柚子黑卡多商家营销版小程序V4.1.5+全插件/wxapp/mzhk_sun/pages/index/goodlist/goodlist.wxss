.banner {
    width: 750rpx;
    height: 230rpx;
}

.order-nav {
    height: 80rpx;
    display: flex;
    align-items: center;
    background: #fff;
    justify-content: space-around;
}

.order-nav view {
    display: inline-block;
    height: 80rpx;
    line-height: 80rpx;
    box-sizing: border-box;
    color: #999;
    font-size: 30rpx;
}

.order-nav .on {
    border-bottom: 4rpx solid #f33030;
    color: #f33030;
}

.order-nav text {
    padding: 0rpx 30rpx;
}

.session {
    margin-bottom: 100rpx;
}

.list {
    padding: 24rpx;
    width: 702rpx;
    background: #fff;
    border-bottom: 1rpx solid #ececec;
    display: flex;
    position: relative;
}

.left {
    width: 222rpx;
    height: 224rpx;
    border-radius: 10rpx;
}

.left image {
    width: 222rpx;
    height: 222rpx;
    border-radius: 10rpx;
}

.rightList {
    margin-left: 20rpx;
    margin-top: 4rpx;
    width: 460rpx;
}

.title {
    color: #222;
    line-height: 36rpx;
}

.mintitle {
    margin-top: 18rpx;
    color: #666;
    display: flex;
    align-items: center;
}

.mintitle text:first-child {
    display: inline-block;
    padding: 0rpx 10rpx;
    height: 34rpx;
    line-height: 34rpx;
    font-size: 22rpx;
    border: 1rpx solid #f33030;
    border-radius: 8rpx;
    color: #f33030;
    margin-right: 12rpx;
}

.oldtitle text:first-child {
    border: 1rpx solid #555;
    color: #fff;
    background: #555;
}

.lis {
    width: 460rpx;
    display: flex;
    justify-content: space-between;
    position: absolute;
    bottom: 32rpx;
}

.price {
    display: flex;
    flex-direction: column;
    color: #666;
}

.curPrice {
    font-size: 32rpx;
    color: #f33030;
    font-weight: 700;
}

.old-price {
    color: #666;
}

.oldPrice text {
    display: inline-block;
    font-size: 24rpx;
    position: relative;
    color: #999;
    margin-top: 15rpx;
}

.oldPrice text::before {
    content: " ";
    display: inline-block;
    width: 100%;
    height: 2rpx;
    background: #999;
    position: absolute;
    top: 10rpx;
    left: 0rpx;
    transform: rotate(2deg);
}

.join {
    width: 182rpx;
    height: 70rpx;
    background-image: -webkit-linear-gradient(0deg,rgb(232,90,90)0%,rgb(243,48,48)100%);
    line-height: 70rpx;
    text-align: center;
    color: #fff;
    border-radius: 6rpx;
}

.oldJoin {
    background-image: none;
    color: #666;
    border: 1rpx solid #333;
}

swiper {
    height: 230rpx;
}

.slide-image {
    width: 750rpx;
    height: 230rpx;
}