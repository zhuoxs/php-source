<view class="container" style="height:100%">
    <view class="backstage">
        <view class="wrap">
            <view class="logo pretend">
                <image class="hklogo" src="{{url}}{{logo}}" wx:if="{{logo!=''}}"></image>
                <image class="hklogo" src="{{hklogo}}" wx:if="{{logo==''}}"></image>
            </view>
            <view>
                <form bindsubmit="formSubmit">
                    <view class="session">
                        <input decode="{{true}}" name="loginname" placeholder="请输入用户名" type="text"></input>
                    </view>
                    <view class="session">
                        <input name="loginpassword" placeholder="请输入密码" type="password"></input>
                    </view>
                    <view class="session session-login">
                        <button class="login" formType="submit">登录</button>
                    </view>
                </form>
            </view>
        </view>
    </view>
</view>
