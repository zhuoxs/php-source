.container {
    justify-content: flex-start;
    min-height: 100%;
    position: relative;
    padding-bottom: 120rpx;
}

.user {
    height: 380rpx;
    background-image: -webkit-linear-gradient(90deg,rgb(245,172,50) 0%,rgb(245,199,121) 100%);
    padding: 0rpx 30rpx 0rpx 22rpx;
    font-size: 28rpx;
    color: #fff;
    position: relative;
}

.user>view:first-child {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 35rpx;
}

.user-count {
    width: 698rpx;
    height: 150rpx;
    background: rgba(255,255,255,0.7);
    position: absolute;
    bottom: 0rpx;
    left: 30rpx;
    border-radius: 8rpx 8rpx 0rpx 0rpx;
    display: flex;
    flex-direction: row;
}

.user-money {
    display: flex;
    flex-direction: column;
    width: 330rpx;
    font-size: 32rpx;
    color: #ef8200;
    margin-top: 30rpx;
    margin-left: 20rpx;
}

.user-money view text {
    font-size: 34rpx;
    margin-right: 10rpx;
}

.user-money-total {
    display: flex;
    margin-top: 24rpx;
}

.user-recharge {
    margin-top: 44rpx;
    margin-left: 20rpx;
    padding: 0rpx 12rpx;
    height: 68rpx;
    background-color: #ef8200;
    border-radius: 10rpx;
    box-shadow: 0rpx 3rpx 4rpx 0rpx rgba(216,38,72,0.2);
    display: flex;
    justify-content: center;
    align-items: center;
}

.user-recharge text {
    color: #fff;
    font-size: 30rpx;
    margin-right: 24rpx;
}

.user-recharge image {
    height: 32rpx;
    width: 33rpx;
    margin-top: 1rpx;
}

.user-recharge-left {
    margin-left: 190rpx;
}

.user-info {
    display: flex;
}

.nickname {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 30rpx;
}

.user-name {
    margin-bottom: 12rpx;
}

.thumb {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    border: 2rpx solid #fff;
    overflow: hidden;
    display: block;
}

.scan {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.icon {
    margin-bottom: 14rpx;
    width: 38rpx;
    height: 38rpx;
}

.session {
    margin-bottom: 100rpx;
    background: #fff;
    font-size: 28rpx;
    color: #222;
}

.session-cont {
    display: flex;
    flex-wrap: wrap;
}

.list {
    height: 100rpx;
    width: 209rpx;
    border-bottom: 1px solid #cbcbcb;
    padding: 20rpx;
    font-size: 28rpx;
    color: #222;
    display: flex;
    flex-direction: column;
    border-right: 1px solid #cbcbcb;
}

.list:nth-child(3n) {
    border-right: 0;
    width: 210rpx;
}

.list-item {
    font-size: 40rpx;
    font-weight: 700;
    text-align: center;
    margin-top: 40rpx;
}

.order {
    margin-top: 20rpx;
    width: 750rpx;
    height: 162rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    background: #fff;
    border-top: 1rpx solid #cbcbcb;
}

.orderIcon {
    height: 82rpx;
    width: 82rpx;
    margin-bottom: 16rpx;
}

.orderList {
    width: 375rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
    color: #222;
}

.off {
    background: #fff;
    margin-top: 20rpx;
    padding: 0rpx 30rpx 30rpx;
}

.offTitle {
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    font-size: 30rpx;
}

.ordernum {
    border: 1rpx solid #ececec;
    width: 670rpx;
    border-radius: 8rpx;
    height: 72rpx;
    font-size: 28rpx;
    color: #222;
    padding-left: 20rpx;
}

.submit {
    height: 62rpx;
    line-height: 62rpx;
    width: 200rpx;
    font-size: 28rpx;
    color: #fff;
    margin-top: 20rpx;
    background: #f5ac32;
}

.outLogin {
    width: 750rpx;
    margin-top: 50rpx;
    display: flex;
    justify-content: center;
}

.outLogin button {
    width: 688rpx;
    height: 88rpx;
    line-height: 88rpx;
    color: #fff;
    font-size: 34rpx;
    background-image: -webkit-linear-gradient(90deg,rgb(245,172,50) 0%,rgb(245,202,130) 100%);
    border: 1rpx solid #f5ac32;
}

.mask,.codemask {
    position: fixed;
    top: 0rpx;
    left: 0rpx;
    right: 0rpx;
    bottom: 0rpx;
    background: rgba(0,0,0,0.5);
    z-index: 1000;
}

.goos {
    position: fixed;
    top: 30%;
    left: 50%;
    transform: translate(-50%);
    z-index: 9999;
    background: #fff;
    width: 650rpx;
    padding-bottom: 30rpx;
    border-radius: 10rpx;
}

.goodsdet {
    width: 400rpx;
    font-size: 26rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.btn {
    display: flex;
    justify-content: space-around;
    margin-top: 30rpx;
}

.btn>button {
    height: 60rpx;
    width: 160rpx;
    line-height: 60rpx;
    margin-left: 0rpx;
    margin-right: 0rpx;
    padding-left: 0rpx;
    padding-right: 0rpx;
    font-size: 28rpx;
    border: 1rpx solid #999;
    background: #fff;
}

.btn>button.confirm {
    background: #ef8200;
    border: 1rpx solid #ef8200;
    color: #fff;
}

.list-left {
    display: flex;
}

.img {
    height: 130rpx;
    width: 130rpx;
    margin-right: 20rpx;
}

.lists {
    padding: 20rpx;
}

.order-num {
    border-bottom: 1rpx solid #ececec;
    line-height: 40rpx;
    padding: 10rpx 0rpx;
    font-size: 30rpx;
}

.list-up {
    padding: 20rpx 0rpx 0rpx;
}

.left-title {
    line-height: 40rpx;
}

.code {
    position: absolute;
    top: 20%;
    left: 50%;
    transform: translate(-50%);
    z-index: 1001;
    background: #fff;
    width: 650rpx;
    height: 600rpx;
    padding-bottom: 30rpx;
    border-radius: 10rpx;
}

.qrcode {
    display: flex;
    align-items: center;
    margin: 30rpx auto;
    width: 420rpx;
}

.qrcode>canvas {
    width: 420rpx;
    height: 420rpx;
}

.qrcode>image {
    width: 420rpx;
    height: 420rpx;
}

.codetitle {
    text-align: center;
    margin-top: 30rpx;
    font-size: 34rpx;
    color: #ef8200;
}

.showEwm {
    height: 96rpx;
    width: 96rpx;
    border-radius: 50%;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0px 0px 18px 0px rgba(4,0,0,0.055);
    margin-top: 30rpx;
    margin-left: 620rpx;
}

.showEwm>image {
    width: 56rpx;
    height: 56rpx;
}

.userOpe {
    background-color: #fff;
    padding: 34rpx 20rpx;
    display: flex;
    flex-direction: row;
    margin-top: 20rpx;
    flex-wrap: wrap;
}

.opeartion {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 0 65rpx;
    margin-bottom: 50rpx;
}

.opeartion image {
    width: 58rpx;
    height: 58rpx;
}

.opeartion text {
    font-size: 26rpx;
    color: #666;
    margin-top: 20rpx;
}

.goodsnumbox {
    display: flex;
    justify-content: left;
    align-items: center;
}

.goodsnumbox_b {
    display: flex;
    justify-content: left;
    align-items: center;
    border: 1px solid #ccc;
    border-radius: 5px;
}

.goodsnumbox .goodsnum {
    width: 70rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
}

.goodsnumbox .btnnum {
    width: 50rpx;
    height: 53rpx;
    line-height: 44rpx;
    font-size: 40rpx;
    text-align: center;
    color: #333;
    border-left: 1px solid #ccc;
}

.goodsnumbox .btn_less {
    border-left: 0px;
    border-right: 1px solid #ccc;
}

.bottomnav {
    position: fixed;
    bottom: 0px;
    height: 80rpx;
    width: 750rpx;
    line-height: 80rpx;
    display: flex;
}

.navitem {
    width: 250rpx;
    font-size: 40rpx;
    text-align: center;
    color: #fff;
    background: #ef8200;
}

.action {
    background: #fff;
    color: #ef8200;
}