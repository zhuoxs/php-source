page {
    background: #f2f2f2;
}

.swiper-tab {
    display: flex;
    height: 89rpx;
    line-height: 89rpx;
    text-align: center;
    border-bottom: 1px solid #eee;
    justify-content: space-around;
    background: #fff;
    font-size: 28rpx;
}

.on,.swiper-tab .active {
    height: 88rpx;
    line-height: 89rpx;
    border-bottom: 2rpx solid #e9472c;
    color: #e9472c;
    font-size: 32rpx;
}

.olist {
    margin: 36rpx 15rpx 0 15rpx;
    padding: 28rpx 30rpx 0 30rpx;
    box-sizing: border-box;
    background: #fff;
    border-radius: 12rpx;
}

.olTop {
    display: flex;
    font-size: 24rpx;
}

.olTop view:nth-child(1) {
    flex: 1;
    font-weight: 600;
}

.olTop view:nth-child(2) {
    color: #e9472c;
}

.olCont {
    margin-top: 26rpx;
    padding-bottom: 20rpx;
    display: flex;
    border-bottom: 1rpx solid #eee;
}

.olcLef {
    width: 180rpx;
    height: 180rpx;
    margin-right: 30rpx;
}

.olcRig,.olcSpecification view:nth-child(1) {
    flex: 1;
}

.olcName,.olcSpecification {
    display: flex;
    justify-content: space-between;
}

.olcName view:nth-child(1) {
    width: 360rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 30rpx;
}

.olcName view:nth-child(2) {
    font-size: 24rpx;
}

.olcSpecification {
    margin-top: 10rpx;
    display: flex;
    font-size: 24rpx;
    color: #999;
}

.olcPrice {
    margin-top: 40rpx;
    display: flex;
}

.olcPrice view:nth-child(1) {
    flex: 1;
    font-size: 24rpx;
    color: #e9472c;
}

.olcPricetxt {
    display: flex;
    align-items: center;
}

.olcPricetxt text:nth-child(1) {
    margin-top: 10rpx;
    font-size: 24rpx;
}

.olcPricetxt text:nth-child(2) {
    font-size: 32rpx;
    color: #e9472c;
}

.olBot {
    padding: 15rpx 0;
    display: flex;
    align-items: center;
}

.olBot .v1 {
    flex: 1;
    color: #999;
    font-size: 24rpx;
}

.olBot .v2,.olBot .v3 {
    height: 52rpx;
    line-height: 52rpx;
    padding: 0 20rpx;
    border-radius: 26rpx;
    border: 1rpx solid #111;
}

.olBot .v3 {
    margin-left: 20rpx;
    border: 1rpx solid #e9472c;
    color: #e9472c;
}

.olist {
    margin-top: 26rpx;
}

.olcRig {
    position: relative;
}

.btn-refund {
    background-color: #e9472c;
    padding: 10rpx 20rpx;
    color: #fff;
    position: absolute;
    right: -5rpx;
    bottom: 8rpx;
    border-radius: 30rpx;
}