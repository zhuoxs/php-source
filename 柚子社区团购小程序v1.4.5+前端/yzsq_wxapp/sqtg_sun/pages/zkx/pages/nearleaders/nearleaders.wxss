page {
    padding-bottom: 100rpx;
    color: #111;
}

.headerWrap {
    position: relative;
}

.indexBanner {
    width: 100%;
    height: 170rpx;
    overflow: hidden;
}

.header {
    padding: 0 20rpx;
    position: absolute;
    left: 0;
    top: 0rpx;
    width: 100%;
    color: #fff;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    height: 100%;
}

.name {
    font-size: 24rpx;
}

.address {
    margin-top: 10rpx;
    font-size: 30rpx;
}

.headerRig {
    margin-left: 100rpx;
    font-size: 24rpx;
    border-radius: 8rpx;
    padding: 0 14rpx;
    height: 40rpx;
    line-height: 40rpx;
    border: 1rpx solid #fff;
    white-space: nowrap;
}

.nlTit {
    position: relative;
    display: flex;
    align-items: center;
    padding-left: 28rpx;
    margin: 0 15rpx;
    line-height: 88rpx;
}

.nlTit:before {
    position: absolute;
    content: '';
    left: 0;
    top: 30rpx;
    width: 10rpx;
    height: 28rpx;
    background: #e9472c;
    border-radius: 10rpx;
}

.nlList {
    margin: 0 15rpx;
    display: flex;
    padding: 30rpx 0 25rpx 0;
    align-items: center;
    border-top: 1rpx solid #eee;
}

.nllistCont {
    flex: 1;
}

.nllistLef {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin: 0 30rpx 0 15rpx;
}

.nlRig {
    margin: 0 30rpx 0 60rpx;
    width: 12rpx;
    height: 22rpx;
}

.nlName {
    display: flex;
    font-size: 24rpx;
}

.nlName view:nth-child(1) {
    flex: 1;
}

.nlName view:nth-child(2) {
    color: #e9472c;
}

.nlCommunity {
    margin-top: 10rpx;
    font-size: 30rpx;
}

.nlAddress {
    margin-top: 10rpx;
    font-size: 24rpx;
    color: #999;
}

.headerLef {
    flex: 1;
}

.jionBtn {
    width: 300rpx;
    height: 80rpx;
    margin: 0 auto;
    margin-top: 60rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    border-radius: 40rpx;
    background: #e9472c;
}

.popAllow {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 12;
    background: rgba(0,0,0,0.3);
}

.choose-address {
    position: fixed;
    left: 30rpx;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
    height: 80rpx;
    background: #fff;
    border-radius: 40rpx;
    font-size: 32rpx;
    color: #e9472c;
}

.headSearch {
    margin-left: 20rpx;
    padding-left: 20rpx;
    flex: 1;
    height: 60rpx;
    line-height: 60rpx;
    border: 1rpx solid #eee;
    border-radius: 30rpx;
    box-sizing: border-box;
}

.headBtn {
    margin-left: 14rpx;
    height: 60rpx;
    padding: 0 25rpx;
    line-height: 60rpx;
    background: #e9472c;
    color: #fff;
    font-size: 26rpx;
    border-radius: 30rpx;
}

.no-working {
    margin-left: 10rpx;
    background-color: #e9472c;
    color: #fff;
    padding: 3rpx 10rpx;
    border-radius: 60rpx;
}

.is-begin {
    margin-left: 10rpx;
    background-color: #1E9FFF;
    color: #fff;
    padding: 3rpx 10rpx;
    border-radius: 60rpx;
}