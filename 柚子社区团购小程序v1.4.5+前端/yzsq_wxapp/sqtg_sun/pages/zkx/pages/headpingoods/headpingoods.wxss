page {
    padding-bottom: 120rpx;
    background: #f2f2f2;
}

.swiper-tab {
    display: flex;
    height: 89rpx;
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    line-height: 89rpx;
    text-align: center;
    border-bottom: 1px solid #eee;
    justify-content: space-around;
    background: #fff;
    font-size: 28rpx;
    z-index: 9;
}

.on,.swiper-tab .active {
    height: 90rpx;
    line-height: 89rpx;
    border-bottom: 2rpx solid #e9472c;
    color: #e9472c;
    font-size: 32rpx;
}

.olist {
    display: flex;
    margin: 36rpx 15rpx 0 15rpx;
    padding: 10rpx 30rpx 10rpx 0;
    box-sizing: border-box;
    background: #fff;
    border-radius: 12rpx;
    overflow: hidden;
}

.olTop {
    display: flex;
    font-size: 24rpx;
}

.olTop view:nth-child(1) {
    flex: 1;
}

.olTop view:nth-child(2),.olTop text {
    color: #e9472c;
}

.olCont {
    flex: 1;
    margin-left: 30rpx;
    padding: 20rpx 0;
    display: flex;
    align-items: center;
}

.olcLef {
    width: 180rpx;
    height: 180rpx;
    margin-right: 30rpx;
}

.olcPrice {
    margin-top: 20rpx;
    display: flex;
}

.olcPrice view:nth-child(1) {
    flex: 1;
    font-size: 24rpx;
    color: #e9472c;
}

.olcPricetxt text:nth-child(1) {
    margin-top: 10rpx;
    font-size: 24rpx;
}

.olcPricetxt text:nth-child(2) {
    font-size: 36rpx;
    color: #e9472c;
}

.olist {
    margin-top: 26rpx;
}

.mask {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: rgba(0,0,0,0.3);
    z-index: 11;
}

.changeAttrNum {
    position: fixed;
    left: 10%;
    top: 50%;
    width: 80%;
    padding: 30rpx 0;
    background: #fff;
    border-radius: 12rpx;
    z-index: 16;
    transform: translateY(-50%);
}

.caTit {
    font-size: 36rpx;
    text-align: center;
}

.caBtn {
    width: 300rpx;
    height: 66rpx;
    margin: 0 auto;
    font-size: 30rpx;
    margin-top: 30rpx;
    line-height: 66rpx;
    background: #e9472c;
    border-radius: 44rpx;
    color: #fff;
    text-align: center;
}

.caList {
    margin-top: 30rpx;
    padding-right: 20rpx;
    box-sizing: border-box;
}

.caList,.changeNum {
    display: flex;
    align-items: center;
}

.clLef {
    padding-left: 20rpx;
    flex: 1;
    box-sizing: border-box;
    font-size: 26rpx;
    color: #999;
}

.olcRig {
    flex: 1;
}

.storeName {
    float: right;
    width: 400rpx;
    text-align: right;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.olcName {
    clear: both;
    font-weight: 600;
}

.stock {
    margin-top: 30rpx;
    font-size: 24rpx;
    color: #999;
}

.price {
    margin-top: 10rpx;
    display: flex;
    align-items: center;
}

.price .v1 {
    font-size: 30rpx;
    color: #e9472c;
}

.price .v2 {
    margin: 3rpx 0 0 14rpx;
    font-size: 24rpx;
    color: #e9472c;
}

checkbox .wx-checkbox-input {
    border-radius: 50%;
    width: 40rpx;
    height: 40rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    border: none;
    background: #e9472c;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    border-radius: 50%;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
    background: transparent;
    transform: translate(-50%,-50%) scale(1);
}

.choice {
    position: fixed;
    width: 100%;
    left: 0;
    top: 90rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding-right: 30rpx;
    background: #fff;
    box-sizing: border-box;
    z-index: 9;
    border-bottom: 1rpx solid #eee;
    border-top: 1rpx solid #eee;
}

.choice image {
    width: 36rpx;
    height: 36rpx;
    margin-right: 9rpx;
}

.checkImg {
    display: flex;
    padding-left: 23rpx;
    width: 42rpx;
    align-items: center;
}

.checkHide {
    position: relative;
    margin-left: -65rpx;
}

.hgFooter {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    background: #fff;
    border-top: 1rpx solid #eee;
}

.hgCheckall {
    flex: 1;
    display: flex;
    align-items: center;
}

.hgCheckall checkbox {
    margin: 0 15rpx 0 30rpx;
}

.hgBtn {
    height: 70rpx;
    margin-right: 30rpx;
    background: #e9472c;
    padding: 0 20rpx;
    line-height: 70rpx;
    border-radius: 10rpx;
    color: #fff;
    font-size: 28rpx;
}