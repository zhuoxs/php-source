.vmSearch {
    flex: 1;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    background: #f0f0f0;
    border-radius: 40rpx;
    font-size: 28rpx;
}

.oItem {
    margin-top: 30rpx;
}

.vmTit {
    padding-top: 20rpx;
    border-top: 1rpx solid #eee;
    font-size: 30rpx;
    text-align: center;
}

.olist {
    margin-left: 15rpx;
    padding: 20rpx 0;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #eee;
}

.lef {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.cont {
    flex: 1;
    margin-left: 20rpx;
}

.number {
    margin-top: 15rpx;
}

.rig {
    margin-right: 15rpx;
    height: 70rpx;
    line-height: 70rpx;
    padding: 0 30rpx;
    background: #e9472c;
    border-radius: 10rpx;
    font-size: 30rpx;
    color: #fff;
}

.vmBtn {
    margin-left: 14rpx;
    height: 60rpx;
    padding: 0 25rpx;
    line-height: 60rpx;
    background: #e9472c;
    color: #fff;
    font-size: 26rpx;
    border-radius: 30rpx;
}

.vmSearchwrap {
    display: flex;
    align-items: center;
    height: 100rpx;
    padding: 0 20rpx;
}