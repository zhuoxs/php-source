page {
    padding-bottom: 120rpx;
    background: #f2f2f2;
}

.indexBanner {
    width: 100%;
    height: 248rpx;
}

.header {
    padding: 0 20rpx;
    display: flex;
    position: relative;
    margin-top: -220rpx;
}

.headerLef {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-right: 30rpx;
}

.haderRig {
    flex: 1;
    color: #fff;
}

.trange {
    margin: 10rpx 0;
    display: flex;
    justify-content: space-between;
}

.name,.address {
    font-size: 24rpx;
}

.trange view:nth-child(1) {
    font-size: 30rpx;
}

.trange navigator:nth-child(2) {
    padding: 0 16rpx;
    height: 38rpx;
    line-height: 38rpx;
    font-size: 24rpx;
    border: 1rpx solid #fff;
    border-radius: 8rpx;
}

.olist {
    position: relative;
    margin: 36rpx 15rpx 0 15rpx;
    padding: 28rpx 30rpx 0 30rpx;
    box-sizing: border-box;
    background: #fff;
    border-radius: 12rpx;
}

.olCont {
    margin-top: 26rpx;
    padding-bottom: 20rpx;
    display: flex;
    border-bottom: 1rpx solid #eee;
}

.olcLef {
    width: 180rpx;
    height: 180rpx;
    margin-right: 30rpx;
}

.olcRig,.olcSpecification view:nth-child(1) {
    flex: 1;
}

.olcName,.olcSpecification {
    display: flex;
}

.olcName view:nth-child(1) {
    flex: 1;
    font-size: 30rpx;
}

.olcName view:nth-child(2) {
    font-size: 24rpx;
}

.olcSpecification {
    margin-top: 10rpx;
    display: flex;
    font-size: 24rpx;
    color: #999;
}

.olcPrice {
    margin-top: 40rpx;
    display: flex;
}

.olcPrice view:nth-child(1) {
    flex: 1;
    font-size: 24rpx;
    color: #e9472c;
}

.olcPricetxt text:nth-child(1) {
    margin-top: 10rpx;
    font-size: 24rpx;
}

.olcPricetxt text:nth-child(2) {
    font-size: 36rpx;
    color: #e9472c;
}

.olBot {
    padding: 26rpx 0;
    box-sizing: border-box;
    color: #999;
    font-size: 24rpx;
    border-top: 1rpx solid #eee;
}

.olist {
    margin-top: 26rpx;
}

.olBot view:nth-child(2) {
    margin-top: 10rpx;
}

.olMoney {
    padding: 26rpx 0;
    text-align: right;
}

.olMoney view:nth-child(1) {
    font-size: 30rpx;
}

.olMoney text {
    color: #e9472c;
}

.olMoney view:nth-child(2) {
    margin-top: 10rpx;
    font-size: 24rpx;
    color: #e9472c;
}

.olFooter {
    position: fixed;
    width: 100%;
    left: 0;
    bottom: 0;
    height: 100rpx;
    display: flex;
}

.olFooter view:nth-child(1) {
    padding-left: 15rpx;
    flex: 1;
    line-height: 100rpx;
    box-sizing: border-box;
    background: #fff;
    font-size: 30rpx;
}

.olFooter view:nth-child(2),.olFooter view:nth-child(3) {
    padding: 0 28rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    color: #fff;
    background: #ffb400;
}

.olFooter view:nth-child(3) {
    background: #e9472c;
}

.olFooter text {
    color: #e9472c;
    font-size: 32rpx;
}

.call-button {
    background-color: #e9472c;
    color: #fff;
    padding: 3rpx 10rpx;
    margin-left: 10rpx;
    border-radius: 10rpx;
}