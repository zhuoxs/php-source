page {
    padding-top: 100rpx;
    background: #f2f2f2;
}

.searchWrap {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    padding: 20rpx 30rpx;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    background: #f2f2f2;
    z-index: 9;
}

.search {
    height: 58rpx;
    flex: 1;
    background: #fff;
    text-align: center;
    border: 1rpx solid #eee;
    border-radius: 30rpx;
    background: #fff;
}

.searchWrap image {
    padding-left: 20rpx;
    width: 40rpx;
    height: 40rpx;
}

.slTit {
    padding: 20rpx 30rpx;
    display: flex;
    align-items: center;
    background: #fff;
    border-bottom: 1rpx solid #eee;
}

.storeImg {
    margin-right: 20rpx;
    width: 100rpx;
    height: 100rpx;
    border: 1rxp solid #eee;
}

.slTitRig {
    flex: 1;
}

.storeName {
    width: 400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 28rpx;
}

.sellNum {
    margin-top: 10rpx;
    display: flex;
    color: #999;
    font-size: 24rpx;
}

.sellNum view:nth-child(1) {
    margin-right: 20rpx;
}

.toStore {
    padding: 10rpx 20rpx;
    border: 1rpx solid #eee;
    border-radius: 10rpx;
}

.imgList {
    position: relative;
}

.imgList image {
    width: 220rpx;
    height: 220rpx;
}

.imgList view:nth-child(3) {
    margin-top: 0;
    position: absolute;
    left: 0;
    top: 174rpx;
    width: 100%;
    height: 46rpx;
    background: rgba(255,255,255,0.5);
    line-height: 46rpx;
}

.hotSearch {
    position: fixed;
    top: 99rpx;
    left: 0;
    width: 100%;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    background: #f7f7f7;
    border-top: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    z-index: 2;
}

.hsList {
    margin: 0 20rpx 20rpx 0;
    display: inline-block;
    padding: 0 20rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 30rpx;
    background: #fff;
    white-space: nowrap;
    border: 1rpx solid #eee;
}

.swipImg {
    height: 300rpx;
}

.banner-img {
    width: 100%;
}

.swiper {
    height: 300rpx;
}