page {
    background: #f2f2f2;
}

.search {
    padding: 20rpx 30rpx 0 30rpx;
    display: flex;
    align-items: center;
    position: relative;
    z-index: 1;
}

.search label {
    width: 30rpx;
    height: 48rpx;
    position: absolute;
    top: 20rpx;
    left: 30rpx;
    padding: 18rpx 0 0 30rpx;
    z-index: 2;
}

.search input {
    height: 66rpx;
    flex: 1;
    background: #fff;
    border: 1rpx solid #eee;
    border-radius: 20rpx;
    box-sizing: border-box;
    padding: 0 0 0 70rpx;
}

.search image {
    width: 30rpx;
    height: 30rpx;
}

.searchItem {
    margin: 30rpx 30rpx 0 30rpx;
    padding: 20rpx 30rpx;
    background: #fff;
    border-radius: 20rpx;
}

.searchFirst {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
}

.searchFirst image {
    width: 12rpx;
    height: 22rpx;
}

.searchSecond {
    margin-top: 20rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.siList {
    width: 310rpx;
    padding: 20rpx;
    box-sizing: border-box;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-bottom: 10rpx;
    background: #f2f2f2;
    border-radius: 10rpx;
}