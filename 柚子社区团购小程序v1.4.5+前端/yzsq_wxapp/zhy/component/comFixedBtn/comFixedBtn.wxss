.fixed-btn-box0 {
    position: fixed;
    bottom: 40rpx;
    right: 20rpx;
    min-height: 80rpx;
    z-index: 10;
    border-radius: 40rpx;
    overflow: hidden;
}

.fixed-btn-box1 {
    position: fixed;
    bottom: 140rpx;
    right: 20rpx;
    min-height: 80rpx;
    z-index: 10;
    border-radius: 40rpx;
    overflow: hidden;
}

.fixed-btn-box2 {
    position: fixed;
    bottom: 240rpx;
    right: 20rpx;
    min-height: 80rpx;
    z-index: 10;
    border-radius: 40rpx;
    overflow: hidden;
}

.fixed-btn-box-in {
    height: 0;
    position: relative;
    overflow: hidden;
    transition: height 0.6s;
}

.fixed-btn-img {
    display: block;
    width: 80rpx;
    height: 80rpx;
    margin-top: 20rpx;
    border-radius: 50%;
    overflow: hidden;
}

.imgs {
    width: 100%;
    height: 100%;
}

.taggle-btn {
    position: absolute;
    bottom: 0;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    margin-top: 20rpx;
    border-radius: 50%;
    background: #999;
    color: #fff;
}

.fixed-btn-boxs-in {
    position: relative;
    animation: action 600ms forwards;
}

@keyframes actions {
    0% {
        transform: translateY(0);
    }

    100% {
        transform: translateY(100%);
    }
}

.fixed-btn-boxs-out {
    position: relative;
    height: 80rpx;
    overflow: hidden;
    animation: actions 600ms forwards;
}

@keyframes action {
    0% {
        transform: translateY(100%);
    }

    100% {
        transform: translateY(0);
    }
}

.hide {
    display: none;
}