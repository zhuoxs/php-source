.sec-footer {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 99rpx;
    display: flex;
    border-top: 1rpx solid #eee;
    background: #fff;
    text-align: center;
    z-index: 11;
}

.item {
    flex: 1;
    display: inline-block;
    position: relative;
    color: #999;
    line-height: 30rpx;
    font-size: 20rpx;
}

button.item::after {
    border: none;
}

.item-img {
    width: 40rpx;
    height: 40rpx;
    margin: 22rpx auto 6rpx;
}

.item-txt {
    display: block;
    line-height: 1.2;
    overflow: hidden;
    white-space: nowrap;
    pointer-events: auto;
}

.choose {
    color: #ffb62b;
}

.item-icon {
    position: absolute;
    top: 10rpx;
    left: calc(50% + 5rpx);
    min-width: 36rpx;
    height: 36rpx;
    line-height: 36rpx;
    border-radius: 18rpx;
}

.fix-iphonex-button {
    bottom: 68rpx!important;
}

.fix-iphonex-button::after {
    content: ' ';
    position: fixed;
    bottom: 0!important;
    height: 68rpx!important;
    width: 100%;
    background: var(--background);
}