@import "../../../../__wuBaseWxss__/2.wxss";

.banner {
    width: 100%;
    height: 750rpx;
    position: relative;
}

.swiper {
    width: 100%;
    height: 750rpx;
    text-align: center;
}

.slide-image {
    width: 100%;
    height: 100%;
}

.monitor {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    top: 10rpx;
    right: 20rpx;
}

.adopt-video {
    width: 100%;
    height: 560rpx;
    background: black;
}

.live-play {
    width: 100%;
    margin-top: 85rpx;
}

.video {
    width: 100%;
    height: 450rpx;
    position: absolute;
    left: 0;
    top: 0;
    margin-top: 85rpx;
}

.details {
    width: 100%;
    margin-top: 20rpx;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}

.detailsName {
    color: #545454;
    font-size: 36rpx;
    line-height: 80rpx;
}

.describe {
    color: #8b8b8b;
    font-size: 32rpx;
}

.price {
    color: #545454;
    font-size: 38rpx;
    line-height: 70rpx;
    position: relative;
    padding-left: 25rpx;
}

.line20 {
    position: absolute;
    top: -5rpx;
    left: 0rpx;
    font-size: 24rpx;
}

.block20 {
    height: 20rpx;
    background-color: #f4f4f4;
}

.proDetail {
    width: 100%;
}

.ruleContent {
    margin-top: 20rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #4b4b4b;
    line-height: 50rpx;
}

.adoptContent {
    width: 90%;
    margin: 30rpx auto;
    color: #575757;
}

.AdopTitle {
    border-left: 10rpx solid #fc8535;
    font-size: 32rpx;
    color: #383838;
    padding-left: 30rpx;
    margin-bottom: 20rpx;
}

.footer {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
}

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.3);
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 100%;
    height: 600rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    border-radius: 15rpx 15rpx 0 0;
}

.adoptImg {
    width: 240rpx;
    height: 240rpx;
    text-align: center;
    padding: 20rpx;
    box-sizing: border-box;
}

.adoptImg image {
    width: 200rpx;
    height: 200rpx;
}

.adoptPrice {
    font-size: 46rpx;
    margin-left: 20rpx;
}

.chooseTime {
    margin-top: 25rpx;
    font-size: 30rpx;
    color: #383838;
}

.chooseNum {
    width: 100%;
    overflow-y: auto;
    height: 400rpx;
}

.chooseN {
    width: 90rpx;
    height: 60rpx;
    border-radius: 0rpx;
    font-size: 30rpx;
    color: #3f3f3f;
    text-align: center;
    line-height: 60rpx;
    background: #d2d2d2;
    margin: 0 15rpx 0 15rpx;
}

.clickNumLift {
    color: #9e9e9e;
    background: #eeeeee;
}

.clickNumRight {
    color: #9e9e9e;
    background: #eeeeee;
}

.confrim {
    width: 94%;
    margin-left: 3%;
    position: absolute;
    bottom: 30rpx;
    left: 0;
}

.danwei {
    position: absolute;
    font-size: 24rpx;
}

.proImgs {
    width: 96%;
    margin-left: 2%;
}

.is_loading {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.is_loading .loadCover {
    width: 60rpx;
    height: 60rpx;
    animation: cycle 3s infinite;
}

.is_loading .loadCover .loadingimg {
    width: 100%;
    height: 100%;
}

.cu-btn {
    width: 260rpx;
    height: 70rpx;
}

@-webkit-keyframes cycle {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

@keyframes cycle {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}