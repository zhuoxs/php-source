@import "../../../../__wuBaseWxss__/2.wxss";

page {
    background: #f4f4f4;
    font-size: 30rpx;
}

.adopt-list {
    width: 96%;
    margin-left: 2%;
    margin-top: 20rpx;
    border-radius: 10rpx;
    height: 200rpx;
    background: white;
    padding-top: 20rpx;
    border-bottom: 1rpx solid #f4f4f4;
    border-top: 1rpx solid #f4f4f4;
}

.adopt-list .li-left {
    width: 24%;
    height: 180rpx;
    float: left;
    margin-left: 5%;
}

.adopt-list .li-left image {
    width: 100%;
    height: 100%;
}

.adopt-list .li-right {
    width: 61%;
    height: 100%;
    margin-left: 5%;
    float: left;
}

.adopt-list .li-right .adopt-name {
    display: block;
    margin-bottom: 20rpx;
}

.adopt-list .li-right .spec {
    color: gray;
    font-size: 26rpx;
    margin-bottom: 10rpx;
}

.adopt-list .li-right .li-right-desc {
    width: 100%;
    height: 50rpx;
    margin-top: 20rpx;
}

.adopt-list .li-right .price {
    color: red;
}

.adopt-list .li-right .count {
    color: gray;
    float: right;
}

.desc {
    width: 86%;
    padding: 0 5%;
    background: white;
    border-bottom: 1rpx solid #f4f4f4;
    color: gray;
    font-size: 28rpx;
    min-height: 80rpx;
    margin-left: 2%;
    border-radius: 10rpx;
    margin-top: 20rpx;
}

.line-h {
    line-height: 80rpx;
}

.desc .iconSmall {
    float: right;
}

.desc .keyong {
    color: red;
    float: right;
    margin-right: 20rpx;
}

.coupon-title {
    position: relative;
    top: -5rpx;
    margin-left: 10rpx;
}

.footer {
    width: 100%;
    height: 120rpx;
    position: fixed;
    bottom: 0;
    background: white;
    line-height: 100rpx;
}

.footer .left {
    width: 60%;
    height: 100%;
    padding-left: 5%;
}

.footer .right {
    text-align: center;
    float: left;
}

.user_container {
    width: 95%;
    background-color: #fff;
    margin: auto;
    border-radius: 10rpx;
    margin-top: 20rpx;
}

.land_title {
    border-bottom: 1rpx solid #eee;
    font-size: 35rpx;
}

.auth-btn {
    padding: 0;
    width: 170rpx;
    font-size: 23rpx;
    background: #09bb07;
    color: white;
    position: relative;
    top: 16%;
    border-radius: 100rpx;
    height: 60rpx;
    line-height: 60rpx;
    border: none;
}

.radioBtn {
    margin-left: 20rpx;
}

button::after {
    border: none;
}

.borderbottom {
    box-sizing: border-box;
}

.borderbottom:not(:last-child) {
    border-bottom: 1rpx solid #eee;
}

.rule-book {
    color: #3f88bf;
    text-decoration: underline;
}

.title {
    width: 200rpx;
    margin-left: 14rpx;
}

.detailed {
    margin-right: 20rpx;
    font-size: 24rpx;
    color: #333;
    line-height: 100rpx;
}

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.3);
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.cost {
    width: 100%;
    height: 810rpx;
    position: fixed;
    z-index: 99999;
    background: #f9f9f9;
    border-radius: 15rpx 15rpx 0 0;
    transition: all 0.3s;
    bottom: 0;
    background: #fff;
}

.hideServer {
    left: 0;
    bottom: -1024rpx;
}

.showServer {
    bottom: 0;
    left: 0;
}

.cost_title {
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    padding: 0 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #eee;
}

.cost_title>text:last-child {
    font-size: 34rpx;
}

.cost_cont {
    margin-top: 10rpx;
}

.cost_cont>view:nth-child(1)>text {
    font-size: 34rpx;
    color: red;
    margin-bottom: 30rpx;
    line-height: 65rpx;
}

.cost_cont>view:nth-child(2) {
    font-size: 24rpx;
    color: #989898;
    line-height: 40rpx;
}

.cost_cont>view:nth-child(3) {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 26rpx;
    margin-top: 45rpx;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #ddd;
}

.cost_cont>view:nth-child(4) {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 26rpx;
    margin-top: 20rpx;
}

.cost_sub {
    width: 85%;
    height: 90rpx;
    line-height: 100rpx;
    color: #fff;
    background: #09bb07;
    border-radius: 50rpx;
    text-align: center;
    font-size: 32rpx;
    margin: 280rpx auto 0;
}