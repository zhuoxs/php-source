@import "../../../../../__wuBaseWxss__/2.wxss";

.swiper {
    width: 100%;
    height: 750rpx;
    text-align: center;
}

.slide-image {
    width: 100%;
    height: 100%;
}

.block20 {
    height: 20rpx;
    background-color: #f4f4f4;
}

.block120 {
    height: 140rpx;
}

.proTitle {
    width: 100%;
    height: 120rpx;
    color: #fc8535;
    line-height: 120rpx;
    text-align: center;
    font-size: 32rpx;
}

.proImgs {
    text-align: center;
}

.footer {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 100;
}

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.3);
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 100%;
    height: 780rpx;
    position: fixed;
    z-index: 9999;
    background: #f9f9f9;
    border-radius: 15rpx 15rpx 0 0;
    transition: all 0.3s;
}

.show {
    bottom: 0;
    left: 0;
}

.hide {
    bottom: -1000rpx;
    left: 0;
}

.adoptImg {
    width: 240rpx;
    height: 240rpx;
    text-align: center;
    padding: 20rpx;
    box-sizing: border-box;
}

.adoptImg image {
    width: 100%;
    height: 100%;
    border-radius: 5rpx;
}

.adoptPrice {
    font-size: 46rpx;
    margin-left: 20rpx;
    text-align: left;
}

.chooseTime {
    margin-top: 25rpx;
    font-size: 30rpx;
    color: #383838;
}

.chooseNum {
    width: 100%;
    overflow-y: auto;
    height: 440rpx;
    border-top: 1rpx solid #e6e6e6;
    position: absolute;
    bottom: 100rpx;
    left: 0rpx;
}

.adoptTime {
    height: 65rpx;
    text-align: center;
    line-height: 65rpx;
    float: left;
    margin-left: 20rpx;
    border: 1rpx solid #d6d6d6;
    border-radius: 5rpx;
    font-size: 30rpx;
    color: #383838;
    margin-bottom: 20rpx;
    padding: 0 20rpx 0 20rpx;
}

.clickNumLift {
    border: 1rpx solid #d6d6d6;
    border-radius: 5rpx 0 0 5rpx;
    width: 90rpx;
    height: 60rpx;
    font-size: 30rpx;
    line-height: 60rpx;
    text-align: center;
    color: #9e9e9e;
}

.clickNumRight {
    border: 1rpx solid #d6d6d6;
    border-radius: 0 5rpx 5rpx 0;
    width: 90rpx;
    height: 60rpx;
    font-size: 30rpx;
    line-height: 60rpx;
    text-align: center;
    color: #9e9e9e;
}

.chooseN {
    width: 200rpx;
    height: 60rpx;
    border: 1rpx solid #d6d6d6;
    border-radius: 0rpx;
    font-size: 30rpx;
    color: #9e9e9e;
    text-align: center;
    line-height: 60rpx;
}

.confrim {
    width: 100%;
    height: 100rpx;
    color: #fff;
    background-color: #fc8535;
    text-align: center;
    line-height: 100rpx;
    font-size: 34rpx;
    position: absolute;
    bottom: 0;
}

button::after {
    border: none;
}

.spec-algin {
    text-align: left;
    width: 50%;
    height: auto;
}

.closeModel {
    position: absolute;
    right: 15rpx;
    top: 15rpx;
    width: 40rpx;
    height: 40rpx;
}

.share {
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    font-size: 28rpx;
    color: #3e3e3e;
}

.share button {
    width: 110rpx;
    font-size: 26rpx;
    background: white;
    padding: 0;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
}

.share-btn {
    width: 100rpx;
    height: 100rpx;
    position: relative;
    line-height: 140rpx;
}

.share .share-icon {
    position: relative;
    top: -20rpx;
    z-index: 999;
}

.share .txt {
    position: relative;
}

.share .share-txt {
    display: block;
    height: 40rpx;
    font-size: 24rpx;
    z-index: 999;
    position: relative;
    top: -130rpx;
}