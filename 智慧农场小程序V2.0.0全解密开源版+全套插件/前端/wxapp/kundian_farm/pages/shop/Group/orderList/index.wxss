@import "../../../../../__wuBaseWxss__/2.wxss";

page {
    background-color: #efefef;
}

.order-content {
    margin-top: 20rpx;
}

.mainBody {
    width: 90%;
    margin: 23rpx auto 0rpx;
    background-color: #fff;
    padding-left: 5%;
    border-radius: 20rpx;
}

.itemType {
    color: #fc8535;
    font-size: 34rpx;
    display: flex;
    padding-top: 10rpx;
    line-height: 41rpx;
}

.itemType .left {
    width: 60%;
    font-size: 26rpx;
    color: gray;
    display: block;
}

.itemType .right {
    width: 35%;
    text-align: right;
    line-height: 80rpx;
    font-size: 30rpx;
}

.HeadImg {
    width: 160rpx;
    height: 160rpx;
}

.itemName {
    font-size: 28rpx;
    width: 500rpx;
    color: #4d4d4d;
    line-height: 40rpx;
}

.btnArr {
    width: 100%;
    display: flex;
    justify-content: flex-end;
    padding: 25rpx 0rpx;
}

.btnArr button {
    margin-right: 20rpx;
}

.brb {
    border-top: 1rpx solid #f4f4f4;
    padding: 10rpx 0 10rpx 0;
    border-bottom: 1rpx solid #f4f4f4;
}

.mainBody .order-detail {
    width: 94%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: right;
    font-size: 26rpx;
    border-bottom: 1rpx solid #f4f4f4;
    margin-left: 3%;
    color: #4d4d4d;
}

.none {
    width: 100%;
    height: 500rpx;
    text-align: center;
}

.none image {
    width: 400rpx;
    height: 230rpx;
    margin-top: 180rpx;
}

.none .tags {
    color: gray;
    font-size: 24rpx;
    display: block;
}