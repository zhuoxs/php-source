@import "../../../../__wuBaseWxss__/2.wxss";

page {
    background-color: #f4f4f4;
}

.order-content {
    margin-top: 20rpx;
}

.mainBody {
    width: 95%;
    margin: 20rpx auto 0rpx;
    background-color: #fff;
    border-radius: 20rpx;
}

.mainBody .order-number,.mainBody .order-time {
    font-size: 24rpx;
    color: gray;
    display: block;
}

.mainBody .order-status {
    font-size: 26rpx;
    position: relative;
    top: -75rpx;
    left: 69%;
    display: block;
    width: 200rpx;
    text-align: right;
}

.mainBody .order-detail {
    width: 94%;
    height: 74rpx;
    text-align: right;
    font-size: 26rpx;
    border-bottom: 1rpx solid #f4f4f4;
    margin-bottom: 25rpx;
    margin-left: 3%;
    color: #4d4d4d;
}

.itemType {
    margin-bottom: 10rpx;
    height: 70rpx;
    line-height: 40rpx;
}

.HeadImg {
    width: 160rpx;
    height: 160rpx;
    border-radius: 10rpx;
}

.itemName {
    font-size: 28rpx;
    width: 500rpx;
    color: #4d4d4d;
    line-height: 40rpx;
}

.btnArr {
    width: 100%;
    display: flex;
    justify-content: flex-end;
    padding-bottom: 25rpx;
}

.btnArr button {
    margin-right: 20rpx;
}

.none {
    width: 100%;
    height: 300rpx;
    text-align: center;
}

.none image {
    width: 328rpx;
    height: 200rpx;
    margin-top: 260rpx;
}

.none .tags {
    color: gray;
    font-size: 24rpx;
    display: block;
}

.brb {
    padding: 10rpx 0 10rpx 0;
    border-bottom: 1rpx solid #f4f4f4;
}

.verify-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    background: black;
    opacity: 0.5;
    z-index: 999;
}

.verify-code {
    width: 70%;
    margin-left: 15%;
    height: 500rpx;
    position: fixed;
    top: 30%;
    background: white;
    text-align: center;
    padding-top: 20rpx;
    font-size: 28rpx;
    border-radius: 10rpx;
    z-index: 9999;
}

.verify-code view {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
}

.verify-code image {
    width: 380rpx;
    height: 380rpx;
    margin-top: 30rpx;
}