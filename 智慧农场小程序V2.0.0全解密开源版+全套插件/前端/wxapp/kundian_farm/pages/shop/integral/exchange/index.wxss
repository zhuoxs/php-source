@import "../../../../../__wuBaseWxss__/2.wxss";

.title {
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 5rpx 10rpx;
    font-size: 30rpx;
    margin-top: 10rpx;
}

.bannerImg {
    margin-top: 20rpx;
    width: 100%;
    height: 300rpx;
}

.bannerImg image {
    width: 100%;
    height: 300rpx;
}

.typesImg {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.items {
    text-align: center;
    font-size: 28rpx;
    color: #646464;
}

.block20 {
    height: 20rpx;
    background-color: #f4f4f4;
}

.exchangeContent {
    width: 100%;
    background-color: #f4f4f4;
    padding-bottom: 110rpx;
}

.Content {
    width: 48%;
    margin-left: 1.33%;
    margin-top: 10rpx;
    background-color: #fff;
    float: left;
    border-radius: 10rpx;
    overflow: hidden;
}

.item_wrapper {
    padding: 10rpx 20rpx 20rpx;
    box-sizing: border-box;
}

.Content image {
    width: 100%;
    height: 370rpx;
}

.z-sheng {
    width: 100%;
    height: 80rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}