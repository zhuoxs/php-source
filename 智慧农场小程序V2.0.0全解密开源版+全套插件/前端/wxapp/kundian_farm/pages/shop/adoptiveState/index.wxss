@import "../../../../__wuBaseWxss__/2.wxss";

page {
    background: #f4f4f4;
}

.banner {
    width: 100%;
    height: 750rpx;
    position: relative;
    background: black;
}

.swiper {
    width: 100%;
    height: 750rpx;
    text-align: center;
}

.live-play {
    width: 100%;
    position: absolute;
    left: 0;
    top: 16%;
}

.monitor {
    width: 120rpx;
    height: 120rpx;
    position: absolute;
    top: 10rpx;
    right: 20rpx;
}

.video {
    width: 100%;
    height: 70%;
    position: absolute;
    left: 0;
    top: 16%;
}

.slide-image {
    width: 100%;
    height: 750rpx;
}

.Slaughter {
    width: 92%;
    border: none;
    background-color: #fc8535;
    color: #fff;
    border-radius: 70rpx;
    margin-top: 10rpx;
    position: fixed;
    bottom: 0;
    margin-left: 4%;
    z-index: 999999;
    height: 80rpx;
    top: 92%;
}

.Slaughter::after {
    border: none;
}

.is_loading {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.is_loading .loadCover {
    width: 60rpx;
    height: 60rpx;
    animation: cycle 3s infinite;
}

.is_loading .loadCover .loadingimg {
    width: 100%;
    height: 100%;
}

@-webkit-keyframes cycle {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

@keyframes cycle {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

.adopt-info {
    width: 92%;
    height: auto;
    margin-left: 4%;
    background: white;
    border-radius: 10rpx;
    font-size: 28rpx;
    margin-bottom: 15px;
    padding-left: 5rpx;
}

.adopt-info .info-li {
    width: 90%;
    margin-left: 5%;
    height: 84rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #f4f4f4;
}

.info-li .li-title {
    width: 34%;
    color: gray;
}

.adopt-info .border-none {
    border: none;
}

.margin-btn {
    height: 120rpx;
}

.adopt-title {
    width: 87%;
    height: 84rpx;
    line-height: 84rpx;
    margin-left: 4%;
    font-size: 34rpx;
    font-weight: bold;
    color: #4a4a4a;
}

.adopt-status {
    width: 92%;
    background: white;
    height: auto;
    font-size: 28rpx;
    padding-top: 10px;
    margin-top: 20rpx;
    margin-left: 4%;
    border-radius: 10rpx;
}

.status-ul {
    width: 85%;
    margin-left: 10%;
    height: auto;
    padding-bottom: 50rpx;
    border-left: 2rpx solid #f4f4f4;
    position: relative;
}

.li-left {
    width: 12%;
    height: 100%;
}

.li-right {
    width: 86%;
    height: 100%;
}

.li-left .cycyle-time {
    border: 1rpx solid #f4f4f4;
    width: 90rpx;
    height: 70rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 30rpx;
    font-size: 22rpx;
    z-index: 9;
    background: white;
    position: absolute;
    left: -48rpx;
    top: 0rpx;
    padding-top: 15rpx;
}

.s-line {
    width: 4rpx;
    height: 500rpx;
    background: #f4f4f4;
    position: absolute;
    left: 11%;
}

.status-value {
    width: 100%;
    background: rgb(170,231,168);
    border-radius: 10rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    padding: 22rpx;
    box-shadow: 7rpx 10rpx 20rpx #d8d8d8;
}

.status-value text {
    color: white;
}

.jiao {
    position: relative;
    height: 0px;
    width: 0px;
    border-top: 10px solid transparent;
    border-right: 10px solid rgb(170,231,168);
    border-bottom: 10px solid transparent;
}

.status-value image {
    width: 100rpx;
    height: 100rpx;
    margin-right: 10rpx;
    border-radius: 10rpx;
}

.btm-info {
    width: 100%;
    height: auto;
    background: #f4f4f4;
    margin-top: -48rpx;
    z-index: 999999;
    border-radius: 20rpx;
    position: relative;
    padding-top: 20rpx;
}