@import "../../../../__wuBaseWxss__/2.wxss";

.type_container {
    display: flex;
    align-items: center;
    justify-content: space-around;
    border-bottom: 1rpx solid #eee;
}

.item {
    position: relative;
    font-size: 30rpx;
    padding: 20rpx 30rpx;
}

.item::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: currentColor;
    height: 4rpx;
    display: block;
    opacity: 0;
    transition: all 0.3s;
}

.active {
    color: #fc8535;
}

.active::before {
    left: 0;
    width: 100%;
    opacity: 1;
    transition: all 0.3s;
}

.list_title {
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
    font-size: 36rpx;
    color: #000;
    display: flex;
    align-items: center;
    font-weight: 400;
}

.fillet {
    width: 25rpx;
    height: 25rpx;
    background-color: #fc8535;
    border-radius: 8rpx;
    margin-right: 20rpx;
}

.issue_list {
    width: 100%;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
}

.issue_title {
    padding: 20rpx;
    box-sizing: border-box;
    font-size: 30rpx;
    letter-spacing: 3rpx;
}

.noShow {
    background-color: #eee;
    color: #353535;
}

.isShow {
    background-color: #fc8535;
    color: #fff;
}

.issue_desc {
    font-size: 30rpx;
    box-sizing: border-box;
    line-height: 50rpx;
    padding: 0 20rpx;
    overflow: hidden;
}

.noMore {
    height: 0;
    opacity: 0;
    transition: all 0.3s;
}

.showMore {
    margin-top: 20rpx;
    height: auto;
    opacity: 1;
    transition: all 0.3s;
}

.kefu {
    width: 100rpx;
    height: 100rpx;
    position: fixed;
    top: 85%;
    left: 85%;
}

.kefu button {
    width: 60rpx;
    height: 30px;
    padding: 0;
    margin: 0;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    background: none;
}

.kefu image {
    width: 50rpx;
    height: 50rpx;
}

button::after {
    border: none;
}

.icon-liaoyiliao {
    position: relative;
    top: -15rpx;
}