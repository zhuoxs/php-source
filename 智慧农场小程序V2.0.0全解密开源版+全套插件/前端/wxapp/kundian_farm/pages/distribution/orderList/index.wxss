@import "../../../../__wuBaseWxss__/2.wxss";

page {
    background: #f4f4f4;
}

.title_cotainer {
    width: 100%;
    background: #fff;
    height: 100rpx;
    display: flex;
    align-items: center;
    position: fixed;
    z-index: 99;
    top: 0;
    left: 0;
}

.itme {
    width: 25%;
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    justify-content: center;
}

.nav {
    color: #515151;
    font-size: 34rpx;
    font-weight: 400;
    padding: 0 20rpx;
    line-height: 100rpx;
    position: relative;
    letter-spacing: 3rpx;
}

.nav::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    display: block;
    width: 100%;
    height: 1px;
    background: currentColor;
    transition: all .3s;
    opacity: 0;
}

.active {
    color: #fc8535;
}

.active::before {
    width: 100%;
    left: 0;
    opacity: 1;
    transition: all .3s;
}

.block {
    height: 100rpx;
}

.list_item {
    width: 100%;
    background-color: #fff;
    position: relative;
    padding: 20rpx 30rpx;
    margin-top: 30rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.item_title {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 0;
}

.avator {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
}

.itemName {
    font-size: 34rpx;
    color: #2f2f2f;
    margin-left: 15rpx;
    letter-spacing: 3rpx;
}

.itemLevel {
    font-size: 34rpx;
    color: #fc8535;
    letter-spacing: 3rpx;
}

.arrow {
    width: 30rpx;
    height: 30rpx;
    margin-left: 20rpx;
    transition: all .3s;
}

.transform {
    overflow: hidden;
    transition: all .3s;
}

.item_content {
    width: 100%;
    display: flex;
    align-items: center;
    padding: 20rpx 0;
}

.itemImg {
    width: 160rpx;
    height: 160rpx;
}

.item_info_content {
    flex: 1;
    margin-left: 30rpx;
}

.proName {
    font-size: 32rpx;
    color: #4d4d4d;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.itemPrice {
    font-size: 34rpx;
    color: #4c4c4c;
}

.itemOprice {
    margin-left: 20rpx;
    font-size: 32rpx;
    text-decoration: line-through;
    color: #949494;
}

.itemNum {
    margin-left: 20rpx;
    font-size: 32rpx;
    color: #949494;
}

.footer_content {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    font-size: 32rpx;
    color: #353535;
    padding: 10rpx 0;
}

.total {
    margin-left: 20rpx;
    color: #ff0d0d;
}

.itemState {
    font-size: 26rpx;
    line-height: 40rpx;
    width: 250rpx;
    text-align: center;
    background-color: #d6d6d6;
    color: #fff;
    position: absolute;
    top: 20rpx;
    right: -90rpx;
    transform: rotate(45deg);
}

.itemState2 {
    font-size: 26rpx;
    line-height: 40rpx;
    width: 250rpx;
    text-align: center;
    background-color: #2c2c2c;
    color: #fff;
    position: absolute;
    top: 20rpx;
    right: -90rpx;
    transform: rotate(45deg);
}

.itemState1 {
    font-size: 26rpx;
    line-height: 40rpx;
    width: 250rpx;
    text-align: center;
    background-color: #fc8535;
    color: #fff;
    position: absolute;
    top: 20rpx;
    right: -90rpx;
    transform: rotate(45deg);
}

.rotate {
    transform: rotate(-90deg);
}

.border-top {
    border-top: 1rpx solid #efefef;
}

.none {
    width: 100%;
    height: 200rpx;
    margin-top: 10%;
    text-align: center;
    color: gray;
    font-size: 28rpx;
}

.none image {
    width: 328rpx;
    height: 200rpx;
}