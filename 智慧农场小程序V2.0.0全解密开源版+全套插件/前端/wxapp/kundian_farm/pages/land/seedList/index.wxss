@import "../../../../__wuBaseWxss__/2.wxss";

page {
    background: #f4f4f4;
}

.list {
    width: 100%;
    height: auto;
}

.list-ul {
    width: 92%;
    margin-left: 4%;
    height: 220rpx;
    font-size: 26rpx;
    line-height: 55rpx;
    border-radius: 10rpx;
    margin-top: 20rpx;
    background: white;
    padding-bottom: 20rpx;
    padding-top: 20rpx;
}

.list-ul .li-left {
    width: 30%;
    height: 100%;
    margin-left: 3%;
}

.list-ul .li-right {
    width: 65%;
    height: 100%;
    margin-left: 5%;
}

.li-left image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.caluate {
    width: 140rpx;
    height: 60rpx;
    position: relative;
    top: -55rpx;
    left: 63%;
    text-align: right;
}

.caluate .count {
    margin-left: 10rpx;
    margin-right: 10rpx;
    font-size: 34rpx;
}

.caluate .icon-jianhao {
    position: relative;
    top: 0rpx;
    font-size: 56rpx;
    color: gray;
}

.caluate .icon-jia {
    position: relative;
    top: 6rpx;
    font-size: 56rpx;
}

.cart {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    position: fixed;
    top: 90%;
    left: 86%;
    background: #09BB07;
    text-align: center;
}

.cart .icon-shopcar {
    color: white;
    font-size: 56rpx;
}

.cart-mask {
    background: black;
    opacity: 0.7;
    position: fixed;
    z-index: 99;
    top: 0;
    width: 100%;
    height: 100%;
}

.cart-list {
    width: 100%;
    height: 75%;
    font-size: 28rpx;
    position: fixed;
    bottom: 0;
    z-index: 999;
    background: white;
    transition: all .3s;
}

.cart-title {
    width: 90%;
    margin-left: 5%;
    height: 90rpx;
    line-height: 90rpx;
    color: gray;
    border-bottom: 1rpx solid #f4f4f4;
}

.icon-delete1 {
    float: right;
    font-size: 38rpx;
}

.cart-content {
    width: 90%;
    margin-left: 5%;
    height: 75%;
    overflow: hidden;
}

.cart-ul {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #f4f4f4;
}

.cart-name {
    width: 50%;
}

.cart-count {
    width: 25%;
}

.cart-caluate {
    width: 25%;
    height: 60rpx;
    position: relative;
    top: -15rpx;
    text-align: right;
}

.cart-caluate .icon-jianhao {
    font-size: 56rpx;
    color: gray;
}

.cart-caluate .icon-jia {
    font-size: 56rpx;
    position: relative;
    top: 6rpx;
    color: #09BB07;
}

.cart-caluate .count {
    margin-left: 10rpx;
    margin-right: 10rpx;
    font-size: 34rpx;
}

.footer {
    width: 100%;
    height: 94rpx;
    position: fixed;
    bottom: 0;
    border-top: 1rpx solid #f4f4f4;
}

.cart-btn {
    width: 25%;
    float: right;
    height: 100%;
    background: #09BB07;
    color: white;
    line-height: 94rpx;
    text-align: center;
}

.cart-btn button {
    background: none;
    margin: 0;
    padding: 0;
    width: 100%;
    font-size: 28rpx;
    color: white;
    height: 100%;
    line-height: 94rpx;
}

.cart-left {
    width: 70%;
    margin-left: 5%;
}

button::after {
    border: none;
}

.margin-btn {
    height: 120rpx;
    width: 100%;
}

.footer-b {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
}