@import "../../../../__wuBaseWxss__/2.wxss";

page {
    background: #f4f4f4;
    font-size: 30rpx;
}

.con {
    width: 100%;
    background: white;
}

.con .li {
    width: 90%;
    margin-left: 5%;
    height: 150rpx;
    padding: 20rpx 0 20rpx 0;
    border-bottom: 1rpx solid #f4f4f4;
}

.con .li .li-left {
    width: 26%;
    height: 100%;
    float: left;
}

.con .li .li-left image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 10rpx;
}

.con .li .li-right {
    width: 60%;
    height: 100%;
    float: left;
}

.con .li .li-right text {
    display: block;
    height: 50rpx;
    line-height: 50rpx;
}

.con .li .li-right .price {
    color: red;
}

.new-tag {
    position: relative;
    top: -6rpx;
    margin-left: 10rpx;
}

.footer {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    background: white;
    line-height: 100rpx;
}

.footer .left {
    width: 65%;
    height: 100%;
    padding-left: 5%;
    float: left;
}

.footer .right {
    width: 30%;
    text-align: center;
    background: #fc8535;
    float: left;
    color: white;
    height: 100rpx;
}

.bgff {
    margin-bottom: 120rpx;
}

.count {
    color: gray;
}

.right button {
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;
    background: none;
    line-height: 100rpx;
    color: white;
    font-size: 32rpx;
}

button::after {
    border: none;
}