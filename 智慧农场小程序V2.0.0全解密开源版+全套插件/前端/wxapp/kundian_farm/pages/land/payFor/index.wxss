@import "../../../../__wuBaseWxss__/2.wxss";

page {
    background-color: #f4f4f4;
}

.user_container view:not(:first-child) {
    height: 100rpx;
    line-height: 100rpx;
}

.user_container input {
    height: 100rpx;
    line-height: 100rpx;
}

.radioBtn {
    margin-left: 20rpx;
    transform: scale(0.8);
}

.footer {
    border-top: 1rpx solid #f4f4f4;
    height: 100rpx;
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    background-color: #fff;
}

.payFor {
    background: linear-gradient(to right,#39b54a,#8dc63f);
    height: 35px;
    margin-top: 12rpx;
    margin-right: 10px;
}

.borderbottom {
    box-sizing: border-box;
}

.borderbottom:not(:last-child) {
    border-bottom: 1rpx solid #eee;
}

.user_container {
    width: 95%;
    margin-top: 20rpx;
    background-color: #fff;
    margin: auto;
    border-radius: 10rpx;
}

.pick-w {
    width: 95%;
    z-index: 600;
    margin-left: 5%;
}

.sel-pick {
    position: relative;
    left: -40rpx;
}

.title {
    width: 25%;
    margin-left: 27rpx;
}

.rule-book {
    color: #3f88bf;
    text-decoration: underline;
}

.new-tag {
    position: relative;
    top: -6rpx;
    margin-left: 30rpx;
}

.auth-btn {
    padding: 0;
    width: 170rpx;
    font-size: 23rpx;
    background: #09bb07;
    color: white;
    position: relative;
    top: 16%;
    border-radius: 100rpx;
    height: 60rpx;
    line-height: 60rpx;
    border: none;
}

button::after {
    border: none;
}

.land_title {
    border-bottom: 1rpx solid #eee;
    font-size: 35rpx;
}

.land_information {
    width: 95%;
    margin: 20rpx auto;
    background: #fff;
    border-radius: 10rpx;
}

.land_information>view:last-child {
    border-radius: 0rpx 0rpx 10rpx 10rpx;
}

.coupon {
    width: 87%;
    margin: 20rpx auto;
    background: #fff;
    border-radius: 10rpx;
}

.zhif {
    display: flex;
}

.detailed {
    margin-right: 20rpx;
    font-size: 24rpx;
    color: #333;
    line-height: 100rpx;
}

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.3);
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.cost {
    width: 100%;
    height: 810rpx;
    position: fixed;
    z-index: 99999;
    background: #f9f9f9;
    border-radius: 15rpx 15rpx 0 0;
    transition: all 0.3s;
    bottom: 0;
    background: #fff;
}

.hideServer {
    left: 0;
    bottom: -1024rpx;
}

.showServer {
    bottom: 0;
    left: 0;
}

.cost_title {
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    padding: 0 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #eee;
}

.cost_title>text:last-child {
    font-size: 34rpx;
}

.cost_cont {
    margin-top: 10rpx;
}

.cost_cont>view:nth-child(1)>text {
    font-size: 34rpx;
    color: red;
    margin-bottom: 30rpx;
    line-height: 65rpx;
}

.cost_cont>view:nth-child(2) {
    font-size: 24rpx;
    color: #989898;
    line-height: 40rpx;
}

.cost_cont>view:nth-child(3) {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 26rpx;
    margin-top: 45rpx;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #ddd;
}

.cost_cont>view:nth-child(4) {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 26rpx;
    margin-top: 20rpx;
}

.cost_sub {
    width: 85%;
    height: 90rpx;
    line-height: 100rpx;
    color: #fff;
    background: linear-gradient(to right,#39b54a,#8dc63f);
    border-radius: 50rpx;
    text-align: center;
    font-size: 32rpx;
    margin: 280rpx auto 0;
}