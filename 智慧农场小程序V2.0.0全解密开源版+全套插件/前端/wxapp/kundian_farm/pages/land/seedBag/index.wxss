@import "../../../../__wuBaseWxss__/2.wxss";

page {
    background: #f4f4f4;
}

.bag-con {
    width: 100%;
    height: auto;
    font-size: 28rpx;
}

.bag-ul {
    width: 85%;
    margin-left: 5%;
    height: 280rpx;
    padding: 20rpx;
    border-radius: 10rpx;
    background: white;
    margin-top: 20rpx;
    box-shadow: 4rpx 5rpx 10rpx rgb(228,228,228);
}

.bag-ul .ul-left {
    width: 32%;
    height: 200rpx;
}

.ul-left image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.ul-right {
    margin-left: 4%;
    line-height: 50rpx;
    height: 200rpx;
}

.ul-btn {
    width: 40%;
    height: 80rpx;
    text-align: right;
    margin-left: 60%;
}

.ul-btn .sale {
    width: 100rpx;
    height: 50rpx;
    border-radius: 50rpx;
    padding: 0 10rpx 0 10rpx;
    line-height: 50rpx;
    text-align: center;
    color: #09BB07;
    margin-left: 20rpx;
    border: 1rpx solid #09BB07;
    font-size: 24rpx;
}

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    background: black;
    opacity: 0.7;
    z-index: 99;
}

.dialog {
    width: 90%;
    margin-left: 5%;
    height: 400rpx;
    position: fixed;
    top: 20%;
    background: white;
    border-radius: 10rpx;
    z-index: 999;
    font-size: 28rpx;
    padding-top: 20rpx;
}

.dialog .title {
    width: 90%;
    margin-left: 5%;
    height: 60rpx;
    line-height: 60repx;
    border-bottom: 1rpx solid #f4f4f4;
}

.dialog input {
    border: 1rpx solid #f4f4f4;
    height: 70rpx;
    border-radius: 10rpx;
    line-height: 73rpx;
    padding: 5rpx;
    padding-left: 20rpx;
}

.content {
    width: 90%;
    margin-left: 5%;
    margin-top: 30rpx;
}

.content .con-title {
    width: 20%;
}

.content .con-inp {
    width: 70%;
}

.text {
    position: relative;
    left: 69%;
    top: 10rpx;
    color: #09BB07;
}

.icon-delete1 {
    float: right;
}

.dialog button {
    width: 80%;
    margin-left: 10%;
    margin-top: 50rpx;
    background: #09BB07;
    color: white;
    border-radius: 94rpx;
}

button::after {
    border: none;
}

.none-content {
    width: 100%;
    height: 500rpx;
    margin-top: 100rpx;
    text-align: center;
}

.none-content image {
    width: 328rpx;
    height: 200rpx;
}

.none-content text {
    display: block;
    font-size: 28rpx;
    color: gray;
}