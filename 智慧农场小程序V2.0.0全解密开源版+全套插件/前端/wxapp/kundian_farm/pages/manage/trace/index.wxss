page {
    background: #f4f4f4;
}

.con {
    width: 100%;
    height: 650rpx;
    background: linear-gradient(#01c5c4,#09c179);
}

.seach {
    width: 90%;
    height: 400rpx;
    background: white;
    margin-left: 5%;
    position: relative;
    top: -200rpx;
    border-radius: 20rpx;
}

.input {
    width: 70%;
    margin: auto;
    height: 80rpx;
    border: 1rpx solid #f4f4f4;
    position: relative;
    top: 40px;
    border-radius: 50rpx;
    padding-left: 20rpx;
}

.icon-saoma {
    position: relative;
    left: 88%;
    font-size: 44rpx;
    top: 7rpx;
}

.select-btn {
    position: relative;
    top: 130rpx;
    width: 80%;
    margin: auto;
    border-radius: 100rpx;
}

.cover {
    width: 100%;
    height: 500rpx;
}

.cover image {
    width: 100%;
    height: 100%;
}

.info {
    width: 92%;
    height: 700rpx;
    margin: auto;
    border-radius: 20rpx;
    background: white;
    position: relative;
    top: -150rpx;
}

.cycle {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    top: 45%;
    background: #f4f4f4;
    border-radius: 50%;
}

.cycle2 {
    left: 93%;
}

.success-icon {
    width: 100%;
    text-align: center;
    height: 180rpx;
    padding-top: 40rpx;
    border-bottom: 1rpx dotted gray;
}

.success-icon text {
    font-size: 76rpx;
}

.cu-list.menu>.cu-item {
    width: 88%;
    margin: auto;
}

.action {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 60%;
    text-align: right;
}

.action text {
    width: 100%;
}

.sli .title {
    width: 92%;
    margin: auto;
    height: 80rpx;
    line-height: 80rpx;
}

.sli .cu-list {
    border-radius: 10rpx;
    background: white;
    width: 94%;
    margin: auto;
    margin-top: 15rpx;
}

.imgs {
    padding-bottom: 10rpx;
    padding-left: 20rpx;
    margin-top: 20rpx;
}

.imgs .item-img {
    width: 100rpx;
    height: 100rpx;
    margin-right: 10rpx;
}

.about {
    width: 96%;
    margin: auto;
}

.s-info {
    padding-bottom: 128rpx;
}

.footer {
    position: fixed;
    bottom: 0;
    width: 100%;
}