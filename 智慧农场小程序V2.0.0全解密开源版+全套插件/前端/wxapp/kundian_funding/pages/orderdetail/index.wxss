@import "../../../__wuBaseWxss__/2.wxss";

.orderStatus {
    width: 100%;
    height: 250rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
    color: #fff;
}

.orderStatus .status_title {
    font-size: 40rpx;
    font-weight: 500;
}

.qiaob {
    font-size: 150rpx;
}

.notice {
    font-size: 32rpx;
    font-weight: normal;
    margin-top: 10rpx;
}

.address_wrapper {
    width: 100%;
    display: flex;
    align-items: center;
    padding: 30rpx;
    box-sizing: border-box;
}

.position {
    font-size: 50rpx;
    color: #929292;
}

.address_info {
    flex: 1;
    font-size: 30rpx;
    color: #6F6F6F;
    margin-left: 15rpx;
}

.address {
    margin-top: 15rpx;
}

.block {
    height: 20rpx;
    background: #EFEFEF;
}

.proList {
    width: 100%;
    padding: 30rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #D0D0D0;
}

.pro_item {
    width: 100%;
    display: flex;
    align-items: center;
}

.pro_item:not(:last-child) {
    margin-bottom: 30rpx;
}

.pro_item image {
    width: 200rpx;
    height: 200rpx;
}

.pro_item_info {
    flex: 1;
    margin-left: 20rpx;
}

.item_name {
    font-size: 32rpx;
    font-weight: 500;
}

.item_level {
    font-size: 30rpx;
    margin-top: 10rpx;
    color: #8D8D8D;
    display: flex;
    align-items: center;
    line-height: 45rpx;
}

.item_level view:not(:first-child) {
    margin-left: 15rpx;
}

.item_total {
    color: #1F1F1F;
    font-size: 32rpx;
    margin-top: 15rpx;
}

.freight {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    font-size: 30rpx;
    color: #141414;
}

.freight:not(:last-child) {
    padding-bottom: 30rpx;
}

.freight text {
    color: #838383;
}

.payfor_wrapper {
    padding: 30rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 32rpx;
    border-top: 1rpx solid #D0D0D0;
}

.payfor_wrapper view:first-child {
    font-weight: 500;
}

.orderInfo {
    padding: 30rpx;
    box-sizing: border-box;
}

.order_titel {
    font-size: 32rpx;
    font-weight: 500;
}

.order_item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 30rpx;
}

.order_item view:last-child {
    color: #7A7A7A;
}

.order_item:not(:first-child) {
    padding-top: 30rpx;
}

.footer_block {
    height: 120rpx;
    background: #EFEFEF;
}

.footer {
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    border-top: 1rxp solid #dfdfdf;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: fixed;
    z-index: 200;
    left: 0;
    bottom: 0;
}

.payfor {
    width: 250rpx;
    height: 100%;
    font-size: 34rpx;
    color: #fff;
    text-align: center;
    line-height: 100rpx;
}