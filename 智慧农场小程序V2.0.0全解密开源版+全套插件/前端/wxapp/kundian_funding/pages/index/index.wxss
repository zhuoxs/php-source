@import "../../../__wuBaseWxss__/2.wxss";

page {
    overflow-x: hidden;
}

.orderTitle {
    height: 90rpx;
    line-height: 90rpx;
    background-color: #fff;
}

.currentIndex {
    border-bottom: 3rpx solid #16BA63;
    color: #16BA63;
}

.mian {
    width: 97%;
    margin-left: 3%;
}

.list_wrapper {
    width: 100%;
    display: flex;
    align-items: center;
    padding: 20rpx 0;
}

.list_wrapper:not(:last-child) {
    border-bottom: 1rpx solid #eee;
}

.pic_wrapper {
    width: 230rpx;
    height: 190rpx;
    position: relative;
}

.pic_wrapper .item_pic {
    width: 230rpx;
    height: 190rpx;
    border-radius: 15rpx;
}

.sign {
    position: absolute;
    font-size: 40rpx;
    top: -15rpx;
    right: -10rpx;
}

.desc_wrapper {
    flex: 1;
    margin-left: 20rpx;
    color: #3E3E3E;
}

.item_name_wrapper {
    font-size: 32rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.item_name {
    width: 250rpx;
    font-weight: 500;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.item_state {
    flex: 1;
    margin-left: 50rpx;
    padding: 8rpx 0rpx;
    text-align: center;
    border-radius: 30rpx 0rpx 0rpx 30rpx;
    background: linear-gradient(to top,#FF9C15,#FFD195);
    color: #fff;
    font-size: 30rpx;
}

.item_states {
    background: linear-gradient(to top,#AAAAAA,#D9D9D9);
}

.raise_wrapper {
    font-size: 28rpx;
    margin-top: 10rpx;
    color: #ADADAD;
}

.crowd_info_wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.crowd_item_rate {
    text-align: center;
    font-size: 28rpx;
    color: #ABABAB;
    margin-right: 20rpx;
}

.crowd_item_rate view:first-child {
    color: #FF9C15;
    font-size: 48rpx;
    margin-top: 5rpx;
    font-weight: 500;
    margin-bottom: 15rpx;
}

.noOrder {
    width: 100%;
    height: 300rpx;
    text-align: center;
    font-size: 26rpx;
    margin-top: 180rpx;
}

.noOrder image {
    width: 400rpx;
    height: 230rpx;
}