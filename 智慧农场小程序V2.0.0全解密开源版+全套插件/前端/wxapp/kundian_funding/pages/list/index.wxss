@import "../../../__wuBaseWxss__/2.wxss";

page {
    background: #f4f4f4;
    font-size: 28rpx;
}

.navbar {
    width: 100%;
    height: 80rpx;
    background: #fff;
    position: fixed;
    z-index: 100;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.navbar .ul {
    font-size: 30rpx;
    position: relative;
    height: 100%;
    line-height: 80rpx;
    width: 100%;
    text-align: center;
}

.ul::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: -20%;
    width: 140%;
    height: 4rpx;
    background: currentColor;
    opacity: 0;
    transition: all 0.5s;
}

.active {
    color: #16ba63;
}

.active::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    opacity: 1;
    transition: all 0.5s;
}

.block {
    width: 100%;
    height: 80rpx;
}

.list-ul {
    width: 96%;
    margin-left: 2%;
    height: 260rpx;
    background: white;
    border-radius: 10rpx;
    margin-top: 20rpx;
}

.cover {
    width: 220rpx;
    height: 220rpx;
    margin-left: 3%;
}

.ul-info {
    height: 86%;
    width: 62%;
    margin-left: 2%;
    margin-top: 3%;
}

.btn {
    text-align: justify;
    width: 100%;
}

.info-btn {
    width: 120rpx;
    height: 50rpx;
    background: #16ba63;
    color: white;
    font-size: 26rpx;
    padding: 0;
    margin: 0;
    line-height: 50rpx;
    border-radius: 50rpx;
    border: none;
    position: absolute;
    right: 8%;
}

.detail {
    margin: 20rpx 0 35rpx 0;
    text-align: center;
}

.detail .de-li {
    width: 33%;
    height: 80rpx;
}

.de-li text {
    display: block;
}

.de-li .light {
    font-size: 34rpx;
    color: orange;
}

.icon-shouqing {
    font-size: 84rpx;
    color: gray;
    position: absolute;
    left: 87%;
    margin-top: -88rpx;
}