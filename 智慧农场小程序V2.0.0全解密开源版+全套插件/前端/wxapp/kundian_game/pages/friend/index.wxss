@import "../../../__wuBaseWxss__/0.wxss";

.userNickNames {
    text-align: center;
    color: #fff;
    background: #d4c37d;
    height: 55rpx;
    line-height: 55rpx;
    font-size: 30rpx;
    border: 4rpx solid #5e2612;
    border-radius: 25rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding: 0rpx 25rpx;
}

.main_bg {
    width: 100%;
    height: 100%;
}

.footer_zd {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 120rpx;
}

.footer_zd>image {
    width: 100%;
    height: 100%;
}

.friend_wrapper {
    width: 80%;
    height: 800rpx;
    position: fixed;
    top: 395rpx;
    background: rgba(255,255,255,0.7);
    z-index: 200;
    border-radius: 25rpx;
    box-shadow: 0rpx 3rpx 8rpx rgba(0,0,0,0.4);
    transition: all 0.3s;
}

.closeImg {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    top: -20rpx;
    right: -20rpx;
}

.headLine {
    width: 100%;
    height: 60rpx;
    border-bottom: 7rpx solid #C58F17;
}

.friend_list {
    width: 100%;
    height: 733rpx;
    overflow-y: auto;
    padding: 30rpx 30rpx 0rpx;
    box-sizing: border-box;
}

.friend_item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
    background: #D4C37D;
    box-shadow: 0 0 15rpx #C5921D inset;
    border-radius: 20rpx;
    margin-bottom: 30rpx;
}

.friend_item_avator {
    width: 90rpx;
    height: 90rpx;
}

.friend_name {
    margin: 0 10rpx;
    color: #8B4C20;
    font-size: 32rpx;
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.visited {
    font-size: 30rpx;
    color: #fff;
    background: #DF6210;
    width: 120rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 20rpx;
    letter-spacing: 3rpx;
}

.show {
    left: 10%;
}

.hide {
    left: -750rpx;
}