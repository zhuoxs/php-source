.info_wrapper {
    position: fixed;
    width: 90%;
    height: 830rpx;
    background: #FDE5AF;
    border-radius: 25rpx;
    top: 380rpx;
    left: 5%;
    z-index: 400;
    padding: 20rpx;
    box-sizing: border-box;
}

.closeLands {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    top: -25rpx;
    right: -25rpx;
}

.info_title {
    font-size: 30rpx;
    color: #333;
    text-align: center;
    width: 100%;
    line-height: 40rpx;
    letter-spacing: 3rpx;
}

.info_content {
    margin-top: 20rpx;
    height: 730rpx;
    overflow: hidden;
    font-size: 28rpx;
    color: #333;
    width: 100%;
}

.info_content .info_scroll {
    height: 100%;
    width: 110%;
}

.info_content .info_scroll view {
    width: 91%;
    height: 100%;
}