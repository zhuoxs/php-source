@import "../../__wuBaseWxss__/2.wxss";

.notice-wrapper {
    width: 95%;
    margin: 0 auto;
    padding: 20rpx 0rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}

.title {
    width: 120rpx;
    padding: 0 20rpx;
    position: relative;
}

.title::after {
    content: '';
    position: absolute;
    top: 5%;
    right: 0;
    width: 4rpx;
    height: 90%;
    background: #c3c3c3;
}

.title-text {
    font-size: 36rpx;
    color: #393939;
    font-weight: 500;
    margin-bottom: 5rpx;
    padding-left: 10rpx;
    box-sizing: border-box;
}

.notice-content {
    position: relative;
    width: 120rpx;
    height: 45rpx;
}

.notice-text {
    position: absolute;
    left: 40%;
    top: 50%;
    transform: translate(-50%,-50%);
    font-size: 30rpx;
    color: #fff;
    z-index: 5;
    font-weight: 500;
}

.notice-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 120rpx;
    height: 45rpx;
    z-index: 4;
}

.content {
    flex: 1;
    align-items: center;
    margin-left: 20rpx;
}

.common-wrapper {
    width: 100%;
    display: flex;
    align-items: center;
}

.common-wrapper:not(:last-child) {
    margin-bottom: 15rpx;
}

.common-wrapper .titles {
    font-size: 24rpx;
    color: #69a84f;
    padding: 3rpx 20rpx;
    border-radius: 8rpx;
    border: 1px solid #97df79;
    letter-spacing: 3rpx;
}

.swiper {
    flex: 1;
    margin-left: 20rpx;
    font-size: 28rpx;
    color: #b1b1b1;
    height: 40rpx;
}

.swiper-content {
    width: 100%;
    height: 100%;
}

.swiper-item {
    width: 100%;
    height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}