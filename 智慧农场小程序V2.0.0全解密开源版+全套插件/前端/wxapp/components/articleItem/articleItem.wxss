@import "../../__wuBaseWxss__/2.wxss";

.article-content1 {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 92%;
    margin: 0 auto;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #f4f4f4;
}

.article-content1 image {
    width: 250rpx;
    border-radius: 15rpx;
    height: 179rpx;
}

.article-content1 .article-info {
    flex: 1;
    margin-right: 17rpx;
}

.article-content1 .article-info .article-title {
    font-size: 32rpx;
    color: #323232;
    line-height: 50rpx;
    letter-spacing: 3rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
}

.article-content1 .article-info .info-date {
    display: flex;
    align-items: center;
    font-size: 30rpx;
    color: #8F8F93;
    letter-spacing: 3rpx;
    line-height: 60rpx;
    margin-top: 10rpx;
}

.article-content1 .article-info .info-date view:last-child {
    margin-left: 20rpx;
}

.article-content1 .article-info .info-date view:last-child text:first-child {
    font-size: 38rpx;
    margin-right: 10rpx;
    vertical-align: middle;
}

.article-content1 .article-info .info-date view:last-child text:last-child {
    line-height: 60rpx;
    display: inline-block;
}

.article-content2 {
    width: 92%;
    margin: 0 auto;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #f4f4f4;
}

.article-content2 .article-title {
    font-size: 32rpx;
    color: #323232;
    line-height: 50rpx;
    letter-spacing: 3rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.article-content2 image {
    width: 100%;
    height: 397rpx;
    border-radius: 10rpx;
    margin-top: 10rpx;
}

.article-content2 .article-time {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #8F8F93;
    letter-spacing: 3rpx;
    line-height: 60rpx;
}

.article-content2 .article-time view:last-child {
    line-height: 60rpx;
}

.article-content2 .article-time view:last-child {
    margin-left: 20rpx;
}

.article-content2 .article-time view:last-child text {
    display: inline-block;
    line-height: 60rpx;
}

.article-content2 .article-time view:last-child text:first-child {
    font-size: 38rpx;
    margin-right: 10rpx;
    vertical-align: middle;
    line-height: 60rpx;
    margin-top: -5rpx;
}