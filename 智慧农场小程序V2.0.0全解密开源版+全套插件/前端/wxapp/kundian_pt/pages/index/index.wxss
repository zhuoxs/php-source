@import "../../../__wuBaseWxss__/2.wxss";

.scroll_container {
    width: 100%;
    height: 120rpx;
    margin: 30rpx auto 0rpx;
    border-top: 1rpx solid #EBEBEB;
    border-bottom: 1rpx solid #EBEBEB;
}

.scroll_wrapper {
    width: 94%;
    height: 100%;
    margin: 0 auto;
    overflow: hidden;
}

.scrollView {
    width: 100%;
    height: 150rpx;
    display: flex;
    white-space: nowrap;
    margin-top: 25rpx;
}

.type_item {
    display: inline-block;
    font-size: 30rpx;
    text-align: center;
    line-height: 70rpx;
    padding: 0 45rpx;
    color: #303030;
    transition: all .3s;
    border-radius: 35rpx;
    margin-right: 10rpx;
}

.active {
    background: linear-gradient(to right,#5BF5A4,#1BBC67);
    color: #fff;
    border-radius: 35rpx;
}

.group_container {
    width: 90%;
    margin: 0 auto;
}

.group-item-wrapper {
    width: 100%;
}

.group-item-info {
    width: 100%;
    padding: 30rpx 0rpx;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #E7E7E7;
}

.group-item-info .item-cover {
    width: 250rpx;
    height: 250rpx;
}

.item-info-wrapper {
    flex: 1;
    margin-left: 20rpx;
}

.item-title {
    font-size: 30rpx;
    color: #484747;
    height: 90rpx;
    line-height: 45rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.item-price-content {
    margin-top: 10rpx;
    display: flex;
    align-items: flex-end;
}

.price {
    color: #16BA63;
    font-size: 50rpx;
    font-weight: 500;
    height: 55rpx;
}

.price text {
    font-size: 30rpx;
}

.oPrice {
    height: 55rpx;
    font-size: 30rpx;
    color: #929292;
    text-decoration: line-through;
    line-height: 80rpx;
    margin-left: 20rpx;
}

.group-num-wrapper {
    width: 350rpx;
    height: 60rpx;
    border-radius: 10rpx;
    border: 2rpx solid #16BA63;
    margin-top: 30rpx;
    display: flex;
}

.group-num-wrapper view {
    width: 50%;
    font-size: 30rpx;
    line-height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.group-num-wrapper view text {
    font-size: 40rpx;
    margin-right: 15rpx;
    margin-top: 6rpx;
}

.group-num-wrapper view:first-child {
    color: #6C6C6C;
}

.group-num-wrapper view:last-child {
    color: #fff;
    background: #16BA63;
}

.discount-content {
    width: 100%;
    padding: 25rpx 0rpx;
    font-size: 30rpx;
    color: #5E5E5E;
    border-bottom: 1rpx solid #EBEBEB;
    display: flex;
    align-items: center;
}

.discount-content view:first-child {
    color: #fff;
    width: 40rpx;
    height: 40rpx;
    font-size: 26rpx;
    background: #97DDB8;
    line-height: 40rpx;
    text-align: center;
    border-radius: 5rpx;
    margin-right: 15rpx;
}

.block {
    height: 50rpx;
}