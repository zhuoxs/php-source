@import "../../../__wuBaseWxss__/2.wxss";

page {
    background: #EFEFEF;
}

.title-content {
    width: 100%;
    height: 80rpx;
    background: #fff;
    position: fixed;
    z-index: 100;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.block {
    height: 80rpx;
}

.item {
    font-size: 30rpx;
    color: #515151;
    position: relative;
    height: 100%;
    line-height: 80rpx;
    width: 120rpx;
    text-align: center;
}

.item::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: -20%;
    width: 140%;
    height: 4rpx;
    background: currentColor;
    opacity: 0;
    transition: all 0.3s;
}

.active {
    color: #16BA63;
}

.active::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    opacity: 1;
    transition: all .3s;
}

.num {
    width: 30rpx;
    height: 30rpx;
    background: #16BA63;
    font-size: 20rpx;
    text-align: center;
    line-height: 30rpx;
    border-radius: 50%;
    position: absolute;
    color: #fff;
    top: 0rpx;
    right: -10rpx;
}

.lists-item {
    width: 93%;
    margin: 20rpx auto;
    border-radius: 20rpx;
    background: #fff;
}

.item-title {
    width: 100%;
    padding: 30rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.item-title view:last-child {
    padding-top: 10rpx;
    box-sizing: border-box;
}

.headLine {
    font-size: 32rpx;
    color: #16BA63;
    width: 400rpx;
}

.item-content {
    width: 100%;
    border-top: 1rpx solid #EFEFEF;
    border-bottom: 1rpx solid #EFEFEF;
    padding: 30rpx 0;
}

.item-info-mian {
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}

.item-info-mian image {
    width: 180rpx;
    height: 180rpx;
    border-radius: 15rpx;
}

.item-info-content {
    flex: 1;
    margin-left: 20rpx;
}

.item-info-content .item-titler {
    font-size: 30rpx;
    color: #484848;
    line-height: 50rpx;
    letter-spacing: 3rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.item-info-content .info-spec {
    color: #8D8D8D;
    margin-top: 20rpx;
    font-size: 28rpx;
}

.item-info-content .info-spec text {
    margin-right: 10rpx;
}

.money {
    display: flex;
    align-items: center;
}

.money view:first-child {
    font-size: 40rpx;
    color: #4C4C4C;
    font-weight: 500;
}

.money view:first-child text {
    font-size: 28rpx;
}

.money view:last-child {
    color: #949494;
    margin-left: 20rpx;
    font-size: 30rpx;
    margin-top: 8rpx;
}

.item-footer {
    padding: 30rpx;
    box-sizing: border-box;
}

.item-footer view {
    text-align: right;
    font-size: 30rpx;
    color: #535353;
}

.item-footer view text {
    font-size: 40rpx;
    font-weight: 500;
    color: #535353;
}

.btn-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 30rpx;
}

.btn-wrapper .btnStyle {
    background: #16BA63;
    color: #fff;
    font-size: 32rpx;
    border: none;
    line-height: 2.2;
    border-radius: 45rpx;
    margin: 0;
}

.btn-wrapper .btnStyle::after {
    border: none;
}

.btn-wrapper .btnStyles {
    background: transparent;
    color: #535353;
    font-size: 32rpx;
    border: 1rpx solid #9D9D9D;
    line-height: 2.2;
    border-radius: 45rpx;
    margin: 0;
}

.btn-wrapper .btnStyles::after {
    border: none;
}

.blocks {
    height: 20rpx;
}

.none {
    width: 100%;
    height: 300rpx;
    text-align: center;
}

.none image {
    width: 400rpx;
    height: 230rpx;
    margin-top: 260rpx;
}

.none .tags {
    color: gray;
    font-size: 24rpx;
    display: block;
}