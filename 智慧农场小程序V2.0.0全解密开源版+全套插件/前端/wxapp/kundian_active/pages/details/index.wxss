@import "../../../__wuBaseWxss__/2.wxss";

page {
    background: #f3f3f3;
}

.banner {
    width: 94%;
    height: 305rpx;
    margin: 30rpx auto 0;
    display: block;
    border-radius: 15rpx;
}

.common_wrapper {
    width: 94%;
    border-radius: 15rpx;
    background: #fff;
    margin: 30rpx auto 0;
    padding: 0 20rpx;
    box-sizing: border-box;
    overflow: hidden;
    padding-bottom: 20rpx;
}

.info_item {
    width: 100%;
    padding: 30rpx 0;
}

.info_item:not(:last-child) {
    border-bottom: 1rpx dashed #A0A0A0;
}

.item_title {
    font-size: 32rpx;
    color: #1A1A1A;
    font-weight: 500;
}

.item_address {
    flex: 1;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-left: 15rpx;
    color: #070707;
}

.sign_wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 30rpx 0;
}

.sign_title {
    font-size: 32rpx;
    color: #5F5F5F;
    font-weight: 500;
}

.sign_title text {
    color: #9E9E9E;
    font-size: 30rpx;
}

.sign_more {
    font-size: 30rpx;
    color: #9E9E9E;
}

.sign_content {
    width: 100%;
    display: flex;
    align-items: center;
    padding-bottom: 30rpx;
}

.sign_item {
    width: 18%;
    margin-right: 20rpx;
}

.sign_item image {
    width: 100%;
    border-radius: 10rpx;
}

.sign_item_name {
    font-size: 30rpx;
    color: #525252;
    width: 100%;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.footer_block {
    height: 120rpx;
}

.footer {
    height: 100rpx;
    width: 100%;
    background: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 20;
    border-top: 1rpx solid #DFDFDF;
    display: flex;
    align-items: center;
}

.footer_item {
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    padding-top: 5rpx;
    box-sizing: border-box;
}

.footer_item view:last-child {
    font-size: 28rpx;
    color: #3B3B3B;
}

.footer_item:not(:last-child) {
    border-right: 1rpx solid #DFDFDF;
}

.sign_it {
    flex: 1;
    color: #fff;
    font-size: 32rpx;
    letter-spacing: 3rpx;
    line-height: 100rpx;
    text-align: center;
    height: 100rpx;
}

.footer_item button {
    width: 100rpx;
    height: 100rpx;
    border-radius: 0;
    border: none;
    padding: 0;
    line-height: normal;
    font-size: 28rpx;
    background: none;
}

.footer_item button::after {
    border: none;
}

.model {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0,0,0,0.3);
    z-index: 100;
}

.model_mask {
    width: 100%;
    height: 850rpx;
    background: #fff;
    position: fixed;
    z-index: 120;
    border-radius: 15rpx 15rpx 0 0;
    transition: all .3s;
}

.position1 {
    bottom: 0;
    left: 0;
}

.position0 {
    bottom: -900rpx;
    left: 0;
}

.model_content {
    width: 94%;
    margin: 0 auto;
}

.close_wrapper {
    margin-top: 15rpx;
    text-align: right;
}

.active_item_wrapper {
    margin-top: 20rpx;
}

.model_mian {
    width: 100%;
    height: 480rpx;
    overflow-y: auto;
}

.active_item {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 10rpx;
    position: relative;
    padding: 0 25rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.active_item_title {
    color: #5F5F5F;
    font-size: 32rpx;
    font-weight: 500;
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.active_item_title text {
    font-size: 28rpx;
}

.active_item_price {
    font-size: 36rpx;
}

.select_sign {
    position: absolute;
    bottom: 0;
    right: 0;
    z-index: 150;
    width: 0;
    height: 0;
    border-width: 36rpx 70rpx 0 0;
    border-style: solid;
    border-color: transparent #16BA63 transparent transparent;
}

.sign_logo {
    position: absolute;
    bottom: 0;
    right: -13rpx;
    z-index: 170;
    color: #fff;
    width: 70rpx;
    height: 36rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 28rpx;
}

.active_item_notice {
    font-size: 28rpx;
}

.line {
    width: 100%;
    height: 2rpx;
    margin-top: 30rpx;
    border-top: 1rpx dashed #A3A3A3;
}

.select_num {
    color: #5F5F5F;
    font-size: 32rpx;
    font-weight: 500;
    margin-top: 20rpx;
}

.select_num_wrapper {
    display: flex;
    align-items: center;
    margin-top: 20rpx;
}

.reduce {
    width: 100rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 10rpx 0 0 10rpx;
    border: 1rpx solid #D1D1D1;
    color: #989898;
    font-size: 36rpx;
    margin-right: -1rpx;
}

.input {
    padding: 0;
    width: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 36rpx;
    text-align: center;
    border: 1rpx solid #D1D1D1;
    color: #989898;
}

.add {
    width: 100rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 0 10rpx 10rpx 0;
    border: 1rpx solid #D1D1D1;
    color: #989898;
    font-size: 36rpx;
    margin-left: -1rpx;
}

.model_footer {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    background: #fff;
    border-top: 1rpx solid #DADADA;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.model_footer_total {
    font-size: 40rpx;
    margin-left: 20rpx;
}

.model_footer_total text {
    font-size: 30rpx;
}

.confirm {
    width: 250rpx;
    height: 100rpx;
    color: #fff;
    line-height: 100rpx;
    font-size: 32rpx;
    letter-spacing: 3rpx;
    text-align: center;
}