@import "../../../__wuBaseWxss__/2.wxss";

page {
    background: #F3F3F3;
}

.orderTitle {
    height: 90rpx;
    line-height: 90rpx;
    background-color: #fff;
}

.currentIndex {
    border-bottom: 3rpx solid #16BA63;
    color: #16BA63;
}

.active_wrapper {
    width: 94%;
    margin: 40rpx auto 0;
    background: #fff;
    border-radius: 15rpx;
    box-shadow: 0 3rpx 7rpx rgba(0,0,0,.2);
}

.img_wrapper {
    width: 100%;
    height: 306rpx;
    border-radius: 15rpx 15rpx 0 0;
    overflow: hidden;
    position: relative;
}

.img_wrapper .item_pic {
    width: 100%;
    height: 100%;
}

.area_wrappers {
    position: absolute;
    z-index: 99;
    top: 20rpx;
    right: 0;
}

.area_wrapper {
    position: relative;
    background: rgba(0,0,0,.3);
    padding: 1px;
    box-sizing: border-box;
    color: #fff;
    font-size: 24rpx;
    letter-spacing: 3rpx;
}

.area_wrapper::before {
    content: '';
    display: block;
    position: absolute;
    top: 0;
    left: -9px;
    width: 0;
    height: 0;
    border-width: 0 9px 9px 0;
    border-style: solid;
    border-color: transparent rgba(0,0,0,.3) transparent transparent;
}

.area_wrapper::after {
    content: '';
    display: block;
    position: absolute;
    bottom: 0;
    left: -9px;
    width: 0;
    height: 0;
    border-width: 9px 9px 0 0;
    border-style: solid;
    border-color: transparent rgba(0,0,0,.3) transparent transparent;
}

.finish_wrapper {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 120;
    background: rgba(0,0,0,0.5);
    display: flex;
    align-items: center;
    justify-content: center;
}

.finishImg {
    margin-top: 30rpx;
    width: 200rpx;
    height: 200rpx;
    font-size: 160rpx;
    color: rgba(245,244,244,0.952);
}

.inner_wrapper {
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
}

.item_title {
    font-size: 30rpx;
    font-weight: 500;
    color: #1A1A1A;
}

.join_wrapper {
    margin-top: 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.join_wrapper_num {
    font-size: 28rpx;
    color: #5F5F5F;
    margin-left: 30rpx;
}

.block {
    height: 40rpx;
}

.noOrder {
    width: 100%;
    margin-top: 200rpx;
    text-align: center;
    font-size: 30rpx;
    color: #8B8B8B;
    letter-spacing: 3rpx;
}

.noOrder image {
    width: 400rpx;
    height: 230rpx;
}