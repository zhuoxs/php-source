<template name="tabBar">
    <view class="tab">
        <view class="tabnav">
            <navigator class="tablist {{index==2?'tabOn':''}}" openType="redirect" style="{{item.active?'color: '+(item.selectedColor?item.selectedColor:tabBar.selectedColor):''}}" url="{{item.pagePath}}" wx:for="{{tabBar.list}}">
                <image class="tabimg" src="{{item.selectedIconPath}}" wx:if="{{item.active}}"></image>
                <image class="tabimg" src="{{item.iconPath}}" wx:if="{{!item.active}}"></image>
                <text>{{item.text}}</text>
            </navigator>
        </view>
    </view>
</template>
