<view>
    <scroll-view scrollX class="bg-white nav">
        <view class="flex text-center">
            <view bindtap="changeIndex" class="cu-item flex-sub {{currentIndex==1?'text-green cur':''}}" data-index="1" style="color:{{currentIndex==1?farmSetData.background_color:''}};">
                全部
            </view>
            <view bindtap="changeIndex" class="cu-item flex-sub {{currentIndex==2?'text-green cur':''}}" data-index="2" style="color:{{currentIndex==2?farmSetData.background_color:''}};">
                待付款
            </view>
            <view bindtap="changeIndex" class="cu-item flex-sub {{currentIndex==3?'text-green cur':''}}" data-index="3" style="color:{{currentIndex==3?farmSetData.background_color:''}};">
                待配送
            </view>
            <view bindtap="changeIndex" class="cu-item flex-sub {{currentIndex==4?'text-green cur':''}}" data-index="4" style="color:{{currentIndex==4?farmSetData.background_color:''}};">
                待收货
            </view>
        </view>
    </scroll-view>
    <view class="mainBody" wx:for="{{orderData}}">
        <view bindtap="orderDetail" class="ptl30 brb" data-orderid="{{item.id}}">
            <view class="itemType" style="color:{{farmSetData.background_color}}">收益发放时间: {{item.project.profit_send_time}}</view>
            <view class="flex mt20">
                <image class="HeadImg" src="{{item.project.cover}}"></image>
                <view class="ml20">
                    <view class="itemName">{{item.project.project_name}}</view>
                    <view class="item_level">
                        <text>档位:</text>
                        <text class="ml10">￥{{item.spec.price}}</text>
                        <text>x{{item.count}}</text>
                    </view>
                    <view class="item_total">￥{{item.spec.price}}</view>
                </view>
            </view>
        </view>
        <view class="btnArr">
            <button bindtap="cancelOrder" class="cu-btn round line-gray button-hover" data-orderid="{{item.id}}" wx:if="{{item.status_code==0}}">取消订单</button>
            <button bindtap="payOrder" class="cu-btn round line-blue" data-orderid="{{item.id}}" style="color:{{farmSetData.background_color}}" wx:if="{{item.status_code==0}}">付款</button>
            <button bindtap="comfirmOrder" class="cu-btn round line-blue" data-orderid="{{item.id}}" style="color:{{farmSetData.background_color}}" wx:if="{{item.status_code==2}}">确认收货</button>
            <view class="order-status" style="color: {{farmSetData.background_color}}" wx:if="{{item.status_code==3}}">订单已完成</view>
            <view class="order-status" style="color: {{farmSetData.background_color}}" wx:if="{{item.status_code==4}}">退款中</view>
            <view class="order-status" style="color: {{farmSetData.background_color}}" wx:if="{{item.status_code==5}}">订单已取消</view>
            <view class="order-status" style="color: {{farmSetData.background_color}}" wx:if="{{item.status_code==6}}">订单已分红</view>
        </view>
    </view>
    <view wx:if="{{orderData.length==0}}">
        <view class="noOrder">
            <image src="/kundian_farm/images/icon/none.png"></image>
            <view>您还没有相关的订单</view>
        </view>
    </view>
</view>
<view bindtap="cancel" catchtouchmove="preventTouchMove" class="model" wx:if="{{confirm}}"></view>
<view class="model_content {{confirm?'scale1':'scale0'}}">
    <view class="image_wrapper">
        <image src="{{current_cover}}"></image>
    </view>
    <view class="comfirm">确认收到货了吗?</view>
    <view class="notice">为保障您的售后权益,请收到货确认无误后,再确认收货。</view>
    <view class="model_footer">
        <view bindtap="cancel">取消</view>
        <view bindtap="confirmGoods" data-orderid="{{current_orderid}}" style="color: {{farmSetData.background_color}}">确认收货</view>
    </view>
</view>
