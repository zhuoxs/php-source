@import "../../../__wuBaseWxss__/2.wxss";

page {
    background: #f4f4f4;
    font-size: 28rpx;
}

.top {
    width: 100%;
    background: white;
    border-top: 1rpx solid #f4f4f4;
    padding: 10rpx 0 14rpx 0;
}

.top .left {
    width: 15%;
    height: 100%;
    font-size: 44rpx;
    text-align: center;
    line-height: 130rpx;
}

.top .center {
    width: 75%;
    height: 100%;
    line-height: 47rpx;
    font-size: 26rpx;
}

.top .center .name {
    font-size: 32rpx;
    font-weight: bold;
}

.center .phone {
    margin-left: 20rpx;
    color: gray;
}

.top .right {
    width: 10%;
    line-height: 130rpx;
    height: 100%;
    text-align: center;
}

.img {
    width: 100%;
    height: 10rpx;
}

.address-line {
    width: 100%;
    height: 4rpx;
    position: relative;
    top: -4rpx;
    display: block;
}

.add {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    background: white;
    border-top: 1rpx solid #f4f4f4;
}

.add .left {
    width: 15%;
    height: 100%;
    text-align: center;
}

.add .center {
    width: 75%;
}

.add .right {
    width: 10%;
    text-align: center;
}

.info {
    width: 100%;
    height: 180rpx;
    background: white;
    padding: 20rpx 0 20rpx 0;
    margin-top: 10rpx;
    border-bottom: 1rpx solid #f4f4f4;
}

.info .cover {
    width: 30%;
    height: 100%;
    text-align: center;
}

.info .cover image {
    width: 180rpx;
    height: 180rpx;
}

.info .spec {
    color: gray;
}

.selected-num-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 30rpx;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    background: white;
}

.selectedNum-wrapper {
    display: flex;
    align-items: center;
    font-size: 46rpx;
}

.selectedNum-wrapper view {
    border-radius: 5rpx 0 0 5rpx;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    color: gray;
    background: #f2f2f2;
}

.selectedNum-wrapper input {
    width: 70rpx;
    height: 60rpx;
    border-radius: 0rpx;
    font-size: 30rpx;
    color: #000;
    text-align: center;
    line-height: 60rpx;
    background: #f2f2f2;
    padding: 0;
    min-height: 0;
    margin-left: 10rpx;
    margin-right: 10rpx;
}

.footer {
    width: 100%;
    height: 100rpx;
    background: white;
    position: fixed;
    bottom: 0rpx;
    line-height: 100rpx;
}

.footer .left {
    width: 70%;
    height: 100%;
    text-align: right;
    margin-right: 20rpx;
    font-size: 32rpx;
}

.footer .right {
    width: 30%;
    height: 100%;
}

.footer .right button {
    width: 100%;
    background: #09BB07;
    color: white;
    height: 100%;
    border: none;
    border-radius: 0rpx;
}

button::after {
    border-radius: 0rpx;
    border: none;
}

.footer .total-price {
    color: red;
}