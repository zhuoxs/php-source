@import "../../../__wuBaseWxss__/2.wxss";

.header-content {
    display: flex;
    align-items: center;
    justify-content: space-around;
    width: 100%;
    height: 250rpx;
    background: linear-gradient(to right,#50e294,#16ba63);
    color: #fff;
}

.header-content .title {
    font-size: 36rpx;
    font-weight: 500;
    letter-spacing: 4rpx;
}

.header-content .desc {
    font-size: 30rpx;
    margin-top: 10rpx;
    letter-spacing: 3rpx;
}

.hourglass {
    width: 104rpx;
    height: 180rpx;
}

.fail {
    height: 180rpx;
    width: 202rpx;
}

.transport {
    height: 130rpx;
    width: 194rpx;
}

.package {
    height: 180rpx;
    width: 194rpx;
}

.block {
    height: 20rpx;
    width: 100%;
    background: #EFEFEF;
}

.info-wrapper {
    padding: 30rpx 0rpx;
    border-bottom: 1rpx solid #D2D2D2;
}

.info-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 30rpx;
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.info-cover {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.info-detail {
    flex: 1;
    margin-left: 20rpx;
}

.info-detail .info-title {
    font-size: 30rpx;
    color: #484848;
    line-height: 50rpx;
    letter-spacing: 3rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.info-detail .info-spec {
    color: #8D8D8D;
    margin-top: 20rpx;
    font-size: 28rpx;
}

.info-detail .info-spec text {
    margin-right: 10rpx;
}

.info-detail .price-content {
    margin-top: 10rpx;
    font-size: 28rpx;
}

.option-wrapper {
    display: flex;
    align-items: center;
    padding: 30rpx 0;
}

.option-wrapper .options-item {
    width: 50%;
    position: relative;
}

.option-wrapper .options-item:first-child::after {
    content: '';
    width: 1rpx;
    height: 100%;
    position: absolute;
    top: 0;
    right: 0;
    background: #CDCDCD;
}

.option-wrapper .options-item button {
    background: transparent;
    border: none;
    font-size: 30rpx;
    line-height: 45rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.option-wrapper .options-item button view:first-child {
    font-size: 40rpx;
    margin-right: 20rpx;
    padding-top: 10rpx;
    box-sizing: border-box;
}

.c1 {
    color: #35C275;
}

.c2 {
    color: #FE7F01;
}

.option-wrapper .options-item button::after {
    border: none;
}

.common-wrapper {
    width: 100%;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    font-size: 30rpx;
    color: #383838;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.titles {
    font-size: 34rpx;
    color: #252525;
    font-weight: 500;
}

.limit-wrapper {
    display: flex;
    align-items: center;
}

.item-wrapper {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    border: 2rpx solid #69A752;
    margin: 0 5rpx;
    position: relative;
}

.captain {
    font-size: 14rpx;
    text-align: center;
    color: #fff;
    line-height: 25rpx;
    background: linear-gradient(to right,#6DAC56,#92D379);
    border-radius: 20rpx;
    width: 50rpx;
    letter-spacing: 3rpx;
    position: absolute;
    top: -8rpx;
    left: -6rpx;
    border: 2rpx solid #fff;
    height: 25rpx;
}

.item-wrapper image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.surplus {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    border: 2rpx dashed #CDCDCD;
    overflow: hidden;
    margin: 0 10rpx;
}

.surplus image {
    width: 100%;
    height: 100%;
}

.address {
    width: 100%;
    font-size: 26rpx;
    color: gray;
    padding-top: 10rpx;
    padding-bottom: 15rpx;
}

.address .icnfont {
    color: #16ba63;
}

.address .icon {
    width: 10%;
    margin-left: 2%;
}

.address .add-info {
    width: 70%;
    height: 100%;
}

.address .add-info .name,.address .add-info .phoe {
    height: 60rpx;
    line-height: 60rpx;
}

.address .edit {
    width: 16%;
    height: 100%;
    line-height: 100rpx;
    text-align: center;
}

.address .edit text {
    display: block;
    width: 80rpx;
    height: 40rpx;
    border: 1rpx solid #16ba63;
    color: #16ba63;
    margin-top: 40rpx;
    border-radius: 10rpx;
    line-height: 40rpx;
}

.pt-user {
    width: 92%;
    height: auto;
    font-size: 26rpx;
    color: gray;
    padding: 15rpx 5% 15rpx 2%;
}

.pt-user .pt-u-title {
    margin-left: 20rpx;
}

.pt-user .pt-user-btn {
    text-align: center;
    background: #16ba63;
    color: white;
    width: 120rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 22rpx;
    padding: 0;
    border-radius: 60rpx;
    position: relative;
}

button::after {
    border: none;
}

.pt-footer {
    width: 100%;
    height: 100rpx;
    background: white;
    position: fixed;
    bottom: 0;
    border-top: 1rpx solid #f4f4f4;
}

.pt-footer .f-btn {
    width: 120rpx;
    height: 50rpx;
    border: 1rpx solid #cfcfcf;
    color: #131313;
    margin-right: 34rpx;
    border-radius: 50rpx;
    font-size: 22rpx;
    padding: 0;
    line-height: 50rpx;
    float: right;
    margin-top: 20rpx;
    text-align: center;
}

.pt-footer .btn-color {
    background: #16ba63;
    color: white;
    border: none;
}