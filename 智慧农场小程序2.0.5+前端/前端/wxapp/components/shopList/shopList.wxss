@import "../../__wuBaseWxss__/2.wxss";

.goods-content {
    width: 100%;
    padding: 15rpx 30rpx;
    box-sizing: border-box;
}

.content1 {
    width: 100%;
    height: 280rpx;
    overflow: hidden;
}

.scrollView {
    width: 100%;
    height: 320rpx;
    display: flex;
    flex-wrap: nowrap;
    white-space: nowrap;
}

.scroll-item {
    width: 220rpx;
    height: 280rpx;
    display: inline-block;
    box-sizing: border-box;
}

.scroll-item:not(:first-child) {
    margin-left: 10rpx;
}

.scroll-item image {
    width: 220rpx;
    height: 220rpx;
    border-radius: 15rpx;
}

.item-name {
    width: 100%;
    font-size: 28rpx;
    color: #383838;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    letter-spacing: 3rpx;
    text-align: center;
}

.content2 {
    width: 100%;
}

.content2 .goods-item {
    width: 100%;
    box-shadow: 0 0 20rpx 3rpx rgba(0,0,0,0.2);
    border-radius: 15rpx;
    padding: 20rpx 15rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}

.content2 .goods-item:not(:last-child) {
    margin-bottom: 20rpx;
}

.goods-item image {
    width: 214rpx;
    height: 214rpx;
}

.item-mian {
    flex: 1;
    margin-left: 20rpx;
}

.item-mian-title {
    font-size: 32rpx;
    color: #333;
    width: 456rpx;
    font-weight: 500;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.item-main-desc {
    font-size: 28rpx;
    color: #999;
    width: 456rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top: 20rpx;
}

.item-price-wrapper {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 35rpx;
}

.item-price-wrapper view {
    font-size: 40rpx;
    color: #23a42c;
    font-weight: 500;
}

.item-price-wrapper button {
    border-radius: 50rpx;
    font-size: 30rpx;
    color: #fff;
    background: #23a42c;
    border: none;
    margin: 0;
    margin-right: 20rpx;
    line-height: 2;
    box-shadow: -2rpx 2rpx 10rpx 3rpx rgba(35,164,44,0.3);
}

.item-price-wrapper button::after {
    border: none;
}

.content3 {
    width: 100%;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.content3 .goods-item {
    width: 49%;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
}

.content3 .goods-item:last-child,.content3 .goods-item:nth-last-child(2) {
    margin-bottom: 0rpx;
}

.content3 .goods-item image {
    width: 100%;
    height: 338rpx;
    display: block;
    border-radius: 10rpx 10rpx 0 0;
}

.content3 .goods-item .item-name {
    padding: 0 15rpx;
    box-sizing: border-box;
    width: 100%;
    line-height: 45rpx;
    height: 90rpx;
    font-size: 28rpx;
    color: #353535;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    white-space: normal;
    text-align: left;
    padding-top: 10rpx;
}

.item-price {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 15rpx;
    box-sizing: border-box;
    line-height: 31px;
}

.item-price view:first-child {
    font-size: 34rpx;
    color: #323232;
    font-weight: 500;
}

.item-price view:last-child {
    font-size: 40rpx;
    color: #24A42D;
    height: 100%;
    display: inline-block;
    vertical-align: bottom;
}

.shodow {
    box-shadow: -2rpx 2rpx 15rpx rgba(10,10,10,0.2);
}