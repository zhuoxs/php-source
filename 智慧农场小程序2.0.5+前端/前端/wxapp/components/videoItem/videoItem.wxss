@import "../../__wuBaseWxss__/2.wxss";

.article-content {
    width: 92%;
    margin: 0 auto;
    padding: 20rpx 0;
}

.article-content .article-title {
    font-size: 32rpx;
    color: #323232;
    line-height: 50rpx;
    letter-spacing: 3rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.article-content .img-wrapper {
    width: 100%;
    height: 397rpx;
    border-radius: 10rpx;
    margin-top: 10rpx;
    position: relative;
    overflow: hidden;
}

.article-content .img-wrapper image {
    width: 100%;
    height: 100%;
}

.img-mask {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.4);
}

.playIcon {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    border: 5rpx solid #fff;
    line-height: 80rpx;
    text-align: center;
    font-size: 40rpx;
    color: #fff;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    text-indent: 10rpx;
}

.article-content .article-time {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #8F8F93;
    letter-spacing: 3rpx;
    line-height: 60rpx;
}

.article-content .article-time view:last-child {
    line-height: 60rpx;
}

.article-content .article-time view:last-child {
    margin-left: 20rpx;
}

.article-content .article-time view:last-child text {
    display: inline-block;
    line-height: 60rpx;
}

.article-content .article-time view:last-child text:first-child {
    font-size: 38rpx;
    margin-right: 10rpx;
    vertical-align: middle;
    line-height: 60rpx;
    margin-top: -5rpx;
}