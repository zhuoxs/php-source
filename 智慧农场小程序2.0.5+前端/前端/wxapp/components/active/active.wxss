@import "../../__wuBaseWxss__/2.wxss";

.container {
    width: 100%;
    padding: 15rpx;
    box-sizing: border-box;
}

.scrollView {
    width: 100%;
}

.item {
    display: inline-block;
    width: 100%;
    height: 440rpx;
    border-radius: 15rpx;
    overflow: hidden;
    padding: 0rpx 15rpx;
    box-sizing: border-box;
}

.item image {
    width: 100%;
    height: 280rpx;
    display: block;
    border-radius: 15rpx 15rpx 0 0;
}

.wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx;
    box-sizing: border-box;
    border-radius: 0 0 15rpx 15rpx;
    overflow: hidden;
    box-shadow: -4rpx 4rpx 20rpx rgba(0,0,0,0.3);
}

.wrapper-left {
    width: 300rpx;
}

.wrapper-left view {
    color: #959595;
    font-size: 28rpx;
    letter-spacing: 3rpx;
}

.wrapper-left view:first-child {
    font-size: 32rpx;
    font-weight: 500;
    color: #0F0F0F;
    margin-bottom: 10rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.item-price {
    font-size: 36rpx;
    font-weight: bold;
    color: #474747;
}