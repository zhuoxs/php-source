@import "../../__wuBaseWxss__/2.wxss";

.coupon_container {
    padding: 20rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #ececec;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 28rpx;
    color: #545454;
}

.coupon {
    width: 47rpx;
    height: 37rpx;
}

.coupon_title {
    margin-left: 20rpx;
    font-size: 28rpx;
    color: #fb8919;
}

.coupons {
    width: 100%;
    height: 165rpx;
    padding: 20rpx;
    box-sizing: border-box;
}

.coupons_container {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    white-space: nowrap;
}

.coupon_item {
    height: 125rpx;
    width: 250rpx;
    position: relative;
    display: inline-block;
}

.coupon_item:not(:last-child) {
    margin-right: 25rpx;
}

.voucher {
    width: 250rpx;
    height: 125rpx;
}

.voucher_container {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 99;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.receive {
    width: 30rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    font-size: 20rpx;
    color: #fff;
    text-align: center;
    padding-top: 10rpx;
    padding-left: 5rpx;
}

.receive text:not(:first-child) {
    margin-top: 0rpx;
}

.voucher_desc {
    color: #fff;
    text-align: center;
    width: 160rpx;
}

.voucher_price {
    font-size: 40rpx;
    line-height: 45rpx;
    border-bottom: 1rpx solid #fff7c4;
}

.condition {
    font-size: 22rpx;
    margin-top: 10rpx;
    letter-spacing: 2rpx;
}

.is-get {
    line-height: 40rpx;
    color: white;
}

.flex {
    display: flex;
    align-items: center;
}

.f48 {
    font-size: 48rpx;
}

.right-icon {
    float: right;
    font-size: 24rpx;
}

.block20 {
    height: 20rpx;
    background-color: #f7f7f7;
}