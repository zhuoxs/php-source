@import "../../../__wuBaseWxss__/0.wxss";

.main_bg {
    width: 100%;
    height: 100%;
}

.userNickNames {
    text-align: center;
    color: #fff;
    background: #d4c37d;
    height: 55rpx;
    line-height: 55rpx;
    font-size: 30rpx;
    border: 4rpx solid #5e2612;
    border-radius: 25rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding: 0rpx 25rpx;
}

.friend_wrapper {
    width: 80%;
    height: 800rpx;
    position: fixed;
    top: 415rpx;
    background: rgba(255,255,255,0.7);
    z-index: 200;
    border-radius: 25rpx;
    box-shadow: 0rpx 3rpx 8rpx rgba(0,0,0,0.4);
    transition: all 0.3s;
}

.closeImg {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    top: -20rpx;
    right: -20rpx;
}

.headLine {
    width: 100%;
    height: 60rpx;
    border-bottom: 7rpx solid #C58F17;
}

.friend_list {
    width: 100%;
    height: 733rpx;
    overflow-y: auto;
    padding: 30rpx 30rpx 0rpx;
    box-sizing: border-box;
}

.friend_item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
    background: #D4C37D;
    box-shadow: 0 0 15rpx #C5921D inset;
    border-radius: 20rpx;
    margin-bottom: 30rpx;
}

.friend_item_avator {
    width: 100rpx;
    height: 100rpx;
}

.friend_name {
    margin: 0 10rpx;
    color: #8B4C20;
    font-size: 32rpx;
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.visited {
    font-size: 30rpx;
    color: #fff;
    background: #DF6210;
    width: 120rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 20rpx;
    letter-spacing: 3rpx;
}

.flexSeedNum {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 130rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.flexSeedNum .reduce {
    width: 40rpx;
    height: 40rpx;
}

.select_seed_num {
    width: 45rpx;
    text-align: center;
    font-size: 32rpx;
}

.show {
    left: 10%;
}

.hide {
    left: -750rpx;
}

.animal {
    position: absolute;
    top: 475rpx;
    left: 40rpx;
}

.animal {
    position: absolute;
    top: 260rpx;
    left: 300rpx;
}

.animal_wrapper {
    width: 80%;
    position: fixed;
    height: 480rpx;
    top: 450rpx;
    border-radius: 25rpx;
    z-index: 200;
    box-sizing: border-box;
    transition: all .3s;
}

.animal_detail_wrapper {
    background: rgba(255,255,255,0.7);
    height: 100%;
    border-radius: 25rpx;
}

.coverView {
    width: 100%;
    height: 70rpx;
    position: relative;
}

.closeLand {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    top: -20rpx;
    right: -20rpx;
}

.land_detail_titl {
    width: 100%;
    text-align: center;
    font-size: 32rpx;
    color: #655E3E;
    line-height: 70rpx;
    letter-spacing: 3rpx;
}

.land_detail_content {
    width: 90%;
    height: 350rpx;
    border-radius: 25rpx;
    background: #D4C37D;
    margin: 20rpx auto 0rpx;
    overflow: hidden;
}

.land_detail_content view {
    padding: 20rpx 40rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #625A3A;
}

.land_detail_content view:not(:last-child) {
    border-bottom: 1rpx dashed #E1D9B8;
}

.noAnimal {
    width: 80%;
    position: fixed;
    height: 220rpx;
    left: 10%;
    top: 450rpx;
    border-radius: 25rpx;
    z-index: 200;
    box-sizing: border-box;
    transition: all .3s;
    background: rgba(255,255,255,0.7);
    transform: scale(0);
}

.noAnimal_content {
    width: 90%;
    height: 80rpx;
    border-radius: 25rpx;
    background: #D4C37D;
    margin: 0rpx auto;
    overflow: hidden;
    padding: 20rpx 40rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #625A3A;
    text-align: center;
}

.sacle1 {
    transform: scale(1);
}

.sacle0 {
    transform: scale(0);
}