@import "../../../../__wuBaseWxss__/2.wxss";

.userInfo_wrapper {
    width: 100%;
    height: 350rpx;
    background: #fc8535;
    overflow: hidden;
    position: relative;
}

.cloud_wrapper {
    width: 850rpx;
    position: absolute;
    bottom: -30rpx;
    left: -50rpx;
}

.cloud_wrapper image {
    width: 100%;
}

.avator_wrapper {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    overflow: hidden;
    margin: 50rpx auto 30rpx;
}

.nickname_wrapper {
    width: 100%;
    font-size: 32rpx;
    color: #fff;
    text-align: center;
}

.deal_content {
    width: 100%;
    background: #fff;
    height: 180rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.deals {
    width: 33.3%;
    height: 100%;
}

.deals_wrapper {
    width: 100%;
    height: 120rpx;
    margin-top: 30rpx;
    text-align: center;
    font-size: 30rpx;
    color: #282828;
    position: relative;
}

.deal_num {
    margin-top: 15rpx;
    color: #fc8535;
    font-size: 40rpx;
    font-weight: 600;
}

.deal_money {
    font-size: 26rpx;
}

.deals:not(:last-child) .deals_wrapper::after {
    content: '';
    width: 1rpx;
    display: block;
    height: 90rpx;
    position: absolute;
    right: 0;
    top: 15rpx;
    background: #f4f4f4;
}

.block {
    height: 20rpx;
    background: #f4f4f4;
}

.func_container {
    width: 100%;
}

.fun_title {
    padding: 25rpx 50rpx;
    box-sizing: border-box;
    font-size: 34rpx;
    font-weight: 600;
    border-bottom: 1rpx solid #ededed;
    letter-spacing: 2rpx;
}

.fun_wrapper {
    width: 100%;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.fun_view {
    width: 33.1%;
    height: 250rpx;
    text-align: center;
    font-size: 32rpx;
    color: #626262;
}

.fun_view image {
    width: 55rpx;
    height: 55rpx;
}

.icon-content {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.icon-content .item {
    color: #9b9b9b;
    width: 25%;
    text-align: center;
    padding: 20rpx 0rpx;
    letter-spacing: 2rpx;
    font-size: 24rpx;
}

.icon-content .item .iconfont {
    font-size: 54rpx;
    margin-bottom: 5rpx;
}