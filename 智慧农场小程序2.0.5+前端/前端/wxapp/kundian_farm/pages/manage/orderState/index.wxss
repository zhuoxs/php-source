@import "../../../../__wuBaseWxss__/2.wxss";

page {
    background: #f8f8f8;
    font-size: 30rpx;
}

.detail-top {
    width: 100%;
    height: 180rpx;
    background: white;
    background: linear-gradient(to right,orange,red);
    color: white;
    font-size: 28rpx;
}

.detail-top .t-status {
    width: 50%;
    text-align: center;
    font-size: 32rpx;
}

.detail-top .icon {
    width: 50%;
    text-align: center;
}

.detail-top .icon .icon-fukuan {
    width: 70rpx;
    height: 120rpx;
}

.icon .icon-package {
    width: 150rpx;
    height: 120rpx;
}

.icon .icon-Shipping {
    width: 180rpx;
    height: 120rpx;
}

.icon .icon-sorry {
    width: 120rpx;
    height: 120rpx;
}

.address {
    width: 94%;
    background: white;
    padding: 20rpx 20rpx;
}

.address .icon {
    width: 12%;
    text-align: center;
}

.icon-position1 {
    color: #09BB07;
}

.address .add-info {
    width: 79%;
}

.add-info .phone {
    color: gray;
    font-size: 24rpx;
    margin-left: 20rpx;
}

.adddetail {
    margin-top: 10rpx;
}

.commodify-contain {
    width: 94%;
    height: auto;
    padding: 20rpx 20rpx;
    margin-top: 20rpx;
    background: white;
}

.commodify-ul {
    width: 100%;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

.commodify-ul .godos-cover {
    width: 170rpx;
    height: 170rpx;
    border-radius: 10rpx;
}

.commodify-ul .goo-info {
    width: 59%;
    margin-left: 1%;
    font-size: 24rpx;
    height: 170rpx;
}

.commodify-ul .goods-name {
    margin-bottom: 20rpx;
}

.commodify-ul .price-count {
    width: 15%;
    height: 170rpx;
    text-align: right;
}

.price-count .count {
    color: gray;
}

.other-info {
    width: 100%;
    height: 40rpx;
    font-size: 24rpx;
    color: gray;
}

.other-info .title {
    width: 50%;
}

.other-info .value {
    width: 50%;
    text-align: right;
}

.order-info {
    width: 100%;
    height: auto;
    background: white;
    margin-top: 20rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

.order-info .title {
    width: 90%;
    margin-left: 5%;
    height: 40rpx;
    line-height: 40rpx;
    border-left: 10rpx solid #09BB07;
    padding-left: 16rpx;
    margin-bottom: 26rpx;
}

.order-info .info-ul {
    width: 90%;
    margin-left: 5%;
    height: 50rpx;
    line-height: 50rpx;
    color: gray;
    font-size: 28rpx;
}

.info-ul .info-title {
    width: 25%;
}

.confirm {
    width: 140rpx;
    border: none;
    color: #fff;
    background-color: #fc8535;
    line-height: 2.5;
    font-size: 24rpx;
    margin: 30rpx 30rpx 30rpx 0rpx;
    padding: 0;
}

.confirm::after {
    border: none;
}

.cancelOrder {
    width: 140rpx;
    border: 1rpx solid #fc8535;
    color: #fc8535;
    background-color: #fff;
    line-height: 2.5;
    font-size: 24rpx;
    margin: 30rpx 30rpx 30rpx 0rpx;
    padding: 0;
}

.cancelOrder::after {
    border: none;
}

.footer {
    width: 100%;
    height: 120rpx;
    background: white;
    position: fixed;
    bottom: 0rpx;
}

.bomx-contain {
    width: 100%;
    height: 100%;
}

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    background: black;
    opacity: 0.5;
    z-index: 9;
}

.box {
    width: 86%;
    margin-left: 7%;
    height: 520rpx;
    background: white;
    z-index: 999;
    position: fixed;
    top: 15%;
    border-radius: 10rpx;
}

.box .box-title {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #f4f4f4;
    text-align: center;
    font-size: 30rpx;
}

.box .icon-delete1 {
    position: absolute;
    left: 90%;
    color: gray;
    font-size: 40rpx;
}

.box .info-input {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
}

.info-input .input {
    width: 45%;
    margin-left: 5%;
    height: 100%;
}

.input input {
    height: 100%;
    width: 90%;
}

.btm-border {
    border-bottom: 1rpx solid #f4f4f4;
}

.b-right {
    border-right: 1rpx solid #f4f4f4;
}

.region {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
}

.region picker {
    width: 87%;
    margin-left: 5%;
}

.detail-add {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
}

.detail-add .detail-input {
    width: 84%;
    margin-left: 5%;
}

.detail-input input {
    width: 90%;
    height: 100%;
}

.box .btn {
    width: 90%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    color: white;
    background: #09BB07;
    border-radius: 15rpx;
    margin-top: 50rpx;
}

button::after {
    border: none;
}

.dis-btm {
    width: 100%;
    height: 120rpx;
    text-align: center;
    color: gray;
}

@-webkit-keyframes fadeIn {
    0% {
        opacity: 0;
        transform: scale(0.2);
    }

    50% {
        opacity: 0;
        transform: scale(0.5);
    }

    100% {
        opacity: 1;
        transform: scale(1);
    }
}

.box {
    -webkit-animation-name: fadeIn;
    -webkit-animation-duration: .5s;
    -webkit-animation-iteration-count: 1;
    -webkit-animation-delay: 0s;
}