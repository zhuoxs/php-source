@import "../../../../__wuBaseWxss__/2.wxss";

.info {
    width: 100%;
}

.info .info-content {
    width: 90%;
    margin-left: 5%;
    background-color: #fff;
}

.info .info-content .info-label {
    border-bottom: 1rpx #ccc solid;
    padding: 24rpx 0;
    width: 100%;
}

.info .info-content:last-child .info-label {
    border: none;
}

.info-content .info-label .info-left {
    width: 60%;
}

.info-content .info-label .info-left .info-up {
    color: #353535;
    margin-bottom: 20rpx;
}

.info-content .info-label .info-left .info-down {
    font-size: 28rpx;
    color: #666;
}

.info-content .info-label .info-right {
    width: 40%;
    text-align: right;
    line-height: 100rpx;
    color: #09BB07;
}

.flex {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.flex-row {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    flex-direction: row;
}

.none-content {
    width: 100%;
    height: 500rpx;
    text-align: center;
    font-size: 28rpx;
    color: gray;
}

.none-content image {
    width: 300rpx;
    height: 200rpx;
    margin-top: 200rpx;
}