@import "../../../../__wuBaseWxss__/2.wxss";

.currentLand {
    width: 90%;
    margin: 20rpx auto 0rpx;
    font-size: 32rpx;
    display: flex;
    align-items: center;
    color: #16BA63;
}

.shopAdd {
    font-size: 40rpx;
    color: #16BA63;
    margin-right: 10rpx;
}

.block {
    margin-top: 30rpx;
    height: 30rpx;
    background: #EFEFEF;
}

.main {
    width: 90%;
    margin: 30rpx auto 0;
}

.mian_title {
    font-size: 32rpx;
    border-left: 10rpx solid #16BA63;
    padding-left: 20rpx;
    box-sizing: border-box;
    font-weight: 500;
    line-height: 40rpx;
}

.situation_wrapper {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #7A7A7A;
    text-align: center;
}

.situation_data {
    font-size: 32rpx;
    color: #464646;
}

.humidity {
    height: 80rpx;
    width: 56rpx;
}

.temperature {
    height: 80rpx;
    width: 76rpx;
}

.co2 {
    height: 80rpx;
    width: 48rpx;
}

.Illumination {
    width: 80rpx;
    height: 80rpx;
}

.progress_wrapper {
    width: 90%;
    margin: 50rpx auto 0rpx;
}

.progress_bar_wrapper {
    width: 100%;
    height: 80rpx;
    border-radius: 50rpx;
    overflow: hidden;
    position: relative;
    background: #E0E0E0;
    box-shadow: 0 2rpx 10rpx rgba(0,0,0,.3);
}

.progress_bar {
    height: 100%;
    width: 0rpx;
    box-shadow: 0 0 15rpx rgba(0,0,0,.3) inset;
}

.model {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    box-shadow: 0 5rpx 25rpx rgba(0,0,0,.7) inset;
    z-index: 99;
    border-radius: 50rpx;
    color: #181614;
    font-size: 32rpx;
    text-align: center;
    line-height: 80rpx;
    font-weight: 500;
}

.data_wrapper {
    width: 100%;
    font-size: 24rpx;
    color: #666666;
    line-height: 30rpx;
    position: relative;
    margin-top: 20rpx;
    height: 30rpx;
}

.position1 {
    position: absolute;
    top: 0;
    left: -30rpx;
}

.position2 {
    position: absolute;
    top: 0;
    right: -50rpx;
}

.position3 {
    position: absolute;
    top: 0;
    text-align: center;
    width: 100%;
}

.container_model {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0,0,0,.3);
    z-index: 100;
}

.land_list {
    position: fixed;
    width: 100%;
    background: #fff;
    font-size: 32rpx;
    color: #535353;
    transition: all .3s;
    z-index: 200;
}

.show {
    top: 0;
    left: 0;
}

.hide {
    top: -2000rpx;
    left: 0;
}

.item_land {
    line-height: 100rpx;
    padding: 0 40rpx;
    box-sizing: border-box;
}

.active {
    background: #16BA63;
    color: #fff;
    border: none!important;
}

.item_land:not(:last-child) {
    border-bottom: 1rpx solid #f4f4f4;
}

.video {
    width: 100%;
    height: 385rpx;
    margin-bottom: 10rpx;
}

.block1 {
    height: 150rpx;
}

.footer {
    width: 100%;
    height: 120rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: space-around;
    border-top: 1rpx solid #eee;
    background: #fff;
    z-index: 100;
    font-size: 28rpx;
    color: #16BA63;
    text-align: center;
}

.footer_container {
    display: flex;
    align-items: center;
    justify-content: space-around;
    width: 100%;
    height: 120rpx;
    background: #fff;
    text-align: center;
}

.jiaoshui {
    height: 50rpx;
    width: 57rpx;
}

.chucao {
    height: 50rpx;
    width: 66rpx;
}

.chuchong {
    width: 50rpx;
    height: 50rpx;
}

.feiliao {
    height: 50rpx;
    width: 42rpx;
}

button {
    width: auto;
    height: 100rpx;
    padding: 0;
    background: none;
    border: none;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    line-height: 40rpx;
    font-size: 28rpx;
}

button::after {
    border: none;
}

.none {
    width: 100%;
    height: 300rpx;
    text-align: center;
}

.none image {
    width: 400rpx;
    height: 230rpx;
    margin-top: 60rpx;
}

.none .tags {
    color: gray;
    font-size: 24rpx;
    display: block;
}

.none .go-buy {
    width: 34%;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 70rpx;
    font-size: 26rpx;
    margin-left: 33%;
    margin-top: 20rpx;
    color: #6aa84f;
    border: 0.5px solid #6aa84f;
}