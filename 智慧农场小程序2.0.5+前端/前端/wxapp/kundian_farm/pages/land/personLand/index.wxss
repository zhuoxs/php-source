@import "../../../../__wuBaseWxss__/2.wxss";

page {
    background-color: #efefef;
}

.none {
    width: 100%;
    height: 300rpx;
    text-align: center;
}

.none image {
    width: 328rpx;
    height: 200rpx;
    margin-top: 60rpx;
}

.none .tags {
    color: gray;
    font-size: 24rpx;
    display: block;
}

.land_item {
    width: 94%;
    margin: 0rpx auto 30rpx;
    border-radius: 20rpx;
    background-color: #fff;
    overflow: hidden;
    margin-top: 20rpx;
}

.land_title {
    height: 100rpx;
    line-height: 100rpx;
    position: relative;
    font-size: 32rpx;
    color: #090909;
    padding-left: 20rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #bbb;
    overflow: hidden;
}

.status {
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    width: 200rpx;
    text-align: center;
    color: #fff;
    position: absolute;
    transform: rotate(45deg);
    right: -65rpx;
    top: 15rpx;
}

.planted {
    font-size: 30rpx;
    margin-bottom: 20rpx;
}

.list_content {
    padding: 30rpx 20rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #bbb;
}

.list_wrapper {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.footer {
    width: 100%;
    padding: 20rpx 0;
    display: flex;
    align-items: center;
    justify-content: space-around;
    font-size: 28rpx;
    text-align: center;
    color: #4d4d4d;
}

.footer view view:first-child {
    color: #828282;
    margin-bottom: 15rpx;
}

.land_num {
    font-size: 24rpx;
    color: gray;
    margin-left: 20rpx;
}

.fixedIcon {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background: #fff;
    position: fixed;
    box-shadow: 0 -2rpx 15rpx rgba(0,0,0,0.3);
    text-align: center;
    font-size: 24rpx;
    color: #16ba63;
}

.position3 {
    bottom: 60rpx;
    right: 10rpx;
}

.mt_5 {
    margin-top: -5rpx;
}

.cu-tag {
    margin-bottom: 10rpx;
    border-radius: 5rpx;
}