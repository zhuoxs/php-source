@import "../../../../__wuBaseWxss__/2.wxss";

page {
    background: #f4f4f4;
    font-size: 28rpx;
}

.title {
    width: 93%;
    height: 100rpx;
    line-height: 100rpx;
    padding-left: 2%;
    background: white;
    border-left: 10rpx solid #09BB07;
    margin-left: 2%;
    margin-top: 10rpx;
}

.title-val {
    margin-left: 20rpx;
    font-size: 32rpx;
}

.user-info {
    width: 96%;
    margin-left: 2%;
    height: 250rpx;
    padding: 10rpx 0 10rpx 0;
    background: white;
    border-radius: 10rpx;
    margin-top: 10rpx;
}

.user-info .user-ul {
    width: 90%;
    margin-left: 5%;
    height: 80rpx;
    line-height: 80rpx;
}

.user-ul .ul-title {
    width: 30%;
    color: gray;
}

.user-ul .ul-val {
    width: 70%;
    text-align: right;
}

.land-info {
    height: 570rpx;
}

.seed-info {
    height: 490rpx;
}

.goHome {
    width: 25rpx;
    height: 25rpx;
    position: fixed;
    top: 86%;
    left: 80%;
    border-radius: 50%;
    text-align: center;
    line-height: 25rpx;
    background: #09BB07;
    box-shadow: 1rpx 1rpx 10rpx #09BB07;
}

.goHome .iconfont {
    position: fixed;
    left: 83%;
    color: white;
}