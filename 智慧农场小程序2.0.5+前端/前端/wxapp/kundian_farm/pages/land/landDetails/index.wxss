@import "../../../../__wuBaseWxss__/2.wxss";

.banner {
    width: 100%;
    height: 396rpx;
    position: relative;
}

.monitor {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    top: 10rpx;
    right: 20rpx;
    z-index: 99999999;
}

.slide-cover {
    position: absolute;
    z-index: 99999999;
    width: 100%;
    height: 100%;
}

.land-video {
    width: 100%;
    height: 560rpx;
    background: black;
}

.live-play {
    width: 100%;
}

.land-video video {
    width: 100%;
    height: 450rpx;
}

.video-title {
    width: 100%;
    height: 80rpx;
    background: black;
}

.monitor-img {
    width: 80rpx;
    height: 80rpx;
    position: relative;
    left: 85%;
}

.land_info {
    width: 90%;
    margin: 30rpx auto 0;
    border-bottom: 1rpx solid #c9c9c9;
}

.land_name {
    font-size: 32rpx;
}

.land_ares {
    width: 100%;
    padding: 15rpx 0;
    font-size: 30rpx;
    color: #535353;
    display: flex;
    align-items: center;
}

.land_ares view {
    position: relative;
}

.land_ares view:not(:last-child) {
    margin-right: 30rpx;
}

.select_lands {
    width: 90%;
    margin: 20rpx auto 0;
}

.land_status {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-around;
    font-size: 24rpx;
}

.land_status_view {
    width: 25rpx;
    height: 25rpx;
    background: #d0d0d0;
    border-radius: 3rpx;
    margin-right: 10rpx;
    overflow: hidden;
    position: relative;
}

.land_status_view image {
    width: 28rpx;
    height: 74rpx;
}

.land_status_view view {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 50;
    opacity: 0.4;
    background: #fff;
}

.land_list {
    display: flex;
    align-items: flex-start;
    white-space: nowrap;
    width: 100%;
    margin-top: 20rpx;
}

.list_item {
    display: inline-block;
    width: 80rpx;
    height: 320rpx;
    text-align: center;
    font-size: 24rpx;
    color: #fff;
    margin-bottom: 10rpx;
}

.list_item radio {
    transform: scale(0.7);
}

.list_item:not(:last-child) {
    margin-right: 20rpx;
}

.title_wrapper {
    width: 100%;
    height: 280rpx;
    line-height: 45rpx;
    position: relative;
}

.title_wrapper image {
    width: 100%;
    height: 100%;
}

.land_model {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 80;
    background: #fff;
    opacity: 0.4;
}

.title_model {
    box-sizing: border-box;
    padding: 40rpx 0;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 100;
}

.block {
    height: 30rpx;
    background: #efefef;
}

.fun_info {
    width: 90%;
    margin: 30rpx auto 0;
}

.fun_title {
    border-left: 10rpx solid #16ba63;
    color: #464646;
    font-size: 32rpx;
    padding-left: 20rpx;
    box-sizing: border-box;
    line-height: 40rpx;
    font-weight: 500;
}

.situation {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin-top: 30rpx;
    font-size: 28rpx;
    text-align: center;
    color: #464646;
}

.cf888789 {
    color: #888789;
}

.humidity {
    height: 80rpx;
    width: 56rpx;
}

.temperature {
    height: 80rpx;
    width: 76rpx;
}

.co2 {
    height: 80rpx;
    width: 48rpx;
}

.Illumination {
    width: 80rpx;
    height: 80rpx;
}

.pro_wrapper {
    width: 100%;
    margin-top: 30rpx;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.pro_item {
    width: 25%;
    text-align: center;
    font-size: 28rpx;
    margin-bottom: 20rpx;
}

.pro_item image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 15rpx;
}

.proName {
    font-size: 30rpx;
    color: #464646;
    width: 160rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-weight: 500;
}

.yuji {
    color: #888789;
    motion: 10rpx 0;
    font-weight: 500;
}

.footer_wrapper {
    width: 100%;
    height: 110rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
}

.footer {
    z-index: 200;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 110rpx;
}

.shopCar {
    align-items: center;
    height: 100rpx;
}

.price {
    font-size: 36rpx;
    color: black;
    margin-left: 32rpx;
    font-weight: 600;
}

.confrim {
    width: 250rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 32rpx;
    color: #fff;
    background: #16ba63;
    text-align: center;
    letter-spacing: 2rpx;
    border-radius: 80rpx;
    margin-right: 10rpx;
}

.fertilizer {
    position: fixed;
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    background-color: #fff;
    display: flex;
    justify-content: center;
    font-size: 18rpx;
    color: #16ba63;
    text-align: center;
    box-shadow: 0rpx 0rpx 15rpx rgba(0,0,0,0.2);
    z-index: 9999;
}

.position2 {
    right: 10rpx;
    bottom: 200rpx;
    transition: all 0.3s 0.2s;
}

.position5 {
    right: -200rpx;
    bottom: 200rpx;
    transition: all 0.3s 0.2s;
}

.land-num {
    font-size: 28rpx;
    color: gray;
    margin-left: 33rpx;
}