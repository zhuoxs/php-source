page {
    background: #f4f4f4;
}

.head_container {
    width: 100%;
    height: 100rpx;
    background: #fff;
    position: fixed;
    top: 0;
    left: 0;
    border-bottom: 1rpx solid #e2e2e2;
    display: flex;
    align-items: center;
    justify-content: space-around;
    z-index: 99999999;
}

.team {
    height: 100%;
    padding: 0 10rpx;
    line-height: 100rpx;
    font-size: 34rpx;
    letter-spacing: 2rpx;
    color: #4c4b4b;
    position: relative;
}

.team::before {
    content: '';
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: currentColor;
    opacity: 0;
    transition: all 0.3s;
}

.active {
    color: #fc8535;
}

.active::before {
    content: '';
    opacity: 1;
    transition: all 0.3s;
    left: 0;
    bottom: 0;
    width: 100%;
}

.block {
    height: 100rpx;
}

.team_container {
    width: 100%;
    background-color: #fff;
    padding: 30rpx;
    box-sizing: border-box;
    margin-bottom: 20rpx;
    font-size: 28rpx;
}

.avator {
    width: 100rpx;
    height: 100rpx;
}

.info_content {
    flex: 1;
    margin-left: 30rpx;
    color: #5f5f5f;
    font-size: 28rpx;
    letter-spacing: 4rpx;
}

.cf3a {
    color: #3a3a3a;
}

.free {
    margin-top: 30rpx;
    padding-top: 20rpx;
    border-top: 1rpx solid #e2e2e2;
    color: #b1b1b1;
    font-size: 34rpx;
