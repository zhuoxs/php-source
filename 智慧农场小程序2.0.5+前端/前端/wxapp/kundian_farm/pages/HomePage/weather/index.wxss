@import "../../../../__wuBaseWxss__/2.wxss";

page {
    background: #f8f8f8;
}

.view_current {
    vertical-align: middle;
    position: relative;
}

.view_top {
    position: absolute;
    top: 60rpx;
    left: 36rpx;
    right: 36rpx;
    bottom: 0;
    color: #fff;
}

.weahter-box {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    text-align: center;
    width: 100%;
}

.wh-desc {
    position: absolute;
    top: 92%;
    transform: translateY(-50%);
    text-align: center;
    width: 100%;
    font-size: 30rpx;
}

.view_top .tx_address {
    font-size: 30rpx;
    font-weight: bold;
    padding: 10rpx 0rpx;
}

.view_top .tx_center {
    margin-top: 50rpx;
    display: flex;
    font-size: 24rpx;
    justify-content: space-between;
}

.view_top .tx_center .weather-aqi {
    padding: 10rpx 20rpx;
    background: rgba(0,0,0,0.2);
    border-radius: 8rpx;
}

.view_top .weather-other {
    font-size: 28rpx;
    text-align: center;
}

.weather-other>image {
    margin-left: 20rpx;
    margin-right: 16rpx;
    display: inline-block;
    vertical-align: middle;
    margin-top: -5rpx;
}

.weather-other .tel {
    width: 20rpx;
    height: 28rpx;
    margin-right: 10rpx;
}

.weather-other .wind {
    width: 25rpx;
    height: 25rpx;
}

.weather-other .him {
    width: 20rpx;
    height: 26rpx;
    margin-right: 10rpx;
}

.view_current>.view_bg {
    width: 100%;
    display: block;
}

.weather-ter-box {
    position: relative;
}

.weather-ter {
    padding-left: 50rpx;
    display: inline-block;
    text-align: center;
    position: relative;
    box-sizing: border-box;
}

.weather-ter .tel {
    font-size: 164rpx;
}

.weather-ter .tel-des {
    position: absolute;
    bottom: 30rpx;
    right: -10rpx;
    font-size: 32rpx;
}

.view_today {
    margin-top: 40rpx;
    margin-bottom: 40rpx;
    padding: 10rpx 2rpx;
    background-color: #fff;
}

.view_hourly {
    padding: 20rpx 0rpx;
    text-align: center;
    background-color: #fff;
}

.view_daily {
    margin-top: 40rpx;
    padding: 20rpx 2rpx;
    background-color: #fff;
}

.hourly_time {
    color: #aaa;
    font-size: 24rpx;
}

#hourly_scroll {
    margin-top: 30rpx;
    height: 100%;
    width: 100%;
    white-space: nowrap;
    overflow: scroll;
}

#daily_scroll {
    height: 100%;
    width: 100%;
    white-space: nowrap;
    overflow: scroll;
}

#today_scroll {
    height: 100%;
    width: 100%;
    white-space: nowrap;
    overflow: scroll;
}

.today_list {
    position: relative;
    display: inline-block;
    width: 50%;
    color: #333;
    font-size: 26rpx;
    height: 140rpx;
    text-align: center;
}

.today_day {
    position: absolute;
    font-size: 30rpx;
    left: 36rpx;
    top: 18rpx;
}

.today_temp {
    position: absolute;
    font-size: 30rpx;
    right: 22rpx;
    top: 20rpx;
}

.today_skyicon {
    position: absolute;
    right: 22rpx;
    bottom: 20rpx;
    width: 40rpx;
    height: 40rpx;
}

.today_skydesc {
    position: absolute;
    font-size: 28rpx;
    left: 36rpx;
    bottom: 20rpx;
}

.today_line {
    position: absolute;
    right: 0rpx;
    top: 14rpx;
    height: 118rpx;
    width: 1rpx;
    background-color: #D8D8D8;
}

.hourly_list {
    display: inline-block;
    width: 16.66%;
    color: #333;
    font-size: 26rpx;
    height: 100%;
    text-align: center;
}

#daily_list {
    display: inline-block;
    overflow: scroll;
    width: 20%;
    color: #333;
    font-size: 26rpx;
    height: 100%;
    text-align: center;
}

.item {
    display: block;
    text-align: center;
}

#daily_aqi_text {
    font-size: 26rpx;
    padding: 4rpx 30rpx;
    vertical-align: center;
    border-radius: 10rpx;
}

.today_aqi .daily_aqi_text {
    color: #fff;
    font-size: 20rpx;
    padding-top: 2px;
    vertical-align: center;
}

.today_aqi {
    position: absolute;
    font-size: 20rpx;
    left: 110rpx;
    top: 24rpx;
    width: 50rpx;
    height: 30rpx;
    border-radius: 4rpx;
    text-align: center;
    vertical-align: center;
}

#daily_aqi_item {
    margin: auto;
    font-size: 28rpx;
}

#daily_skyicon {
    width: 56rpx;
    height: 56rpx;
    margin: auto;
}

.wind {
    font-size: 24rpx;
    display: block;
    height: 36rpx;
}

.tx_address {
    display: flex;
}

.tx_address>image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
    vertical-align: center;
    padding: 6rpx 0rpx;
}

.tx_address>text {
    vertical-align: center;
}

#desc_hourly {
    color: #333333;
    font-size: 28rpx;
    margin: 2rpx 0rpx;
}

#aqi_image {
    width: 32rpx;
    height: 32rpx;
    padding: 0rpx 12rpx 0rpx 0rpx;
    vertical-align: middle;
}