@import "../../../../__wuBaseWxss__/2.wxss";

.swiperS {
    width: 100%;
    height: 450rpx;
}

.doctor {
    width: 80rpx;
    height: 80rpx;
    position: relative;
}

.chooseColor {
    position: relative;
    height: 100%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    width: 500rpx;
    line-height: 100rpx;
}

.more {
    float: right;
    position: relative;
    color: gray;
    top: -1rpx;
    font-size: 26rpx;
}

.swiper_container {
    position: relative;
    margin-top: 20rpx;
}

.swiper {
    width: 100%;
    height: 100%;
}

.project_container {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.project {
    width: 25%;
    margin-bottom: 20rpx;
    font-size: 30rpx;
    text-align: center;
    color: #141414;
}

.project image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.vet-info {
    border-top: 1rpx solid #f7f7f7;
    border-bottom: 1rpx solid #f7f7f7;
    height: 100rpx;
}

.defaultColor {
    background: #cecece;
}

.coupon_containers {
    width: 90%;
    margin: 0 auto;
    height: 70rpx;
}

.coupons_containers {
    width: 90%;
    margin: 0 auto;
    height: 170rpx;
}

.LiveTitless {
    width: 90%;
    height: 70rpx;
    margin: 20rpx auto;
}

.mock_img {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    background-color: #cecece;
    display: inline-block;
}

.mock_desc {
    width: 120rpx;
    height: 35rpx;
    background-color: #cecece;
    display: inline-block;
    margin-top: 5rpx;
}

.custom-video {
    width: 100%;
    height: 450rpx;
}

.hint {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    width: 470rpx;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 26rpx;
    color: #fff;
    background: #181818;
    opacity: 0.7;
    z-index: 999999;
    border-radius: 10rpx;
    text-align: center;
}

.hint_text::before {
    content: "";
    width: 30rpx;
    height: 25rpx;
    background: #181818;
    position: absolute;
    top: -10rpx;
    right: 115rpx;
    transform: rotate(45deg);
}

.hide {
    display: none;
}

.show {
    display: block;
}