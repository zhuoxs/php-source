@import "../../../../../__wuBaseWxss__/2.wxss";

page {
    background-color: #f4f4f4;
}

.line {
    width: 100%;
    height: 10rpx;
}

.positionImg {
    width: 50rpx;
    height: 64rpx;
}

.address {
    width: 500rpx;
    font-size: 30rpx;
    color: #333333;
}

.block20 {
    height: 20rpx;
    background-color: #f4f4f4;
}

.headImg {
    width: 180rpx;
    height: 180rpx;
}

.itemName {
    font-size: 28rpx;
    color: #3e3e3e;
    width: 450rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.message {
    width: 650rpx;
    background-color: #f5f5f5;
    border-radius: 5rpx;
    padding: 10rpx;
}

.block100 {
    height: 100rpx;
}

.footer {
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    border-top: 1rxp solid #dfdfdf;
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    display: flex;
    align-items: center;
    color: #fc8535;
}

.payfor {
    position: absolute;
    right: 0;
    top: 0;
    width: 250rpx;
    height: 100%;
    background-color: #fc8535;
    font-size: 34rpx;
    color: #fff;
    text-align: center;
    line-height: 100rpx;
}

.payfor button {
    background: #fc8535;
    height: 100%;
    width: 100%;
    text-align: center;
    color: white;
}

.address-line {
    width: 100%;
    height: 10rpx;
}

.address-line image {
    width: 100%;
    height: 100%;
    display: block;
}