@import "../../../../__wuBaseWxss__/2.wxss";

page {
    background-color: #f7f7f7;
}

.buyItem {
    padding: 30rpx 20rpx;
    background-color: #fff;
    width: 90%;
    margin-left: 2%;
    margin-top: 20rpx;
    border-radius: 10rpx;
}

.headImg {
    width: 180rpx;
    height: 180rpx;
}

.itemName {
    font-size: 26rpx;
    color: #3e3e3e;
    width: 400rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.itemspec {
    width: 330rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    font-size: 24rpx;
}

.opration {
    position: absolute;
    right: 40rpx;
}

.reduceNum {
    border: 1rpx solid #dadada;
    padding: 5rpx 20rpx;
    font-size: 30rpx;
    color: #414141;
    border-right: none;
}

.addNum {
    border: 1rpx solid #dadada;
    padding: 5rpx 20rpx;
    font-size: 30rpx;
    color: #414141;
    border-left: none;
}

.buyNum {
    border: 1rpx solid #dadada;
    padding: 5rpx 30rpx;
    font-size: 30rpx;
    color: #414141;
}

.block120 {
    height: 120rpx;
}

.footer {
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    position: fixed;
    left: 0;
    bottom: 100rpx;
    display: flex;
    align-items: center;
    padding: 0rpx 20rpx;
    box-sizing: border-box;
}

.Settlement {
    width: 250rpx;
    height: 100%;
    display: flex;
    align-items: center;
    position: absolute;
    top: 0;
    right: 0;
}

.Settlement view {
    width: 86%;
    height: 75rpx;
    color: #fff;
    text-align: center;
    line-height: 75rpx;
    font-size: 28rpx;
    border-radius: 90rpx;
}

.none {
    width: 100%;
    height: 400rpx;
    margin-top: 150rpx;
    text-align: center;
}

.none image {
    width: 400rpx;
    height: 230rpx;
}

.none text {
    display: block;
    font-size: 28rpx;
    color: gray;
}

.none button {
    width: 30%;
    margin-left: 35%;
    height: 60rpx;
    background: #fc8535;
    color: white;
    margin-top: 20rpx;
    line-height: 60rpx;
}

.cu-list>.cu-item .move {
    transform: translateX(108%);
}