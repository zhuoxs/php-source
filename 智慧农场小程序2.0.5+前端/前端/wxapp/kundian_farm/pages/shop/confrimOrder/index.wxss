@import "../../../../__wuBaseWxss__/2.wxss";

.payfor button {
    width: 100%;
    text-align: center;
    color: white;
    height: 100rpx;
}

button::after {
    border: none;
}

page {
    width: 100%;
    background-color: #f4f4f4;
}

.card {
    width: 100%;
    height: 160rpx;
    background: #4497f7;
}

.card .card_header {
    width: 97%;
    display: flex;
    justify-content: space-around;
    margin: auto;
    padding: 20px 0 30px;
}

.card_header view {
    width: 47%;
    background: #d3eafc;
    text-align: center;
    color: #4497f7;
    font-size: 34rpx;
    line-height: 80rpx;
    border-radius: 10rpx 10rpx 0 0;
}

.card_address {
    width: 89%;
    margin: auto;
    padding: 20rpx 20rpx 30rpx;
    margin-top: -40rpx;
    z-index: 2;
}

.positionImg {
    width: 50rpx;
    height: 64rpx;
}

.address {
    width: 500rpx;
    font-size: 30rpx;
    color: #333;
}

.card_message {
    width: 89%;
    margin: 15rpx auto 10rpx;
    padding: 20rpx;
}

.headImg {
    width: 180rpx;
    height: 180rpx;
    border-radius: 8rpx;
}

.itemName {
    font-size: 28rpx;
    color: #3e3e3e;
    width: 440rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.message {
    width: 650rpx;
    background-color: #f5f5f5;
    border-radius: 5rpx;
    padding: 10rpx;
    font-size: 28rpx;
}

.card_goods {
    width: 94%;
    margin: auto;
    overflow: hidden;
    border-bottom: 1px dashed #ddd;
}

.goods_list {
    margin: 0rpx 20rpx 20rpx;
}

.goods_list .lists {
    margin-top: 20rpx;
    padding: 25rpx;
    background: #f5f5f5;
}

.card_information {
    width: 94%;
    margin: auto;
    border-bottom: 1px dashed #ddd;
}

.information_list {
    padding: 0 20rpx 20rpx;
}

.information_list .list_com {
    padding: 20rpx 0 0;
}

.total {
    width: 94%;
    margin: auto;
}

.card_total {
    padding: 20rpx;
    text-align: right;
}

.card_total view {
    display: inline-block;
}

.footer {
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    border-top: 1rxp solid #dfdfdf;
    margin-top: 20rpx;
    align-items: center;
    color: #fc8535;
    z-index: 2;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
}

.payfor {
    position: absolute;
    right: 0;
    top: 0;
    width: 250rpx;
    height: 100%;
    background-color: #fc8535;
    font-size: 34rpx;
    color: #fff;
    text-align: center;
    line-height: 100rpx;
}

.ft_com {
    height: 100rpx;
    margin-top: 20rpx;
}

.active {
    background: #fff!important;
}

.card-address {
    width: 65%;
    display: inline-block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.card_info {
    width: 100%;
    font-size: 30rpx;
    padding-bottom: 20rpx;
}

.card_info view {
    width: 94%;
    margin: auto;
}

.card_info view view {
    padding: 10rpx 0;
    display: flex;
    justify-items: center;
    vertical-align: middle;
}

.card_info input {
    display: inline-block;
    width: 400rpx;
    background: #fff;
    padding: 0;
    font-size: 30rpx;
}