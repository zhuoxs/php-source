@import "../../../template/calendarTemplate/calendarTemplate.wxss";

@import "../../../../../__wuBaseWxss__/2.wxss";

.userInfo {
    width: 100%;
    height: 500rpx;
    background-size: cover;
    position: relative;
}

.userSign {
    width: 250rpx;
    height: 250rpx;
    border-radius: 50%;
    background: linear-gradient(to top,rgba(255,255,255,1),rgba(253,237,205,1));
    box-shadow: 0rpx 0rpx 30rpx rgba(249,169,61,0.9);
    text-align: center;
    color: #fc8535;
}

.rule {
    width: 40rpx;
    height: 52rpx;
}

.integral {
    width: 90%;
    height: 300rpx;
    position: absolute;
    left: 5%;
    margin-top: 50rpx;
    background-color: #fff;
    border-radius: 20rpx;
    box-shadow: 0rpx 0rpx 30rpx rgba(249,169,61,0.9);
}

.headImg {
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
}

.RecordOfExchange {
    display: flex;
    align-items: center;
    justify-content: space-around;
    font-size: 30rpx;
    height: 100rpx;
    border-top: 1rpx solid #9a9a9a;
    color: #9a9a9a;
}

.calendar {
    margin-top: 110rpx;
}