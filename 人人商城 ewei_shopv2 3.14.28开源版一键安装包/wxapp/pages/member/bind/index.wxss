.fui-picker {
    height: 300rpx;
    background: red;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    transform: translate3d(0,100%,0);
    transition-property: transform;
    transition-property: transform,-webkit-transform;
}

.fui-picker.in {
    transform: translate3d(0,0,0);
    transition-duration: 300ms;
}

.fui-picker.out {
    transition-duration: 300ms;
    transform: translate3d(0,100%,0);
}

.fixed {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #ff3300;
}