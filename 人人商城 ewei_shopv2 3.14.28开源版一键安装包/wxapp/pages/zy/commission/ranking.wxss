page{background:#f4791d}
.container{ width: 100%; }
.rankhead { width: 100%; background-color: #ff8f30; position: relative; z-index: -1; }
.rankhead .head{ width: 100%; display: flex; display: -webkit-flex; height:280rpx; overflow: hidden; }
.bgimage{ opacity: 0.1; width:88%; margin: 0 6%; position: absolute; top:-48rpx; z-index: -1; }
.rankhead .child{ -webkit-flex: 3; flex: 3; display:flex; display: -webkit-flex; -webkit-flex-direction: column; flex-direction: column; -webkit-justify-content:center; justify-content:center; }
.child wx-view{ text-align: center; line-height: 40rpx; }
.child .text{ font-size: 36rpx; color: #fef31f; text-align: center; }
.child .text2{ font-size: 26rpx; color: #fff; text-align: center; }
.rankhead .gold{ -webkit-flex: 6; flex: 6; position: relative; padding-top: 32rpx; }
.gold wx-image{ width: 100%; height: 240rpx; position: absolute; top:32rpx; }
.gold wx-view{ position: relative; z-index: 3; text-align: center; }
.gold .myorder{ margin-top:52rpx; color: #fb3e27; font-size: 56rpx; height: 56rpx; }
.gold .text{ margin-top: 24rpx; font-size: 36rpx; color: #fef31f; }
.rankhead .title { background: #f4791d; color:#fff; height: 96rpx; line-height: 96rpx; font-size:28rpx; text-align: center; }
.ranklist{ width: 100%; background: #f4791d; }
.ranklist .main{ width: 96%; margin: 2%; background: #ffffff; border-radius: 24rpx; padding-bottom:24rpx; margin-bottom:160rpx; }
.ranklist .line{ height: 120rpx; width: 100%; line-height:120rpx; display: flex; display: -webkit-flex; border-bottom:1rpx solid #e5e5e5; }
.ranklist .line .center{ -webkit-flex: 3; flex: 3; display: flex; display: -webkit-flex; -webkit-justify-content: center; justify-content: center; }
.ranklist .title .center{ text-align: center; }
.ranklist .col{ -webkit-flex: 1; flex: 1; text-align: center; font-size: 28rpx; }
.ranklist .index{ padding: 0 16rpx; }
.ranklists .col{ border-right:1rpx solid #e5e5e5; }
.ranklists .rank{ position: relative; }
.ranklists .gold-img{ width: 84rpx; height: 102rpx; position: absolute; top:10rpx; left:26rpx; }
.ranklists .avatar{ -webkit-flex:1; flex:1; display:flex; display: -webkit-flex; -webkit-justify-content:center; justify-content:center; -webkit-align-items:center; align-items:center; }
.ranklists .avatar wx-image{ height: 96rpx; width:96rpx; border-radius: 50%; }
.ranklists .nickname{ -webkit-flex:2; flex:2; width:96rpx; text-align:left; white-space: nowrap; overflow:hidden; text-overflow:ellipsis; padding-right:24rpx; }
.ranklists .index{ color:#ffcc03; border:none; }
.btn{ margin: 24rpx 24rpx 0; }
