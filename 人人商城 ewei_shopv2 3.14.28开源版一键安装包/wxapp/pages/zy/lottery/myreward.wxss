.header-pic{width: 100%;height: 250rpx;background: #ff5555;}
.list-header{ display: block; width: 100%; text-align: center; }
.game-header{width: 100%;height: 70rpx;overflow: hidden;background: #f3f3f3;border-bottom: 2rpx solid #cccccc;}
.game-bgkuai{width: 8rpx;height: 30rpx;background: red;float: left;margin: 20rpx 20rpx;}
.game-biaoti{height: 100%;float: left;line-height: 70rpx;font-size: 28rpx;font-weight: 600;}
.userinfo-avatar { width: 150rpx; height: 150rpx; margin: 30rpx 0; border-radius: 50%; }
.header-name{ font-size: 20px; }
.list-container{ margin: 10px; padding: 5px 10px; border: 1px solid #ccc; background-color: #eee; text-align: left; border-radius: 10px; }
.list-item{ display: block; padding: 0 0; }
.list-btn{ margin: 1rem 2rem; }
.zjjl-list{width: 100%;height: auto;margin: 0 auto;}
.zjjl-item{width: 100%;height: 120rpx;border-bottom: 2rpx solid #cccccc;}
.zjjl-item-left{width: 120rpx;height: 100%;float: left;margin: 0 0 0 20rpx;}
.zjjl-item-left wx-image{width: 90rpx;height: 90rpx;margin: 15rpx;}
.zjjl-item-right{width: 75%;height: 100%;float: right;position: relative;margin: 0 20rpx 0 0;}
.right-top{width: 70%;text-align: left;font-size: 28rpx;float: left;overflow: hidden;text-overflow:ellipsis;white-space: nowrap;margin: 20rpx 0 0 0;}
.right-bottom{position: absolute;left: 0rpx;bottom: 25rpx;font-size: 24rpx;color: #666666;}
.right-bt{width: 126rpx;height: 56rpx;display: inline-block;position: absolute;right: 20rpx;top: 35rpx;background: red;color: #FFFFFF;text-align: center;line-height: 50rpx;border-radius: 10rpx;font-size: 28rpx;}
.right-ku{width: 120rpx;height: 50rpx;display: inline-block;position: absolute;right: 20rpx;top: 35rpx;border: 2px solid #666666;color: #666666;text-align: center;line-height: 50rpx;border-radius: 10rpx;font-size: 28rpx;}
.wei{font-size: 28rpx;color: #cccccc;width: 100%;height: 200rpx;text-align: center;line-height: 300rpx;}
.loading { padding: 10rpx; text-align: center; font-size: 24rpx;color: #666666; }
.loading::before { display: inline-block; margin-right: 5rpx; vertical-align: middle; content: ''; width: 40rpx; height: 40rpx; background-size: contain; -webkit-animation: rotate 1s linear infinite; animation: rotate 1s linear infinite; }
.loading.complete:before { display: none; }
