page { background-color: #f3f3f3; }
.container{ width: 100%; height: auto; overflow: hidden; background-color: #fff; border-top: 1px solid #eee; border-bottom: 1px solid #eee; margin: 20rpx 0; padding: 0 20rpx; box-sizing: border-box; }
.container>wx-view:first-of-type{ border: 0; }
.recordList{ width: 100%; height: auto; line-height: 1.6; padding: 20rpx 0; border-top: 1px solid #eee; color: #666; font-size: 28rpx; }
.recordList .recordList-text{ width: 85%; height: auto; overflow: hidden; float: left; }
.signTime-text{ display: inline-block; padding: 0 10rpx; margin-right: 10rpx; color: #fff; background-color: #04AB02; font-size: 24rpx; height: 40rpx; line-height: 40rpx; }
.recordList-credit{ width: 15%; float: right; text-align: right; color: #24B2F4; font-weight: bold; font-size: 34rpx; }
.recordNone{ width: 100%; height: auto; overflow: hidden; }
.recordNone-img{ width: 160rpx; height: 160rpx; margin: 40rpx auto; }
.recordNone-img wx-image{ width: 100%; height: 100%; display: block; }
.recordNone-text{ text-align: center; color: #666; font-size: 34rpx; }
