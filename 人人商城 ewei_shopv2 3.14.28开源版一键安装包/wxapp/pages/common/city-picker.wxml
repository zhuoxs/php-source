<view class="picker-modal city-picker {{showPicker?'in':'out'}} {{iphonexnavbar}}">
    <view class="picker-control">
        <view bindtap="onCancel" class="cancel">取消</view>
        <view bindtap="onConfirm" class="confirm">确定</view>
    </view>
    <picker-view bindchange="bindChange" class="picker" indicatorStyle="height: 40px;" value="{{pval}}" wx:if="{{!noArea}}">
        <picker-view-column>
            <view class="item" wx:for="{{areas}}" wx:key="item">{{item.name}}</view>
        </picker-view-column>
        <picker-view-column>
            <view class="item" wx:for="{{areas[ pval[0] ].city}}" wx:key="item">{{item.name}}</view>
        </picker-view-column>
        <picker-view-column>
            <view class="item" wx:for="{{areas[ pval[0] ].city[ pval[1] ].area}}" wx:key="item">{{item.name}}</view>
        </picker-view-column>
    </picker-view>
    <picker-view bindchange="bindChange" class="picker" indicatorStyle="height: 40px;" value="{{pval}}" wx:if="{{noArea}}">
        <picker-view-column>
            <view class="item" wx:for="{{areas}}" wx:key="item">{{item.name}}</view>
        </picker-view-column>
        <picker-view-column>
            <view class="item" wx:for="{{areas[ pval[0] ].city}}" wx:key="item">{{item.name}}</view>
        </picker-view-column>
    </picker-view>
</view>
