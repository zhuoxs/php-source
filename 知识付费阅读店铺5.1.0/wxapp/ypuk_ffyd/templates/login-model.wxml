<template name="tempLogin">
    <view class="loginModel" hidden="{{loginModelHidden}}">
        <image class="loginImg" src="../../resource/images/login.png"></image>
        <view class="loginText">我们需要获得您的授权，以继续操作</view>
        <button bindgetuserinfo="updateUserInfo" class="loginBtn" openType="getUserInfo">
            <image class="loginBtnimg" src="../../resource/images/weixin.png"></image>微信授权登录</button>
    </view>
    <view class="loginBg" hidden="{{loginModelHidden}}"></view>
</template>
