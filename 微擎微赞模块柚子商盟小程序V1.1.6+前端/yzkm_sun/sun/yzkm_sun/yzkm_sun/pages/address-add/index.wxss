/* chbl_sun/pages/address-add/index.wxss */
page{
    min-height: 100%;
    background-color: #efefef;
}
.container{
    width: 750rpx; 
    /* background-color: #f0eff5; */
    justify-content: initial;
}
.form-box{
    width:750rpx;
    background-color: #fff;
    margin-top: 20rpx;
}
.row-wrap{
    width: 720rpx; 
    height: 105rpx;
    line-height: 105rpx;
     padding-left: 30rpx; 
    border-bottom: 1rpx solid #eee;
     display: flex; 
    font-size: 28rpx;
}
.row-wrap .label{
    width: 160rpx;
    color: #000;
    font-size: 28rpx;
}
.row-wrap .label-right{
    flex: 1;
    height: 105rpx;
    line-height: 105rpx;
}
.row-wrap .label-right input{
    height: 100%;
    font-size: 26rpx;
    padding-right: 30rpx;
    color: #999999;
}
.row-wrap .right-box{
    margin-right: 30rpx; 
}
.arrow-right{
    width: 15rpx;
    height: 24rpx;
}
.save-btn,
.cancel-btn{
    width: 600rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    margin-top:30rpx; 
    border-radius: 10rpx;
    box-sizing: border-box;
    font-size: 32rpx;
}
button[type="primary"]{
    background-color: #ffb825;
    color:#fff;
}
button[type="default"]{
    background-color: #efefef; 
    color:#ffb825;
    border: 1rpx solid #ffb825; 
    box-sizing: border-box;
}
.addr-details{
    height: auto;
    padding: 30rpx 0;
    margin-left:30rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    font-size: 28rpx;
}
.addr-details .label{
    margin:auto 0 auto 0;
    width: 160rpx;
    color: #000
}
.addr-details textarea{
    box-sizing: border-box;
    width: 480rpx;
    overflow: scroll;
}
picker {
    min-width: 20rpx;
    height: 100%;
    margin-right: 20rpx;
}
.hui{
    color: #777;
}