<template name="login">
    <view class="cu-modal {{isShow?'show':''}}">
        <view class="cu-dialog" style="width:400rpx;position:relative">
            <view class="me shadow-blur">
                <view class="userinfo">
                    <view class="userinfo-avatar">
                        <open-data type="userAvatarUrl"></open-data>
                    </view>
                </view>
                <view class="animation-wave">
                    <view class="wave"></view>
                </view>
            </view>
            <button bindgetuserinfo="updateUserInfo" class="choose_view solid-bottom" openType="getUserInfo">
                <view class=" text-df padding-lg  bg-white"> 点此授权微信登录</view>
            </button>
        </view>
    </view>
</template>
