    <view class="biaoti">
    订单号：{{item.order_id}}
    <span>已支付</span>
    </view>
    <view class="neiros" wx:for="{{item.val}}">
        <view class="dingdsj">{{item.title}}
      <span>x{{item.num}}</span>
        </view>
        <view class="lldis">
      ￥{{item.price}}
    </view>
    </view>
    <view class="neiros">
