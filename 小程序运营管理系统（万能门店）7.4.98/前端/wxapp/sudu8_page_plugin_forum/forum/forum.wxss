.dzplbox {
    width: 100%;
    padding: 20rpx 10rpx;
    box-sizing: border-box;
    background-color: #F8F8F8;
    margin-top: 30rpx;
    position: relative;
    overflow: visible;
}

.dzh {
    padding: 0 16rpx;
}

.dzhleft {
    font-size: 36rpx;
    color: #CACACA;
    margin-right: 15rpx;
    overflow: hidden;
}

.dzhright {
    font-size: 24rpx;
    color: #232323;
    width: 550rpx;
}

.plhbox {
    padding: 0 16rpx;
    margin-top: 12rpx;
}

.plh {
    font-size: 24rpx;
    color: #434343;
    line-height: 40rpx;
    margin-top: 10rpx;
}

.plh:first-child {
    margin: 0;
}

.plh text {
    color: #2f74fd;
}

.sjx {
    height: 0;
