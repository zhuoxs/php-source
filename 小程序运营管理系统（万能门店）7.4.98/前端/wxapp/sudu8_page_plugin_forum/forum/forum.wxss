.hbj {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.flex1 {
    flex: 1;
}

.dynamic_single {
    padding: 50rpx 30rpx 40rpx;
    background-color: #fff;
    margin-top: 15rpx;
}

.dynamic_tx {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    margin-right: 24rpx;
}

.dynamic_view1_center {
    width: 470rpx;
}

.dynamic_name {
    font-size: 28rpx;
    color: #434343;
}

.dynamic_view1_right {
    font-size: 28rpx;
    color: #2f74fd;
}

.dynamic_view1_right image {
    width: 20rpx;
    height: 24rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}

.dynamic_content {
    font-size: 30rpx;
    color: #434343;
    line-height: 50rpx;
    margin-top: 20rpx;
}

.dynamic_imgbox {
    margin-top: 20rpx;
    font-size: 0;
}

.dynamic_img {
    width: 160rpx;
    height: 160rpx;
    margin-right: 16rpx;
    margin-bottom: 20rpx;
    border-radius: 12rpx;
}

.dynamic_img:nth-child(4n) {
    margin-right: 0;
}

.dynamic_img1 {
    width: 160rpx;
    height: 160rpx;
    margin-right: 16rpx;
    margin-bottom: 20rpx;
    border-radius: 12rpx;
}

.dynamic_img1:nth-child(3n) {
    margin-right: 0;
}

.dynamic_single_bot {
    margin-top: 30rpx;
}

.dynamic_single_bot_view {
    width: 150rpx;
    margin-right: 10rpx;
}

.dynamic_single_bot_text1 {
    font-size: 36rpx;
    color: #CACACA;
    margin-right: 10rpx;
    vertical-align: middle;
}

.dynamic_single_bot_text2 {
    font-size: 24rpx;
    color: #969696;
}

.dynamic_name_text1 {
    max-width: 240rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    display: block;
    font-size: 28rpx;
    color: #434343;
    font-weight: bold;
}

.dynamic_name_text2 {
    font-size: 24rpx;
    color: #969696;
    font-family: Arial,Helvetica,sans-serif;
    vertical-align: 8rpx;
}

.forum_card_single {
    padding: 2rpx 20rpx;
    border-radius: 40rpx;
    font-size: 24rpx;
    color: #fff;
    margin-right: 10rpx;
}

.forum_phone {
    width: 40rpx;
    height: 40rpx;
}

.forum_address {
    margin: 10rpx auto;
}

.forum_address_left {
    width: 24rpx;
    height: 28rpx;
    margin-right: 10rpx;
}

.forum_address_right {
    width: 650rpx;
    height: 38rpx;
    line-height: 38rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 24rpx;
    color: #969696;
}

.forum_scroll {
    padding: 0 30rpx;
    background-color: #fff;
    width: 100%;
    box-sizing: border-box;
    font-size: 0;
    white-space: nowrap;
}

.forum_scroll_view {
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 2rpx solid #fff;
    color: #232323;
    font-size: 28rpx;
    display: inline-block;
    margin-right: 60rpx;
    padding: 0 8rpx;
}

.forum_scroll_view:last-child {
    margin-right: 0;
}

.forum_scroll_view_on {
    color: #2f74fd;
    border-bottom: 2rpx solid #2f74fd;
}

.release_btn {
    width: 88rpx;
    height: 88rpx;
    bottom: 400rpx;
    right: 30rpx;
    border-radius: 50%;
    background-color: #E32C3A;
    text-align: center;
    position: fixed;
    color: #fff;
    font-size: 28rpx;
}

.hbj2 {
