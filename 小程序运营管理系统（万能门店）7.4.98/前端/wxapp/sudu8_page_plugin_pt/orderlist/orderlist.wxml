<import src="/sudu8_page/templates/common.wxml"></import>
<view>
    <view class="qxiq bg_f" wx:for="{{orderinfo}}">
        <view class="qxiqt">
      订单号：{{item.order_id}}
    </view>
        <view class="fenggs" wx:for="{{item.jsondata}}" wx:for-item="list">
            <view class="thumbdx">
                <image src="{{list.proinfo.thumb}}"></image>
            </view>
            <view class="jbxx">
                <view class="bbts">
            {{list.baseinfo2.title}}
          </view>
                <view class="bbts2">
            {{list.proval_ggz}}
          </view>
                <view class="zts">
                    <span>￥{{list.proval_price}}</span> x {{list.num}}
          </view>
            </view>
        </view>
        <view class="fenggs" wx:if="{{item.kuadi}}">
        快递：{{item.kuadi}} {{item.kuaidihao?'- '+item.kuaidihao:''}}
      </view>
        <view class="piaos" style="color:#FF4544" wx:if="{{item.types==1&&item.ck==1}}">我发起的</view>
        <view class="piaos" wx:if="{{item.types==1&&item.ck==2}}">我参与的</view>
        <view class="dibccd">
      总价：{{item.price}}元
      <navigator class="fukuanbtn" url="/sudu8_page_plugin_pt/pt/pt?shareid={{item.pt_order}}" wx:if="{{item.ptflag==1}}">进行中</navigator>
            <navigator class="fukuanbtn" url="/sudu8_page_plugin_pt/pt/pt?shareid={{item.pt_order}}" wx:if="{{item.ptflag==2||item.ptflag==4}}">已成团</navigator>
            <navigator class="fukuanbtn" url="/sudu8_page_plugin_pt/pt/pt?shareid={{item.pt_order}}" wx:if="{{item.ptflag==3}}">已失败</navigator>
            <navigator class="fukuanbtn2 dzf" url="/sudu8_page_plugin_pt/order/order?orderid={{item.order_id}}&shareid={{item.pt_order}}&addressid={{item.address}}&again=1" wx:if="{{item.flag==0&&item.ck==2&&item.join_count<item.pt_max&&!item.pt_tx.flag||item.flag==0&&item.ck==1&&!item.join_count&&!item.pt_tx.flag}}">待支付</navigator>
            <view class="fukuanbtn2 dzf" wx:if="{{item.flag==0&&item.ck==2&&item.join_count>=item.pt_max&&!item.pt_tx.flag||item.flag==3&&item.ck==1&&!item.join_count&&!item.pt_tx.flag||item.flag==3&&(item.yue_price==0||item.wx_price==0)&&!item.pt_tx.flag}}">未支付，已结束</view>
            <view class="fukuanbtn2 yzf" wx:if="{{item.flag==1&&item.join_count<item.pt_min}}">已支付</view>
            <block wx:if="{{item.flag==1&&item.nav==2&&item.types==2&&!item.pt_tx.flag||item.flag==1&&item.nav==2&&item.join_count>=item.pt_min&&!item.pt_tx.flag||item.flag==3&&(item.yue_price!=0||item.wx_price!=0)&&item.nav==2&&item.join_count>=item.pt_min&&!item.pt_tx.flag}}">
                <view bindtap="hxshow" class="fukuanbtn2" data-order="{{item.order_id}}">
          核销
        </view>
                <view class="fukuanbtn3">到店取货</view>
            </block>
            <view class="fukuanbtn2" wx:if="{{item.flag==1&&item.nav==1&&item.types==2&&!item.pt_tx.flag||item.flag==1&&item.nav==1&&item.join_count>=item.pt_min&&!item.pt_tx.flag||item.flag==3&&(item.yue_price!=0||item.wx_price!=0)&&item.nav==1&&item.join_count>=item.pt_min&&!item.pt_tx.flag}}">待发货</view>
            <view class="fukuanbtn2 ywc" wx:if="{{item.flag==2}}">已完成</view>
            <block wx:if="{{item.flag==4}}">
                <view class="fukuanbtn2">已发货</view>
                <view catchtap="wlinfo" class="fukuanbtn" data-kuaidi="{{item.kuadi}}" data-kuaidihao="{{item.kuaidihao}}" wx:if="{{item.kuaidihao}}">
            查看物流
          </view>
            </block>
            <view class="fukuanbtn2" wx:if="{{item.pt_tx.flag==1}}">待退款</view>
            <view class="fukuanbtn2" wx:if="{{item.pt_tx.flag==2}}">已退款</view>
            <view class="fukuanbtn2 jutk" wx:if="{{item.pt_tx.flag==3}}">已拒绝退款</view>
        </view>
    </view>
</view>
<view class="hx_con" wx:if="{{showhx==1}}">
    <view bindtap="hxhide" class="mask"></view>
    <view class="hexiao">
        <view class="hx_tit">请输入核销密码</view>
        <view>
            <input password bindinput="hxmmInput" class="hx_ipt" type="number" value="{{hxmm}}"></input>
        </view>
        <view>
            <button bindtap="hxmmpass" class="hx_btn">确认消费</button>
        </view>
    </view>
    <view bindtap="hxhide" class="hx_c">
        <image mode="aspectFit" src="/sudu8_page/resource/img/c.png"></image>
    </view>
</view>
<template is="copyright" data="{{...baseinfo}}"></template>
<template is="footer" data="{{...baseinfo,page_signs:page_signs,isIphoneX:isIphoneX}}" wx:if="{{baseinfo.tabbar_t==1}}"></template>
