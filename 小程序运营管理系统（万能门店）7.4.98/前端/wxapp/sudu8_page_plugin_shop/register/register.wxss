page {
    background: #f1f1f1;
    font-size: 28rpx;
    height: 100%;
}

swiper {
    height: 348rpx;
    margin-bottom: 20rpx;
}

.con {
    padding: 0 20rpx;
    background: #ffffff;
    border: 2rpx solid #e2e2e2;
    border-right: 0;
    border-left: 0;
}

.con>view {
    line-height: 96rpx;
    display: flex;
    flex-direction: row;
    border-bottom: 2rpx solid #e2e2e2;
    align-items: center;
}

.con>view:last-child {
    border: 0;
}

.con>view.tit .name {
    width: 260rpx;
}

.con>view input {
    line-height: 96rpx;
    height: 96rpx;
    border: none;
    background: #fff;
    padding: 0;
    margin-top: 0;
}

.con>view .input_t {
    width: 225rpx;
    margin-right: 40rpx;
}

.check_box {
    width: 26rpx;
    height: 26rpx;
    border: 2rpx solid #7b7b7b;
    border-radius: 6rpx;
    margin-right: 12rpx;
}

.xieyi {
    color: #004d8f;
}

.sub {
    width: 700rpx;
    height: 90rpx;
    line-height: 90rpx;
    color: #ffffff;
    border-radius: 10rpx;
    margin: 30rpx auto;
    background: #ff4546;
    font-size: 32rpx;
}

.gwc {
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,.7);
    z-index: 999;
    font-size: 28rpx;
}

.gwc .gwc_con {
    background: #ffffff;
    padding: 20rpx;
    width: 600rpx;
    margin: 40rpx auto 0;
}

.gwc .gwc_con>view:nth-child(1) {
    width: 500rpx;
    margin: 20rpx auto 30rpx;
    font-size: 32rpx;
}

.gwc .gwc_con scroll-view view {
    margin-bottom: 20rpx;
}

.gwc .gwc_con scroll-view view:last-child {
    margin: 0;
}

.yidu {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 500rpx;
    margin: 40rpx auto;
}

.tupview {
    border: 1px solid #dedede;
    width: 130rpx;
    height: 130rpx;
    display: inline-block;
    margin: 2%;
    position: relative;
    padding: 4rpx;
}

.tupview image {
    width: 100%;
    height: 100%;
    display: block;
}

.color_red {
    color: red;
}

.noticeCon {
    background: #fff;
    text-align: center;
    padding: 40rpx 60rpx;
    height: 100%;
    box-sizing: border-box;
}

.iconfont {
    font-size: 120rpx;
    color: #60C22E;
}

.tit1 {
    color: #60C22E;
    margin-bottom: 40rpx;
}

.tit2 {
    text-align: left;
    line-height: 48rpx;
}

.formcon {
    line-height: 5px;
    padding: 20rpx 0;
}