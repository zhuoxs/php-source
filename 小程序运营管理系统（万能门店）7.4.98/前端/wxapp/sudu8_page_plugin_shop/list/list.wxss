.menu {
    display: block;
    height: 38px;
}

.selectarea {
    margin-bottom: 20rpx;
    background: #fff;
}

.menu dt {
    font-size: 15px;
    float: left;
    width: 33%;
    height: 38px;
    border-right: 2rpx solid #eee;
    border-bottom: 2rpx solid #eee;
    text-align: center;
    background-color: #fff;
    color: #5a5a5a;
    line-height: 38px;
}

.menu dd {
    position: absolute;
    width: 100%;
    top: 39px;
    left: 0;
    z-index: 999;
}

.menu li {
    font-size: 14px;
    line-height: 34px;
    color: #575757;
    height: 34px;
    display: block;
    padding-left: 8px;
    background-color: #fff;
    border-bottom: 2rpx solid #eee;
}

.icon-img {
    width: 24rpx;
    height: 24rpx;
    margin: 10rpx 0 0 10rpx;
}