    height: 30rpx;
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    z-index: 6000;
    margin: auto;
    bottom: 34rpx;
}

.video-width {
    width: 100%;
    height: 283px;
}

.slide .play-image1 {
    display: block;
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    left: 0;
    top: -216px;
    right: -667rpx;
    bottom: 0;
    z-index: 6000;
