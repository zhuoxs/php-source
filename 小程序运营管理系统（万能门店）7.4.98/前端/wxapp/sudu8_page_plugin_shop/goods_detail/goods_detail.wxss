page {
    height: 100%;
}

.pro_head {
    position: relative;
}

.slide {
    margin-bottom: 0;
}

.pro_tit {
    background: rgba(0,0,0,0.3);
    height: 70rpx;
    line-height: 70rpx;
    padding-left: 20rpx;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    box-sizing: border-box;
    color: #fff;
    font-size: 26rpx;
    overflow: hidden;
}

.price {
    position: relative;
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1px solid #eee;
    background-color: #fff;
    overflow: hidden;
}

.products_qg {
    width: 200rpx;
    height: 70rpx;
    line-height: 70rpx;
    background-color: #ff9e05;
    color: #fff;
    text-align: center;
    position: absolute;
    bottom: 22rpx;
    right: 20rpx;
    border-radius: 6rpx;
}

.price1 {
    float: left;
    font-size: 32rpx;
    color: #e7142f;
    margin: 0 6rpx 0 20rpx;
}

.price2 {
    float: left;
    font-size: 56rpx;
    color: #e7142f;
    line-height: 90rpx;
}

.price3 {
    float: left;
    font-size: 26rpx;
    color: #999;
    margin-left: 10px;
}

.pline {
    text-decoration: line-through;
}

.sale_num {
    float: right;
    margin-right: 20rpx;
    top: 32rpx;
}

.price button {
    position: relative;
    display: block;
    padding-left: 0;
    padding-right: 0;
    box-sizing: border-box;
    text-align: center;
    text-decoration: none;
    line-height: 36rpx;
    border-radius: 5px;
    -webkit-tap-highlight-color: transparent;
    overflow: hidden;
    background-color: transparent;
}

.price button::after {
    content: " ";
    width: 0%;
    height: 0%;
    position: absolute;
    top: 0;
    left: 0;
    border: none;
    transform: scale(0.5);
    transform-origin: 0 0;
    box-sizing: border-box;
    border-radius: 10px;
}

.biaoq {
    padding: 20rpx;
    background-color: #fff;
    color: #71b41a;
}

.biaoq_t {
    float: left;
    margin-right: 26rpx;
    background-size: 30rpx;
}

.biaoq_p {
    width: 34rpx;
    height: 34rpx;
    margin-right: 10rpx;
    position: relative;
    top: 6rpx;
}

.youhuiq {
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
    margin-top: 10px;
    background-color: #fff;
    padding: 20px 0px 20px 20px;
}

.youhdiv {
    display: inline-block;
    margin-right: 20px;
    border: 1px solid #dedede;
    border-radius: 4px;
    padding: 5px 20px;
}

.spxq {
    background-color: #fff;
    margin-top: 20rpx;
    padding: 0 20rpx 60rpx;
}

.xbts {
    height: 66rpx;
    line-height: 66rpx;
    border-bottom: 1px solid #eee;
    color: #999;
    font-size: 14px;
}

.xqnr {
    margin-top: 20rpx;
    box-sizing: border-box;
    width: 100%;
}

.pro_footer_bg {
    height: 100rpx;
}

.pro_footer {
    position: fixed;
    height: 100rpx;
    line-height: 100rpx;
    left: 0;
    bottom: 0;
    z-index: 999;
    width: 100%;
    background: #fff;
    font-size: 26rpx;
}

.pro_f1 {
    float: left;
    box-sizing: border-box;
    text-align: center;
}

.pro_f1 navigator {
    display: block;
    height: 100%;
    overflow: hidden;
}

.pro_f1 image {
    display: block;
    width: 36rpx;
    height: 36rpx;
    margin: 15rpx auto 8rpx;
}

.pro_f1 text {
    display: block;
    line-height: 30rpx;
    font-size: 22rpx;
}

.pro_f_home,.pro_f_star,.pro_f_tel {
    width: 14%;
    border-right: 1px solid #eee;
    height: 100%;
    border-top: 1px solid #eee;
}

.pro_f_price,.pro_f_buy {
    width: 29%;
}

.pro_f_price {
    color: #fff;
    font-size: 36rpx;
    background: #fd8c00;
}

.pro_f_buy {
    background: #e7142f;
    color: #fff;
    font-size: 28rpx;
}

.pro_f_buy_t {
    width: 29%;
    background: #dedede;
    color: #fff;
    font-size: 28rpx;
}

.P_title {
    border-bottom: 2rpx solid #eee;
}

.active {
    color: #e7142f;
}

.P_title .pcon {
    float: left;
    width: 25%;
    text-align: center;
    line-height: 80rpx;
    position: relative;
}

.P_title .active i {
    width: 60rpx;
    height: 6rpx;
    background: #e7142f;
    display: block;
    margin: 0 auto;
}

.slide-image {
    display: block;
    position: absolute;
}

.slide .play-image {
