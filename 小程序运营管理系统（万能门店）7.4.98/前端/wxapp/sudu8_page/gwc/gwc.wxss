.gwc .gwc_con .gwc_top {
    text-align: center;
    height: 84rpx;
    line-height: 84rpx;
    color: #000000;
    margin-bottom: 20rpx;
}

.gwc .gwc_con .gwc_top .gwc_close {
    position: absolute;
    right: 20rpx;
    top: 24rpx;
    width: 40rpx;
}

.gwc_middle scroll-view .gwc_list {
    padding: 20rpx;
    border-bottom: 2rpx solid #efefef;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    background: #ffffff;
}

.gwc_middle scroll-view .proimg {
    width: 160rpx;
    height: 160rpx;
    position: relative;
    margin-right: 20rpx;
}

.gwc_middle scroll-view .proimg .pro_change,.gwc_middle scroll-view .proimg .gwclbg {
    position: absolute;
    left: 2rpx;
    bottom: 2rpx;
    width: 32rpx;
    height: 32rpx;
}

.gwc_middle scroll-view .proimg .gwclbg {
    background: #fff;
    border-radius: 30rpx;
}

.gwc_middle scroll-view .gwc_list_con .pro_top {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 520rpx;
}

.gwc_middle scroll-view .gwc_list_con .pro_top view:last-child {
    color: #ababab;
}

.gwc_middle scroll-view .gwc_list_con .pro_middle {
    display: flex;
    flex-direction: row;
    color: #ababab;
    font-size: 22rpx;
    margin-top: 6rpx;
}

.gwc_middle scroll-view .gwc_list_con .pro_foot {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.gwc_middle scroll-view .gwc_list_con .pro_foot .jia_jian {
    display: flex;
    flex-direction: row;
}

.gwc_foot {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-top: 2rpx solid #efefef;
    justify-content: space-between;
    z-index: 10000;
    background: #ffffff;
    position: fixed;
    left: 0;
    bottom: 110rpx;
}

.jiesuan {
    width: 280rpx;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    color: #ffffff;
}

