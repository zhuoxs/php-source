page {
    background-color: #fff;
    padding-bottom: 56rpx;
}

.evaluate_box {
    padding: 30rpx;
}

.evaluate_head_left {
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
    margin-right: 22rpx;
    border: 2rpx solid #efefef;
}

.evaluate_head_name {
    font-size: 28rpx;
    color: #434343;
    font-weight: bold;
}

.evaluate_head_center {
    width: 480rpx;
}

.evaluate_head_time {
    font-size: 24rpx;
    color: #969696;
    font-family: Arial,Helvetica,sans-serif;
}

.evaluate_head_right {
    font-size: 28rpx;
    color: #ff610b;
    padding-bottom: 30rpx;
    text-align: right;
    flex: 1;
}

.evaluate_class {
    padding-top: 20rpx;
}

.evaluate_class_left {
    color: #838383;
    font-size: 22rpx;
}

.evaluate_class_right {
    font-size: 22rpx;
    color: #838383;
    text-align: right;
    flex: 1;
}

.evaluate_class_right text {
    font-family: Arial,Helvetica,sans-serif;
}

.evaluate_text {
    font-size: 24rpx;
    color: #434343;
    margin-top: 16rpx;
    padding-bottom: 30rpx;
    line-height: 42rpx;
}

.evaluate_img image {
    width: 100%;
    display: block;
    margin-bottom: 20rpx;
}

.evaluate_img image:last-child {
    margin-bottom: 0rpx;
}

.delimiter {
    height: 16rpx;
    background-color: #F6F6F6;
}

.evaluate_business {
    font-size: 28rpx;
    color: #434343;
    padding: 24rpx 30rpx;
    border-bottom: 2rpx solid #eeeeee;
}

.evaluate_business text {
    font-size: 36rpx;
    color: #969696;
    margin-right: 8rpx;
    vertical-align: -6rpx;
}

.evaluate_center {
    width: 400rpx;
}

.evaluate_zan_left {
    font-size: 24rpx;
    color: #434343;
}

.evaluate_zan_center {
    font-size: 30rpx;
    color: #434343;
    vertical-align: center;
    margin: 0 20rpx 18rpx;
}

.evaluate_zan_right {
    font-size: 24rpx;
    color: #838383;
    font-family: Arial,Helvetica,sans-serif;
}

.evaluate_zan_right text {
    font-size: 30rpx;
    color: #969696;
}

.evaluate_business_content {
    font-size: 24rpx;
    color: #434343;
    padding: 20rpx 0rpx;
    line-height: 42rpx;
}

.evaluate_buierbox {
    width: 690rpx;
    margin: 24rpx auto 0;
    padding: 26rpx;
    border-radius: 10rpx;
    background-color: #F6F6F6;
    box-sizing: border-box;
}

.evaluate_buier_tx {
    width: 60rpx;
    height: 60rpx;
    margin-right: 14rpx;
    border-radius: 50%;
}

.evaluate_buier_zan_right {
    font-size: 24rpx;
    color: #838383;
    font-family: Arial,Helvetica,sans-serif;
}

.evaluate_buier_zan_right text {
    font-size: 30rpx;
    color: #838383;
}

.evaluate_buier_content {
    font-size: 24rpx;
    color: #434343;
}

.evaluate_buier_header {
    padding: 30rpx 0 20rpx;
}

.evaluate_buier_single:first-child .evaluate_buier_header {
    padding-top: 0;
}

.evaluate_look_more {
    margin-top: 30rpx;
    font-size: 24rpx;
    color: #aaaaaa;
    text-align: center;
}

.evaluate_look_more text {
    font-family: Arial,Helvetica,sans-serif;
}

.evaluate_look_more view {
    display: inline-block;
    margin-right: 10rpx;
    font-size: 24rpx;
    color: #aaaaaa;
    vertical-align: -10rpx;
}

.bottom_reserve {
    height: 88rpx;
}

.evaluate_bottom {
    background-color: #F6F6F6;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
}

.evaluate_bottom view {
    color: #434343;
    font-size: 28rpx;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    border-right: 2rpx solid #E5E5E5;
    box-sizing: border-box;
    overflow: hidden;
}

.evaluate_bottom view:last-child {
    border-right: 0;
}

.evaluate_bottom text {
    font-size: 36rpx;
    color: #969696;
    vertical-align: -2rpx;
    margin-right: 6rpx;
}

.evaluate_bottom1 view {
    width: 100%;
}

.evaluate_bottom2 view {
    width: 50%;
}

.content {
    line-height: 42rpx;
    margin-bottom: 20rpx;
}

.imgs img:last-child {
    margin-right: 0;
}