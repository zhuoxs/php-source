page {
    background-color: #fff;
    padding-bottom: 100rpx;
}

.assess_header {
    padding: 20rpx 30rpx;
    border-bottom: 2rpx solid #EEE;
}

.assess_header_img {
    width: 78rpx;
    height: 78rpx;
    margin-right: 66rpx;
}

.assess_header_text {
    font-size: 28rpx;
    color: #434343;
    margin-right: 114rpx;
}

.assess_header_text:last-child {
    margin-right: 0;
}

.assess_header_text text {
    font-size: 28rpx;
    color: #969696;
    margin-right: 10rpx;
}

.assess_header_text_on {
    color: #ff610b;
}

.assess_header_text_on text {
    color: #ff610b;
}

.assess_textarea {
    padding: 16rpx 30rpx;
    font-size: 28rpx;
    color: #434343;
    width: 100%;
    box-sizing: border-box;
    height: 420rpx;
}

.assess_picturebox {
    margin-top: 20rpx;
    font-size: 0;
    padding: 0 30rpx;
    overflow: visible;
}

.assess_picture {
    display: inline-block;
    margin-right: 16rpx;
    position: relative;
    overflow: visible;
    background-color: #f8f8f8;
    width: 160rpx;
    height: 160rpx;
    margin-bottom: 16rpx;
    border-radius: 16rpx;
    vertical-align: bottom;
}

.assess_picture_img {
    width: 160rpx;
    height: 160rpx;
    border-radius: 10rpx;
    display: block;
}

.assess_picture:nth-child(4n) {
    margin-right: 0;
}

.assess_picture_icon {
    font-size: 36rpx;
    color: #ff610b;
    position: absolute;
    top: -14rpx;
    right: -10rpx;
}

.assess_picture_img2 {
    width: 75rpx;
    height: 61rpx;
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    display: block;
    margin: auto;
}

.assess_empty {
    height: 16rpx;
    width: 100%;
    background-color: #f8f8f8;
}

.assess_buy {
    margin-top: 22rpx;
    padding: 0 30rpx;
}

.assess_buy_left {
    font-size: 30rpx;
    color: #B1B1B1;
    margin-top: 4rpx;
}

.assess_buy_left_on {
    color: #ff610b;
}

.assess_buy_center {
    font-size: 28rpx;
    color: #434343;
    margin-left: 14rpx;
}

.assess_buy_right {
    font-size: 28rpx;
    color: #b1b1b1;
    flex: 1;
    text-align: right;
}

.assess_submit {
    margin: 106rpx auto 0;
    width: 440rpx;
    height: 80rpx;
    background-color: #ff610b;
    text-align: center;
    line-height: 80rpx;
    border-radius: 80rpx;
    font-size: 28rpx;
    color: #fff;
}

.nowcount {
    position: absolute;
    right: 30rpx;
    bottom: 10rpx;
    color: #dfdfdf;
}