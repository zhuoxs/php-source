view {
    overflow: visible;
}

.hx_con {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 99999;
}

.hexiao {
    border-radius: 9rpx;
    width: 600rpx;
    height: 300rpx;
    background: #fff;
    position: absolute;
    left: 75rpx;
    top: 30%;
    z-index: 99999;
}

.hexiao .hx_tit {
    margin: 20rpx 20rpx 10rpx;
    text-align: center;
}

.hexiao .hx_ipt {
    margin: 20rpx;
    height: 30rpx;
    line-height: 30rpx;
    border: 1px solid #eee;
}

.hexiao .hx_btn {
    background-color: #f90;
    color: #fff;
    margin: 20rpx;
    margin-top: 0rpx;
    margin-bottom: 20rpx;
    font-size: 28rpx;
}

.hx_c {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    top: 700rpx;
    left: 350rpx;
    z-index: 99999;
}

.hx_c image {
    width: 100%;
    height: 100%;
    display: block;
}