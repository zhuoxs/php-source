                            </view>
                        </view>
                    </block>
                    <view class="section inp_box" wx:if="{{item.type==7}}">
                        <view class="section__title">{{item.name}}
                <text class="show_{{item.ismust}}">*</text>
                        </view>
                        <picker bindchange="bindDateChange" data-index="{{index}}" disabled="disabled" mode="date">
