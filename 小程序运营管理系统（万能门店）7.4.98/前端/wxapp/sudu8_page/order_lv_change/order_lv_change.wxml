            <form bindsubmit="formSubmit" class="form_box form_box1">
                <block wx:for="{{datas.beizhu_val}}">
                    <view class="section inp_box" wx:if="{{item.type==0}}">
                        <view class="section__title">{{item.name}}
                <text class="show_{{item.ismust}}">*</text>
                        </view>
