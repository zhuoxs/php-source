page {
    background-color: #fff;
    box-sizing: border-box;
}

view {
    overflow: hidden;
}

.mb-20 {
    margin-bottom: 20rpx;
}

.head {
    position: relative;
}

.headBgColor {
    height: 630rpx;
    width: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: -100;
}

.headBgColor>image {
    width: 586rpx;
    height: 178rpx;
    display: block;
    margin: 46rpx auto 0;
}

.head_bg {
    position: absolute;
    left: 0;
    top: 314rpx;
    right: 0;
    z-index: -10;
}

.w-750 {
    width: 750rpx;
}

.bg_f {
    box-shadow: 0 2rpx 6px #eee;
}

.head_content {
    margin: 228rpx 30rpx 0;
    position: relative;
    background-color: #fff;
    padding: 42rpx 30rpx;
    color: #434343;
    text-align: center;
    box-shadow: 4rpx 0rpx 26rpx 16rpx rgba(162,162,162,0.2);
}

.radius-20 {
    border-radius: 20rpx;
}

.line>view {
    width: 20rpx;
    height: 2rpx;
    background-color: #3c3e4a;
    display: inline-block;
    margin: 0rpx 10rpx 8rpx;
}

.show {
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    border: 2rpx solid #ebebeb;
    border-radius: 50%;
    margin: 14rpx auto;
}

.show image {
    width: 54rpx;
    height: 54rpx;
    display: block;
    margin: 24rpx auto;
}

.equity_show>view {
    width: 25%;
    float: left;
    margin-bottom: 40rpx;
}

.equity_show {
    margin-top: 36rpx;
}

.equity_show::after {
    display: block;
    content: '';
    clear: left;
}

.btn1 {
    width: 502rpx;
    height: 84rpx;
    margin: 30rpx auto;
    background-color: #e1c386;
    color: #fff;
    border-radius: 98rpx;
    font-size: 30rpx;
    display: block;
}

.btn1::after {
    border-radius: 98rpx;
    border: 0;
}

.logo {
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
    margin: 0 28rpx;
    border: 4rpx solid #98c6fb;
}

.head_margin {
    padding: 30rpx 0;
    margin: 20rpx 30rpx 62rpx;
    background-color: #fff;
    box-shadow: 4rpx 0rpx 26rpx 16rpx rgba(162,162,162,0.2);
}

.head_margin>view:first-child,.head_margin>view:nth-child(2) {
    float: left;
    font-size: 28rpx;
}

.head_margin>view:last-child {
    float: right;
    margin-right: 30rpx;
    transform: rotate(30deg);
}

.head_margin::after {
    display: block;
    content: '';
    clear: both;
}

.head_margin image {
    width: 100rpx;
    height: 100rpx;
    display: block;
}

.head_margin text {
    border: 1px solid #f7f7f7;
    color: #b6b6b6;
    border-radius: 36rpx;
    padding: 0 10rpx;
    height: 53rpx;
    line-height: 53rpx;
}

.show_text {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    font-size: 22rpx;
    display: block;
}