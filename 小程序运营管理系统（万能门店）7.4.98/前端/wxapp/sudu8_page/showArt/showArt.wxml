        <view bindtap="xuanzd" class="xlld {{index==xuanz?'act':''}}" data-index="{{index}}" wx:for="{{arrs}}">
          {{item}}
        </view>
    </view>
    <view class="sddds">
        <block wx:for="{{xx}}">
            <view bindtap="goux" class="nldks {{index==lixuanz?'act':''}}" data-index="{{index}}" wx:if="{{item.val==1}}">
