[is="yzzc_sun/pages/components/SecFooter/SecFooter"] {
    font-size: 20rpx;
}

page {
    background-color: #f2f2f2;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}

.border_bottom {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    background-color: #fff;
    border-bottom: 1rpx solid #eeeeee;
}

.status-box {
    width: 690rpx;
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
}

.status_label {
    height: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #000000;
    box-sizing: border-box;
    position: relative;
}

.wall {
    width: 100%;
    height: 20rpx;
    background-color: #f2f2f2;
}

.ellips1 {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}

.ellips2 {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.local-box {
    width: 600rpx;
    background: #fff;
    border-radius: 10rpx;
    padding-bottom: 10rpx;
}

.local-title {
    padding: 0 30rpx;
    line-height: 80rpx;
    border-bottom: 1px solid #f2f2f2;
    font-size: 30rpx;
}

.local-msg {
    padding: 30rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 30rpx;
}

.local-btn-box {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.local-btn-box button {
    width: 280rpx;
    border-radius: 10rpx;
    padding-left: 0;
    padding-right: 0;
}

.local-btn-box button:first-child {
    color: #ef4444;
    box-shadow: 0 0 1px #ef4444;
}

.local-btn-box button:last-child {
    background: #ef4444;
    color: #fff;
}

.font_26 {
    font-size: 26rpx;
}

.font_28 {
    font-size: 28rpx;
}

.font_30 {
    font-size: 30rpx;
}

.bold {
    font-weight: bold;
}

.color_9f {
    color: #9f9f9f;
}

.color_ba {
    color: #ba6c21;
}