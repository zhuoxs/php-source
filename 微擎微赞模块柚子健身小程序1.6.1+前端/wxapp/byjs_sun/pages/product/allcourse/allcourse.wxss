page {
    border-top: 1rpx solid #ddd;
}

.allcourse {
    display: flex;
    flex-wrap: wrap;
    padding-left: 25rpx;
}

.allcourse>view {
    width: 710rpx;
    height: 300rpx;
    position: relative;
    margin-top: 20rpx;
}

.dd_mask {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.3);
    z-index: 2;
}

.allcourse>view image {
    width: 710rpx;
    height: 300rpx;
}

.allcourse-name {
    z-index: 3;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    top: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    color: #fff;
    font-size: 36rpx;
    text-align: center;
}