page {
    background: #f7f7f7;
}

.top {
    height: 200rpx;
    position: relative;
}

.top .top_t {
    position: absolute;
    width: 92vw;
    top: 50rpx;
    left: 4vw;
}

.top .top_t .item_t {
    display: flex;
    padding: 20rpx 30rpx;
    background: #fff;
    border-radius: 20rpx 20rpx 0 0;
}

.top .top_t .item_t>image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 100%;
}

.top .top_t .item_t .item_l {
    flex: 1;
    width: 450rpx;
    box-sizing: border-box;
    padding-left: 20rpx;
}

.top .top_t .item_t .item_l>view {
    width: 500rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #999;
    line-height: 5vw;
}

.top .top_t .item_t .item_l>view:nth-child(1) {
    color: #333;
    font-size: 4.5vw;
    margin-bottom: 10rpx;
}

.top .top_t .item_t .item_l>view:nth-child(3) {
    overflow: inherit;
    white-space: normal;
}

.top .top_t .item_t .item_r {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    line-height: 4vw;
    color: #999;
    border-left: #f3a7bf 2rpx dashed;
    padding-left: 20rpx;
    width: 100rpx;
    box-sizing: border-box;
}

.top .top_t .item_b {
    display: flex;
}

.top .top_t .item_b>view {
    flex: 1;
    height: 70rpx;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}

.top .top_t .item_b>view:nth-child(1) {
    background: #f3a7bf;
    border-radius: 0 0 0 20rpx;
}

.top .top_t .item_b>view:nth-child(2) {
    border-radius: 0 0 20rpx 0;
}

.top .top_t .item_b image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 14rpx;
}

.top .top_t .item_btn {
    position: absolute;
    right: 0;
    top: 20rpx;
    display: flex;
    align-items: center;
    color: #fff;
    padding: 10rpx 20rpx;
    border-radius: 30rpx 0 0 30rpx;
}

.top .top_t .item_btn>image {
    width: 40rpx;
    margin-right: 10rpx;
}

.list {
    margin-top: 90rpx;
    background: #fff;
}

.list .title {
    display: flex;
    padding: 20rpx 30rpx 20rpx 0;
    color: #999999;
    border-bottom: #ddd 2rpx solid;
}

.list .title>view:nth-child(1) {
    width: 10rpx;
    height: 40rpx;
    background: #5fccec;
    margin-right: 20rpx;
}

.list .title>view:nth-child(2) {
    flex: 1;
    color: #000;
}

.list .title>view:nth-child(3) {
    width: 300rpx;
    text-align: right;
}

.list .list_c {
    overflow: hidden;
    padding: 20rpx 30rpx 0;
}

.list .list_c .item {
    width: 25%;
    text-align: center;
    line-height: 5vw;
    float: left;
    margin-bottom: 20rpx;
}

.list .list_c .item>image {
    width: 100rpx;
    height: 100rpx;
    padding: 6rpx;
    border: #ddd 2rpx solid;
    border-radius: 100%;
    margin: 0 auto;
}

.list .list_c .item>view {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list .list_c .item>view:nth-child(2) {
    margin-top: 10rpx;
}

.list .list_c .item>view:nth-child(3) {
    color: #999;
}

.info_c {
    display: flex;
    padding: 20rpx 30rpx 20rpx 0;
    background: #fff;
    margin-top: 10rpx;
}

.info_c>view:nth-child(1) {
    width: 10rpx;
    height: 40rpx;
    background: #5fccec;
    margin-right: 20rpx;
}

.info_c>view:nth-child(3) {
    margin-left: 20rpx;
    color: #2C2C2C;
}

.info_b {
    background: #fff;
    margin-top: 10rpx;
}

.info_b .title {
    padding: 20rpx 30rpx 20rpx 0;
    border-bottom: #ddd 2rpx solid;
    display: flex;
}

.info_b .title>view:nth-child(1) {
    width: 10rpx;
    height: 40rpx;
    background: #5fccec;
    margin-right: 20rpx;
}

.info_b .title>view:nth-child(2) {
    flex: 1;
}

.info_b .content {
    padding: 20rpx 30rpx;
}

.info_b .content>image {
    width: 100%;
}

.info_b .content .text {
    text-indent: 2em;
}