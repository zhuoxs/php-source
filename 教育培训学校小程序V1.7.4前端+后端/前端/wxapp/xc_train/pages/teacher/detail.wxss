@import "../../../wxParse/wxParse.wxss";

.page {
    padding-top: 10rpx;
    box-sizing: border-box;
}

.top {
    background: #fff;
    padding-top: 30rpx;
}

.top .user {
    width: 180rpx;
    height: 180rpx;
    box-sizing: border-box;
    border: #f7f7f7 2rpx solid;
    border-radius: 100%;
    margin: 0 auto;
}

.top .name {
    text-align: center;
    color: #008DC4;
    font-size: 4.5vw;
    margin-top: 20rpx;
}

.top .task {
    text-align: center;
    color: #B9B9B9;
}

.top .btn {
    display: flex;
    margin-top: 20rpx;
}

.top .btn .btn_t:nth-child(1) {
    background: #5fccec;
}

.top .btn .btn_t:nth-child(2) {
    background: #008fc4;
}

.top .btn .btn_t.curr:nth-child(1) {
    background: #eeeeee;
}

.top .btn .btn_t.curr:nth-child(2) {
    background: #dddddd;
}

.top .btn .btn_t {
    display: flex;
    flex: 1;
    padding: 20rpx 0;
    align-items: center;
    justify-content: center;
    color: #fff;
}

.top .btn .btn_t>image {
    margin-right: 10rpx;
}

.member {
    background: #fff;
    margin-top: 10rpx;
}

.member .title {
    padding: 20rpx 0;
    display: flex;
    color: #676767;
}

.member .title>view:nth-child(1) {
    width: 10rpx;
    height: 40rpx;
    background: #5fccec;
    margin-right: 20rpx;
}

.member .content {
    display: flex;
    align-items: center;
    border-top: #ddd 2rpx solid;
    padding: 20rpx 30rpx;
    color: #ddd;
    font-size: 5vw;
}

.member .content>image {
    width: 100rpx;
    height: 100rpx;
    border: #ddd 4rpx solid;
    box-sizing: border-box;
    border-radius: 100%;
    margin-right: 10rpx;
}

.list {
    background: #fff;
    margin-top: 10rpx;
    padding: 20rpx 30rpx;
    color: #aaa;
}

.list .title {
    padding: 10rpx 0;
}

.list .content {
    padding: 10rpx 0;
    border-top: #ddd 2rpx solid;
    border-bottom: #ddd 2rpx solid;
}