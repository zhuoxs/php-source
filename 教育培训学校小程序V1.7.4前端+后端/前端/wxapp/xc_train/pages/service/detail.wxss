    border-radius: 10rpx;
    margin: 20rpx 0;
}

.list {
    padding-top: 10rpx;
}

.list .list_t {
    padding: 20rpx 40rpx;
    background: #fff;
    display: flex;
}

.list .list_t+.list_t {
    border-top: #ddd 2rpx solid;
}

.list .list_t>icon {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 10rpx;
}

.list .list_t>view:nth-child(2) {
    flex: 1;
    width: 180rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
