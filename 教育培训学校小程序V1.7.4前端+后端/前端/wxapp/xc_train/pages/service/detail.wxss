}

.store_page {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: #f7f7f7;
    z-index: 10000;
    overflow: scroll;
}

.store_page .item+.item {
    margin-top: 10rpx;
}

.store_page .item {
    background: #fff;
}

.store_page .item .item_t {
    display: flex;
    padding: 20rpx 30rpx;
    background: #fff;
    border-radius: 20rpx 20rpx 0 0;
}

.store_page .item .item_t>image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
}

.store_page .item .item_t .item_l {
    flex: 1;
    width: 450rpx;
    box-sizing: border-box;
    padding-left: 20rpx;
}

.store_page .item .item_t .item_l>view {
    width: 450rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #999;
    line-height: 4vw;
}

.store_page .item .item_t .item_l>view:nth-child(1) {
    color: #333;
    font-size: 4vw;
    margin-bottom: 10rpx;
}

.store_page .item .item_t .item_r {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    line-height: 4vw;
    color: #999;
    border-left: #f3a7bf 2rpx dashed;
    padding-left: 20rpx;
    width: 100rpx;
    box-sizing: border-box;
}

.shareBlock {
    position: fixed;
    bottom: 180rpx;
    right: 30rpx;
}

.shareBlock>image {
    width: 100rpx;
    height: 100rpx;
}

.shade {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    z-index: 1000;
}

.shareLayer {
    position: fixed;
    left: 0;
    bottom: 0;
    padding: 70rpx 0;
    width: 100%;
    background-color: #fff;
}

.shareLayer .title {
    position: relative;
    height: 1px;
    width: 520rpx;
    background-color: #e1e1e1;
    margin: 0 auto 70rpx;
}

.shareLayer .title .b {
    width: 190rpx;
    font-size: 36rpx;
    height: 40rpx;
    line-height: 40rpx;
    background-color: #fff;
    position: absolute;
    left: 50%;
    margin-left: -95rpx;
    top: 0;
    margin-top: -20rpx;
    text-align: center;
}

.shareLayer .btns {
}

.shareLayer .btns .btn {
    text-align: center;
}

.shareLayer .btns .btn .navBox {
    display: inline-block;
    font-size: 28rpx;
    color: #666;
}

.shareLayer .btns .btn .navBox image {
    width: 90rpx;
    height: 90rpx;
    display: inline-block;
}

.shareLayer .btns .btn .navBox button {
    display: none;
}

.shareLayer .btns .border {
    width: 1px;
    height: 90rpx;
    background-color: #e6e6e6;
}

.hbLayer {
    width: 586rpx;
    position: fixed;
    left: 50%;
    margin-left: -293rpx;
    top: 50%;
    transform: translateY(-50%);
}

.hbLayer .closeBtn {
    text-align: right;
    margin-bottom: 30rpx;
}

.hbLayer .closeBtn image {
    width: 40rpx;
    height: 40rpx;
    display: inline-block;
}

.hbLayer .hbimg {
    margin-bottom: 20rpx;
    width: 100%;
}

.hbLayer .dlBtn {
    height: 78rpx;
    line-height: 78rpx;
    text-align: center;
    font-size: 26rpx;
    color: #fff;
    background-color: #77d4c0;
    border-radius: 10rpx;
}

.hbLayer .dlBtn image {
    width: 26rpx;
    height: 26rpx;
    margin-right: 10rpx;
    vertical-align: baseline;
    display: inline-block;
}

.flex-display {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
}

.flex-wrap {
    -webkit-box-flex-wrap: wrap;
    flex-wrap: wrap;
}

.flex-alignC {
    -webkit-box-align: center;
    align-items: center;
    -ms-flex-align: center;
}

.flex-flex1 {
    -webkit-box-flex: 1;
    flex: 1;
}

.flex-flex2 {
    -webkit-box-flex: 2;
    flex: 2;
