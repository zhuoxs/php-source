@import "../../../wxParse/wxParse.wxss";

.banner {
    width: 100%;
    height: 320rpx;
}

.top {
    background: #fff;
    padding: 20rpx 30rpx;
    position: relative;
}

.top .title {
    font-size: 4.5vw;
    color: #000;
}

.top .btn {
    display: flex;
    margin-top: 20rpx;
    font-size: 3vw;
}

.top .btn .btn_t {
    flex: 1;
    display: flex;
}

.top .btn .btn_t>image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.list {
    margin-top: 10rpx;
}

.list .nav {
    display: flex;
    background: #fff;
    border-bottom: #ddd 2rpx solid;
}

.list .nav>view {
    flex: 1;
    text-align: center;
    padding: 20rpx 0;
    box-sizing: border-box;
    margin: 0 40rpx;
}

.list .nav>view.curr {
    color: #5fccec;
    border-bottom: #5fccec 4rpx solid;
}

.detail .detail_t {
    background: #fff;
}

.detail .detail_t .item {
    padding: 20rpx 0;
    display: flex;
    align-items: center;
}

.detail .detail_t .item+.item {
    border-top: #ddd 2rpx solid;
}

.detail .detail_t .item>view:nth-child(1) {
    width: 10rpx;
    height: 40rpx;
    background: #5fccec;
}

.detail .detail_t .item>view:nth-child(2) {
    margin-left: 20rpx;
    color: #666666;
    flex: 1;
}

.detail .detail_t .item .btn {
    width: 150rpx;
    height: 60rpx;
    background: #5fccec;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8rpx;
    margin-right: 20rpx;
}

.detail .detail_c {
    margin-top: 10rpx;
    background: #fff;
}

.detail .detail_c .title {
    padding: 20rpx 0;
    color: #666666;
    display: flex;
}

.detail .detail_c .title>view:nth-child(1) {
    width: 10rpx;
    height: 40rpx;
    background: #5fccec;
    margin-right: 20rpx;
}

.detail .detail_c .content {
    padding-top: 20rpx;
    border-top: #ddd 2rpx solid;
    overflow: hidden;
}

.detail .detail_c .content .item {
    width: 20%;
    float: left;
    text-align: center;
    margin-bottom: 20rpx;
    font-size: 3vw;
}

.detail .detail_c .content .item>image {
    width: 100rpx;
    height: 100rpx;
    border: #ddd 4rpx solid;
    box-sizing: border-box;
    border-radius: 100%;
    margin: 0 auto;
}

.detail .detail_b {
    background: #fff;
    margin-top: 10rpx;
}

.detail .detail_b .title {
    padding: 20rpx 0;
    color: #666666;
    display: flex;
}

.detail .detail_b .title>view:nth-child(1) {
    width: 10rpx;
    height: 40rpx;
    background: #5fccec;
    margin-right: 20rpx;
}

.detail .detail_b .content {
    padding: 20rpx 40rpx;
    border-top: #ddd 2rpx solid;
    color: #999;
}

.tui {
    background: #fff;
}

.tui .item {
    padding: 20rpx;
    display: flex;
}

.tui .item+.item {
    border-top: #ddd 2rpx solid;
}

.tui .item>image {
    width: 330rpx;
    height: 130rpx;
}

.tui .item .item_r {
    width: 360rpx;
    margin-left: 20rpx;
}

.tui .item .item_r .item_t {
    display: flex;
    color: #aaa;
    margin-top: 4rpx;
}

.tui .item .item_r .item_t>view:nth-child(1) {
    flex: 1;
}

.tui .item .item_btn {
    background: #5fccec;
    width: 120rpx;
    height: 40rpx;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8rpx;
}

.discuss {
    background: #fff;
}

.discuss .ping {
    display: flex;
    padding: 20rpx 40rpx;
    border-bottom: #ddd 2rpx solid;
    align-items: center;
}

.discuss .ping>input {
    border: #ddd 2rpx solid;
    flex: 1;
    margin: 0 20rpx;
    border-radius: 10rpx;
}

.discuss .ping .ping_btn {
    width: 100rpx;
    text-align: center;
    color: #fff;
    background: #5fcceb;
    height: 1.4rem;
    line-height: 1.4rem;
    border-radius: 10rpx;
}

.discuss .item {
    padding: 20rpx 40rpx;
    display: flex;
}

.discuss .item+.item {
    border-top: #ddd 2rpx solid;
}

.discuss .item>image {
    width: 100rpx;
    height: 100rpx;
    border: #ddd 4rpx solid;
    border-radius: 100%;
    box-sizing: border-box;
}

.discuss .item .item_r {
    width: 540rpx;
    margin-left: 30rpx;
}

.discuss .item .item_r .name {
    display: flex;
}

.discuss .item .item_r .name>view:nth-child(1) {
    flex: 1;
    width: 320rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.discuss .item .item_r .content {
    color: #888888;
    margin-top: 10rpx;
}

.discuss .item .item_r .reply {
    background: #f7f7f7;
    padding: 20rpx;
    border-radius: 20rpx;
    margin-top: 10rpx;
}

.video_list {
    background: #fff;
}

.video_list .item {
    padding: 20rpx;
    display: flex;
}

.video_list .item+.item {
    border-top: #ddd 2rpx solid;
}

.video_list .item .video {
    position: relative;
}

.video_list .item .video>image:nth-child(1) {
    width: 330rpx;
    height: 130rpx;
}

.video_list .item .video>image:nth-child(2) {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 60rpx;
    height: 60rpx;
}

.video_list .item .item_r {
    width: 360rpx;
    margin-left: 20rpx;
}

.video_list .item .item_r .title {
    font-size: 4vw;
}

.video_list .item .item_r .item_t {
    display: flex;
    color: #aaa;
    margin-top: 20rpx;
}

.video_list .item .item_r .item_t>view:nth-child(2) {
    margin-left: 10rpx;
}

.video_list .item .item_r .item_t>view:nth-child(3) {
    text-align: right;
    flex: 1;
}

.menu {
    position: fixed;
