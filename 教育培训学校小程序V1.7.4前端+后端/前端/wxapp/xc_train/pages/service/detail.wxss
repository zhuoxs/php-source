    left: 0;
    width: 100%;
    background: #fff;
    z-index: 1000;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.menu .title {
    padding: 20rpx 0;
    text-align: center;
    font-size: 4.5vw;
    color: #5fcceb;
    border-bottom: #ddd 2rpx solid;
}

.menu .menu_item {
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: #ddd 2rpx solid;
}

.menu .menu_item>input {
    width: 100%;
    text-align: center;
}

.menu .menu_btn {
    height: 70rpx;
    color: #fff;
    background: #5fcceb;
    display: flex;
    align-items: center;
    justify-content: center;
