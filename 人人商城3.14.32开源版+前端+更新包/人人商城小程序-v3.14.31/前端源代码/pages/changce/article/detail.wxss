.wxParse-img {
    width: 96%;
}

.detail {
    padding: 2%;
}

.detail .title {
    font-size: 40rpx;
}

.userinfo {
    height: 100rpx;
    margin: 20rpx 0;
    padding: 20rpx 40rpx;
    background: #fafafa;
}

.userinfo view {
    float: left;
}

.userinfo .info1 {
    width: 40px;
    height: 40px;
    margin-right: 10px;
    position: relative;
}

.userinfo .info1 .v {
    width: 12px;
    height: 12px;
    border-radius: 100%;
    background: #FADE00;
    color: #fff;
    line-height: 12px;
    text-align: center;
    position: absolute;
    z-index: 10;
    overflow: hidden;
    bottom: 3px;
    font-size: 12px;
    margin-left: 32px;
}

.userinfo .info1 image {
    width: 40px;
    height: 40px;
    border-radius: 100%;
}

.userinfo .info2 {
    display: flex;
    flex-direction: column;
}

.userinfo .info2 .name {
    font-size: 14px;
}

.userinfo .info2 .time {
    font-size: 13px;
    color: #8A8A8A;
    padding-top: 5px;
}

.userinfo .info3 {
    float: right;
}

.userinfo .info3 image {
    width: 70px;
    height: 30px;
}

.detail .detailinfo {
    font-size: 30rpx;
}

.detail .detailinfo image {
}

.envas {
    margin-bottom: 60rpx;
    display: flex;
    background: #fafafa;
}

.envas .sc {
    background: #c50f1f;
    color: #fff;
    width: 50%;
    height: 80px;
    margin: 20rpx;
    text-align: center;
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    float: left;
}

.envas .xin {
    width: auto;
    margin: 0 auto;
    color: #999;
    display: flex;
    flex-direction: row;
    text-align: center;
    font-size: 13px;
}

.envas .sc image {
    width: 50px;
    height: 50px;
    padding-top: 4px;
    padding-right: 3px;
}

.envas .tt {
    height: 40px;
    margin: 0 15px;
    background: #fff;
}

.envas .tt text {
    line-height: 40px;
    font-size: 16px;
    margin-left: 15px;
}

.evaluation {
    border-top: solid 1px #e2e2e2;
    background-color: #fff;
    margin: 0 15px;
}

.userinfo1 {
    height: 50px;
}

.userinfo1 .userimage {
    width: 40px;
    height: 40px;
    border-radius: 100%;
    float: left;
    margin: 5px 15px;
}

.userinfo1 .time {
    margin: 10px 0;
    font-size: 12px;
    color: #b2b3b3;
    padding: 0 10px;
    float: right;
}

.evaluation-name {
    line-height: 40px;
    font-size: 14px;
}

.evaluation-content {
    display: flex;
    flex-direction: column;
}

.content {
    font-size: 14px;
    color: #8A8A8A;
    line-height: 20px;
    padding: 0 15px;
    padding-bottom: 5px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.add {
    position: fixed;
    height: 70px;
    width: 100%;
    z-index: 100;
    overflow: hidden;
    bottom: 0px;
    display: flex;
    flex-direction: row;
    background: #fff;
    margin: 0 auto;
}

.add .f1 {
    width: 65%;
    margin-right: 4%;
}

.add .f1 .pl {
    margin-left: 15px;
    height: 40px;
    background: #FAFAFA;
    border-radius: 15px;
    display: flex;
    flex-direction: row;
    margin-top: 15px;
    width: 94%;
}

.add .f1 .pl image {
    width: 20px;
    height: 20px;
    margin: 10px;
}

.add .f1 .pl input {
    width: 95%;
    height: 38px;
    font-size: 14px;
}

.add .f2,.add .f3 {
    width: 15%;
    text-align: center;
    margin: 18px auto;
    height: 35px;
    display: flex;
    flex-direction: column;
}

.add .f2 image,.add .f3 image {
    width: 35px;
    height: 35px;
    padding-left: 10px;
}

.add .f3 image {
    position: absolute;
}

.add .f3 .num {
    width: 12px;
    height: 12px;
    border-radius: 100%;
    background: #FF5160;
    color: #fff;
    line-height: 12px;
    text-align: center;
    position: absolute;
    z-index: 10;
    overflow: hidden;
    top: 3px;
    font-size: 12px;
    margin-left: 35px;
}

.commsubmit {
    width: 55px;
    height: 100%;
    opacity: 0;
    position: absolute;
    z-index: 100;
    overflow: hidden;
}

.homepage {
    position: fixed;
    right: 20rpx;
    z-index: 999;
    font-size: 22rpx;
    color: #fff;
    width: 90rpx;
    height: 90rpx;
    transition: all .7s;
    background: rgba(0,0,0,0.5);
    bottom: 60rpx;
    border-radius: 100%;
}

.wxParse {
    font-size: 36rpx;
    line-height: 60rpx;
}

.fui-article-subtitle {
    padding: 50rpx 0;
    font-size: 36rpx;
    color: #8c8c8c;
    overflow: hidden;
}

.fui-article-subtitle a {
    color: #607fa6;
}

.fui-article-subtitle .nav {
    padding-top: 0.3rem;
    float: left;
}

.fui-article-subtitle .nav.right {
    float: right;
}

.fui-article-subtitle .nav.padding {
    padding-left: 50rpx;
}

.news-title {
    height: 2rem;
    line-height: 2rem;
    border-bottom: solid 1px #f5f5f5;
    font-size: 16px;
    background: #ffffff;
    text-align: left;
    width: 100%;
    font-weight: 600;
}

.news-title i {
    line-height: 2rem;
    height: 15px;
    border-left: solid 3px #ff4c4c;
    margin-right: 0.6rem;
}

.news-list {
    width: 100%;
    background: #ffffff;
    display: flex;
    flex-direction: column;
}

.news-list .news-item {
    margin: 0 0.6rem;
    padding: 0.6rem 0;
    border-bottom: solid 1px #f5f5f5;
    display: -webkit-flex;
}

.news-list .news-item image {
    width: 6rem;
    height: 3.5rem;
    margin-left: 1rem;
    border-radius: 30rpx;
}

.news-list .news-item .news-item-con {
    width: auto;
    display: block;
}

.news-list .news-item .news-item-con text {
    font-size: 15px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.news-list .news-item .news-item-des {
    font-size: 12px;
    color: #666666;
    padding-top: 0.5rem;
    display: flex;
    flex-direction: row;
}

.news-list .news-item .news-item-des i {
    height: 11px;
    width: 5px;
    border-left: solid 1px #666666;
    font-style: normal;
    display: block;
    margin: 3px 0 0px 5px;
}