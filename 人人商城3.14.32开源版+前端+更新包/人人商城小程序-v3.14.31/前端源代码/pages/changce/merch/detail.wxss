.detail-hard {
    width: 100%;
    height: 6rem;
    background-size: 100%;
}

.detail-hard .fui-list {
    padding-top: 1.7rem;
}

.detail-hard .fui-list .subtitle,.detail-hard .fui-list .text {
    color: #ffffff!important;
}

.detail-tab {
    display: flex;
    flex-direction: row;
    width: 100%;
    padding: 0.4rem 0;
    background: #fff;
}

.detail-tab navigator {
    display: flex;
    flex-direction: column;
    width: 25%;
    font-size: 28rpx;
    color: #666666;
}

.detail-tab .on {
    color: #fd2d2d;
}

.detail-tab image {
    width: 1rem;
    height: 1rem;
    text-align: center;
    margin: 0 auto;
}

.detail-tab text {
    text-align: center;
}