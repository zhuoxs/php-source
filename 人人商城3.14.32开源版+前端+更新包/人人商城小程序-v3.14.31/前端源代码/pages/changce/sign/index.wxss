.container {
    width: 100%;
    overflow: hidden;
    background-color: #F3F3F3;
    height: auto;
}

.signCon {
    width: 100%;
    height: auto;
    overflow: hidden;
}

.signHeader {
    width: 100%;
    height: 350rpx;
    overflow: hidden;
    display: flex;
    background-color: #24B2F4;
}

.signHeader>view {
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    overflow: hidden;
    line-height: 1.5;
}

.calendar {
    width: 100%;
    height: auto;
    background-color: #fff;
    margin-top: 20rpx;
    position: relative;
}

.top-handle {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #eee;
    color: #24B2F4;
    font-size: 28rpx;
}

.top-handle image {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}

.dateYear {
    width: 180rpx;
    height: auto;
    line-height: 1.5;
    color: #666;
    font-size: 28rpx;
    border: 1px solid #24B2F4;
    position: absolute;
    top: 78rpx;
    left: 20rpx;
    z-index: 10;
    background-color: #fff;
    text-align: center;
}

.dateYearlist {
    width: 100%;
    height: auto;
    background-color: #24B2F4;
    color: #fff;
}

.days {
    margin: 20rpx 20rpx 0 20rpx;
    border-top: 1px solid #eee;
    border-left: 1px solid #eee;
    height: auto;
    color: #666;
    font-size: 28rpx;
}

.daysRow {
    width: 100%;
    height: 100rpx;
    overflow: hidden;
}

.daysColumn {
    width: 14.28%;
    height: 100%;
    float: left;
    border-right: 1px solid #eee;
    border-bottom: 1px solid #eee;
    box-sizing: border-box;
    position: relative;
}

.daysColumn .resign {
    position: absolute;
    top: 0;
    right: 0;
    width: 60rpx;
    height: 60rpx;
}

.resign image {
    width: 100%;
    height: 100%;
}

.daysColumn view {
    width: 100%;
    height: 100%;
    padding: 10rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.signDate-confirm {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    color: #666;
    font-size: 24rpx;
}

.signHeader-left {
    padding-top: 150rpx;
    flex: 2;
}

.signHeader-left>view {
    font-size: 28rpx;
}

.signHeader-intro {
    height: 100%;
    font-size: 24rpx;
    flex: 3;
}

.signHeader-intro>view {
    font-size: 24rpx;
}

.signHeader-img {
    width: 100rpx;
    height: 100rpx;
    margin: 40rpx auto 10rpx auto;
    border: 2px solid #fff;
    border-radius: 100%;
    overflow: hidden;
}

.signHeader-img image {
    width: 100%;
    height: 100%;
    display: block;
}

.signHeader-credit {
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.signHeader-intro .signHeader-bind {
    width: 60%;
    height: 60rpx;
    line-height: 60rpx;
    margin: 10rpx auto;
    border: 1px solid #fff;
    border-radius: 30rpx;
    font-size: 28rpx;
}

.signHeader-total {
    padding-top: 150rpx;
    font-size: 34rpx;
    position: relative;
    flex: 2;
}

.signHeader-total>view {
    font-size: 28rpx;
}

.signHeader-totalRecord {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    width: 65%;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 25rpx;
    background-color: #50C2F6;
}

.signGift {
    width: 100%;
    height: auto;
    overflow: hidden;
}

.signGift-nav {
    height: 80rpx;
    line-height: 80rpx;
    width: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
    color: #666;
    font-size: 28rpx;
}

.signGift-navLeft {
    float: left;
    width: 40%;
    height: 100%;
    overflow: hidden;
}

.signGift-navLeft image {
    width: 30rpx;
    height: 30rpx;
    display: inline-block;
    margin-right: 5rpx;
}

.signGift-navRight {
    float: right;
    width: 40%;
    text-align: right;
}

.signGift-content {
    width: 100%;
    height: auto;
    overflow: hidden;
    color: #666;
    font-size: 28rpx;
    position: relative;
    margin-bottom: 20rpx;
}

.signGiftitem {
    width: 15%;
    height: auto;
    float: left;
    margin: 0 10rpx 0 20rpx;
    text-align: center;
}

.signGiftitem-credit {
    width: 100%;
    height: 80rpx;
    background-color: #fff;
    position: relative;
}

.signCredit-dir {
    position: absolute;
    bottom: -5rpx;
    left: 42%;
    width: 20rpx;
    height: 20rpx;
    transform: rotate(45deg);
    background-color: #fff;
}

.signGiftitem-circle {
    width: 60rpx;
    height: 60rpx;
    border-radius: 100%;
    background-color: #fff;
    margin: 10rpx auto;
    position: relative;
    z-index: 3;
    border: 1px solid #fff;
    box-sizing: border-box;
}

.signGiftitem-circle image {
    width: 40rpx;
    height: 40rpx;
    display: block;
    margin: 10rpx auto;
}

.signGiftitem-get {
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    border: 1px solid #ccc;
    margin-top: 10rpx;
    font-size: 28rpx;
}

.line {
    position: absolute;
    width: 100%;
    height: 15rpx;
    background-color: #fff;
    top: 115rpx;
    left: 0;
}

.integral_sign_img {
    width: 40rpx;
    height: 44rpx;
}

.integral_sign_name {
    width: 100%;
    float: left;
    font-size: 24rpx;
    margin-top: 6rpx;
    text-align: center;
}

.ranking_img {
    width: 40rpx;
    height: 44rpx;
}

.ranking_name {
    width: 100%;
    float: left;
    font-size: 24rpx;
    margin-top: 6rpx;
    text-align: center;
}

.integral_img {
    width: 40rpx;
    height: 44rpx;
}

.integral_name {
    width: 100%;
    float: left;
    font-size: 24rpx;
    margin-top: 6rpx;
    text-align: center;
}

.index_img {
    width: 40rpx;
    height: 44rpx;
}

.index_name {
    width: 100%;
    float: left;
    font-size: 24rpx;
    margin-top: 6rpx;
    text-align: center;
}

.member_img {
    width: 40rpx;
    height: 44rpx;
}

.member_name {
    width: 100%;
    float: left;
    font-size: 24rpx;
    margin-top: 6rpx;
    text-align: center;
}

.foot_nav {
    bottom: 0;
    width: 100%;
    float: left;
    height: 100rpx;
    position: fixed;
    background-color: #fff;
}

.defaultd {
    width: 20%;
    float: left;
    color: #999;
    height: 100%;
    margin-top: 4rpx;
    text-align: center;
}