page {
    background: #f4f4f8;
}

.tags-title {
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 30rpx;
    color: #2f2f2f;
    margin-top: 30rpx;
}

button[type=hasbg][plain] {
    color: #e6e6e6;
    height: 54rpx;
    line-height: 54rpx;
    font-size: 26rpx;
    border: 1px solid #e6e6e6;
    background-color: #f8f8f8;
    border-radius: 0rpx;
}

button.nobor::after {
    border: none;
}

.btn-hover {
    opacity: 0.8;
}