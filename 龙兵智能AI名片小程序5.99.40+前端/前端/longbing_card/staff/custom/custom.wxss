page {
    background: #f4f4f8;
}

.ellipsis {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-wrap: normal;
}

page {
    height: 100%;
}

.echarts {
    width: 750rpx;
    height: 330rpx;
    display: flex;
    justify-content: center;
    background: #fff;
    z-index: 9;
}

ec-canvas {
    width: 700rpx;
    height: 100%;
}

.setTab-box-view,.swiper-tab,.swiper-tab-list {
    height: 90rpx;
    line-height: 90rpx;
}

.setTab-box-view .active::before {
    width: 120rpx;
    margin-left: -60rpx;
}

.vague {
    position: fixed;
    background: #6b6b6b;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 99;
    opacity: 0.6;
}

.addsRecord {
    width: 750rpx;
    height: 100%;
    z-index: 999;
    position: fixed;
    background: #fff;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 26rpx;
}

.Record_top {
    width: 750rpx;
    height: 100rpx;
    background: #f4f4f8;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.Record_top_left {
    margin-left: 20rpx;
    display: flex;
    flex: 1;
    align-items: center;
    background: #fff;
    height: 60rpx;
    line-height: 60rpx;
}

.Record_top_left i {
    font-size: 38rpx;
    margin-left: 10rpx;
}

.Record_top_left input {
    width: 80%;
    height: 60rpx;
    line-height: 60rpx;
    display: block;
}

.Record_label {
    width: 750rpx;
    min-height: 300rpx;
    border-bottom: 1px solid #f4f4f8;
    display: flex;
    flex-direction: column;
}

.Record_label text {
    font-size: 30rpx;
}

.RecoclickUnchangedrd_label3 {
    width: 100%;
    height: auto;
    display: block;
    padding-bottom: 30rpx;
}

.RecoclickUnchangedrd_label3 view {
    color: #e93636;
    background: #fceeee;
    border-radius: 30rpx;
    margin: 10rpx 0rpx 0rpx 20rpx;
    padding: 0rpx 20rpx;
    height: 50rpx;
    line-height: 50rpx;
    position: relative;
    display: block;
    float: left;
}

.Record_label3 {
    width: 700rpx;
    margin: 0 auto;
    display: flex;
    color: #e93636;
}

.Record_label3 text {
    display: flex;
    padding: 5rpx 20rpx;
    margin: 0 10rpx;
    align-items: center;
    background: #fff5f5;
    border-radius: 10rpx;
}

.Record_label4 {
    width: 700rpx;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    border: transparent;
}

.Record_label4 view {
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #f2f2f2;
}

.message-sec.custom-sec2 .child {
    height: auto;
    padding-bottom: 0rpx;
}

.message-sec.custom-sec2 .child .content {
    height: auto;
    padding-bottom: 25rpx;
}

.message-sec.custom-sec2 .child .content .flex {
    margin-top: 0rpx;
}

.message-sec.custom-sec2 .child .content .source {
    font-size: 26rpx;
    color: #969696;
    height: 30rpx;
    line-height: 30rpx;
}