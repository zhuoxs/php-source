.ui-tabs {
    position: relative;
    background: white;
}

.ui-tabs.ui-tabs-x {
    width: 100%;
    white-space: nowrap;
}

.ui-tabs-x .ui-tabs-ink-bar-wrapper {
    position: absolute;
    left: 0;
    height: 2px;
    transform-origin: 50% 50%;
    transition: width 250ms ease-out,left 250ms ease-out;
}

.ui-tabs-x .ui-tabs-ink-bar {
    position: relative;
    width: 60rpx;
    margin: 0 auto;
    border-bottom: 2px solid #19a918;
}