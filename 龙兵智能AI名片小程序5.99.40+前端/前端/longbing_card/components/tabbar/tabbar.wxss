.tabbar-box {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 9999999;
    font-size: 22rpx;
    border-top: 1px solid #f3f3f3;
    min-height: 110rpx;
    height: 110rpx;
}

.tabbar-box-place {
    height: calc(110rpx + env(safe-area-inset-bottom) / 2);
}

.isIphoneX {
    padding-bottom: 68rpx;
}

.tabbar-box-item {
    position: relative;
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.tabbar-box-item__img {
    width: 56rpx;
    height: 56rpx;
    margin: 0 0;
}

.tabbar-box-item__text {
    text-align: center;
    color: #838591;
    font-size: 22rpx;
    line-height: 1.5;
}