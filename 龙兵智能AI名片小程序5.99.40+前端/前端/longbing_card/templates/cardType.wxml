<template name="cardType4">
    <view style="background:white;padding:0rpx 0rpx 15rpx 0rpx;">
        <view class="card-index-sec-3 br-10 rel">
            <image class="card-img" mode="aspectFill" src="{{cardIndexData.info.avatar_2.path||cardIndexData.info.avatar_2||globalData.userDefault}}"></image>
            <view class="card-info abs br-5">
                <view class="name abs ellipsis">{{cardIndexData.info.name?cardIndexData.info.name:'姓名'}}</view>
                <view class="job abs ellipsis">{{cardIndexData.info.job_name?cardIndexData.info.job_name:'职位'}}</view>
                <view class="contact-sec abs">
                    <view class="contact-info ellipsis">
                        <i class="abs iconfont icon-xiazai45" style="top:0rpx;"></i>{{cardIndexData.info.myCompany.name?cardIndexData.info.myCompany.name:'公司'}}</view>
                    <view class="contact-info ellipsis">
                        <i class="abs iconfont icon-iconfontdianhua2"></i>{{cardIndexData.info.phone?cardIndexData.info.phone:'电话'}}</view>
                    <view class="contact-info ellipsis">
                        <i class="abs iconfont icon-tubiao201"></i>{{cardIndexData.info.myCompany.addr?cardIndexData.info.myCompany.addr:'公司地址'}}</view>
                </view>
                <view class="logo-img abs br-5">
                    <image class="rel" src="{{cardIndexData.info.myCompany.logo?cardIndexData.info.myCompany.logo:globalData.logoImg}}"></image>
                </view>
            </view>
        </view>
    </view>
</template>
