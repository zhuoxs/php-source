<view style="width:100%;height:auto;display:block;background:white;overflow-x:hidden;">
    <view class="news-sec" wx:if="{{newsList.list.length>0}}">
        <view class="child rel" wx:for="{{newsList.list}}" wx:key="key">
            <image class="abs br-5 company-logo" mode="aspectFill" src="{{item.user_info.avatar?item.user_info.avatar:newsList.timeline_company.logo?newsList.timeline_company.logo:globalData.logoImg}}"></image>
            <view class="content title clearfix">
                <view class="company-name fl"> 
            {{item.user_info.name?item.user_info.name:newsList.timeline_company.name}}
            <text class="br-5 tc rel" wx:if="{{!item.user_info.name}}">公司</text>
                </view>
                <block wx:if="{{item.type==2}}">
                    <button class="fr" data-id="{{item.id}}" data-index="{{index}}" openType="share" wx:if="{{item.url_type==1}}">
                转发
              </button>
                    <block wx:if="{{item.url_type==2}}"></block>
                    <block wx:if="{{item.url_type==3}}"></block>
                </block>
                <button class="fr" data-id="{{item.id}}" data-index="{{index}}" openType="share" wx:else>
              转发
            </button>
            </view>
            <view catchtap="toJump" class="content news br-10 rel" data-id="{{item.id}}" data-index="{{index}}" data-status="toNewsDetail" data-url="{{item.content}}">
                <em class="abs"></em>
                <view class="toNews-article" wx:if="{{item.type==3}}">
                    <image class="toNews-article-img" mode="aspectFill" src="{{item.cover[0]||globalData.productDefault}}"></image>
                    <view class="toNews-article-title clamp2">{{item.title}}</view>
                </view>
                <block wx:else>
                    <view class="title">{{item.title}}</view>
                    <view class="toNews-imgs-sec clearfix rel {{item.cover.length>0?'':'hide'}}" style="margin-top:{{item.cover.length>0?'12':'0'}}rpx;{{item.cover.length==4?'width:368rpx':''}}">
                        <block wx:if="{{index1<9}}" wx:for="{{item.cover}}" wx:for-index="index1" wx:for-item="item1" wx:key="key1">
                            <block wx:if="{{item.cover.length==1}}">
                                <block wx:if="{{item.type==1}}">
                                    <image class="img-100" mode="aspectFill" src="{{item1||globalData.companyVideoImg}}"></image>
                                    <view class="video-bg abs bg_opacity_sec tc" style="z-index:9999;">
                                        <image class="abs play-img" mode="aspectFill" src="{{globalData.playVideoImg}}"></image>
                                    </view>
                                </block>
                                <image catchtap="toPreviewImg" class="img-100" data-index="{{index}}" data-src="{{item1}}" data-status="toNewsPreview" mode="aspectFill" src="{{item1||globalData.productDefault}}" wx:else></image>
                            </block>
                            <image catchtap="toPreviewImg" class="img-33" data-index="{{index}}" data-src="{{item1}}" data-status="toNewsPreview" mode="aspectFill" src="{{item1||globalData.productDefault}}" wx:else></image>
                        </block>
                    </view>
                </block>
            </view>
            <view class="content more-time">
                <view class="flex rel">
                    <view class="flex100-4">
                        <view catchtap="toJump" data-id="{{item.id}}" data-index="{{index}}" data-status="toNewsDetail" data-url="{{item.content}}" style="color:#435a88;">
                            <block wx:if="{{item.type==2}}">
                                <block wx:if="{{item.url_type==1}}">查看详情</block>
                                <block wx:if="{{item.url_type==2}}">跳转小程序</block>
                                <block wx:if="{{item.url_type==3}}">拨打电话</block>
                            </block>
                            <block wx:else>
                  查看详情
                </block>
                        </view>
                        <view>{{item.create_time_2}}</view>
                    </view>
                    <view class="flex100-6 tr">
                        <view class="zan-edit-sec fl br-10 tc abs  {{newsIndex[index]==1?'bounceInRight animated':newsIndex[index]==2?'bounceOutRight animated':'hide'}}">
                            <view catchtap="toJump" data-id="{{item.id}}" data-index="{{index}}" data-status="toNewsZan">
                                <i class="iconfont icon-xin rel"></i>
                  {{item.is_thumbs==0?'赞':'取消'}}
                </view>
                            <view class="space_line rel"></view>
                            <view catchtap="toJump" data-id="{{item.id}}" data-index="{{index}}" data-status="toEva">
                                <i class="iconfont icon-liuyan rel"></i>
                  评论
                </view>
                        </view>
                        <view catchtap="toJump" class="em-view-news" data-index="{{index}}" data-status="toNewsShow" data-type="{{newsIndex[index]}}">
                            <em class="iconfont icon-yipinglun fr rel" style="top:5rpx;"></em>
                        </view>
                    </view>
                </view>
                <view class="zan-edit-content br-10 rel" wx:if="{{item.thumbs.length>0||item.comments.length>0}}">
                    <em class="abs"></em>
                    <view class="zan-content">
                        <i class="iconfont icon-buoumaotubiao15"></i>
                        <block wx:for="{{item.thumbs}}" wx:for-index="index1" wx:for-item="item1" wx:key="key1">
                            <block wx:if="{{item.show_type==0}}">
                                <block wx:if="{{index1<19}}">{{index1==0?'':'，'}}{{item1.user.nickName}}</block>
                            </block>
                            <block wx:if="{{item.show_type==1}}">
                    {{index1==0?'':'，'}}{{item1.user.nickName}}
                  </block>
                        </block>
                        <view bindtap="toJump" class="ismore {{item.show_type==1?'active':''}}" data-index="{{index}}" data-status="toShowTag" data-type="{{item.show_type}}" wx:if="{{item.show_more==1}}">{{item.show_type==0?'展开':'收起'}}<i class="iconfont icon-arrow-down rel"></i>
                        </view>
                    </view>
                    <view class="edit-content" wx:if="{{item.comments.length>0}}">
                        <block wx:for="{{item.comments}}" wx:for-index="index1" wx:for-item="item1" wx:key="key1">
                            <block wx:if="{{item.show_c_type==0}}">
                                <view wx:if="{{index1<4}}">
                                    <i>{{item1.user.nickName}}:</i>
                      {{item1.content}}
                    </view>
                            </block>
                            <view wx:if="{{item.show_c_type==1}}">
                                <i>{{item1.user.nickName}}:</i>
                      {{item1.content}}
                    </view>
                        </block>
                        <view bindtap="toJump" class="ismore {{item.show_c_type==1?'active':''}}" data-index="{{index}}" data-status="toShowComment" data-type="{{item.show_c_type}}" wx:if="{{item.show_c_more==1}}">{{item.show_c_type==0?'展开':'收起'}}<i class="iconfont icon-arrow-down rel"></i>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <view class="fix-news-edit fix " style="z-index:999999;{{globalData.isIphoneX?'padding-bottom:68rpx':''}}" wx:if="{{evaStatus==true}}">
        <input bindconfirm="addEvaBtn" bindinput="addEva" class="br-10 fl" focus="focus" placeholder="快来发表评论吧" type="text" wx:if="{{evaStatus==true}}"></input>
        <input bindconfirm="addEvaBtn" bindinput="addEva" class="br-10 fl" maxlength="500" placeholder="快来发表评论吧" type="text" wx:else></input>
        <view bindtap="toJump" class="btn br-10 fr tc" data-status="toAddEvaBtn">发表</view>
    </view>
</view>
