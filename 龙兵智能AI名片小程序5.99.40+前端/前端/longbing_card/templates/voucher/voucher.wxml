<template name="usevoucher">
    <view class="bg_opacity_sec fix" wx:if="{{voucherStatus.show==true}}"></view>
    <view class="usevoucher-sec fix tc voucher-animatoinsA {{voucherStatus.show==false?'voucher-animatoinsB':''}}">
        <image class="abs voucher-bg" src="https://retail.xiaochengxucms.com/images/12/2018/11/j2R7a7EFwB32Z8137e7F18I7zKFJRG.png"></image>
        <view class="abs content tc">
            <image class="abs br-5 ewm" src="{{tmp_qr}}"></image>
            <view class="text abs text tc ellipsis">{{voucherStatus.status=='receive'?'已使用':'门店扫码使用'}}</view>
            <view class="btn abs tc {{voucherStatus.status=='receive'?'active':''}}">{{currentVoucher.reduce}}元福包</view>
        </view>
        <i bindtap="toCloseVoucher" class="abs iconfont icon-guanbi1"></i>
    </view>
</template>
<template name="voucher">
    <view class="bg_opacity_sec fix bounceInDown animated  {{voucherStatus.show==-1?'slideOutUp':''}}" wx:if="{{voucherStatus.show!=false}}"></view>
    <view class="voucher-sec fix tc bounceInDown animated  {{voucherStatus.show==-1?'slideOutUp':''}}" wx:if="{{voucherStatus.show!=false}}">
        <image class="abs voucher-bg" src="https://retail.xiaochengxucms.com/images/12/2018/11/UcOcEO11idL8g7a5AH9EVvc9PAoL5M.png"></image>
        <view class="abs content tc">
            <view class="text abs text1">领福包</view>
            <button bindgetphonenumber="getVoucher" class="text abs text2" hoverClass="none" openType="getPhoneNumber" style="line-height:initial;width:100%;hegiht:114rpx;" wx:if="{{hasClientPhone==false}}">拆</button>
            <view bindtap="getDismantling" class="text abs text2" wx:if="{{hasClientPhone==true}}">拆</view>
            <view class="text abs text3">最高</view>
            <view class="text abs text4">
                <em>{{coupon.reduce}}</em>元</view>
            <view class="text abs text5 ellipsis">授权成功 即可领取</view>
        </view>
        <i bindtap="toCloseVoucher" class="abs iconfont icon-guanbi1"></i>
    </view>
    <view bindtap="{{voucherStatus.status=='receive'?'toShareVoucher':'toBigVoucher'}}" class="mini-voucher-sec fix bounceInRight animated" style="bottom:{{isIphoneX?'626':'558'}}rpx" wx:if="{{voucherStatus.show==false}}">
        <view class="barrage abs tc bounceInRight animated {{coupon_record==true?'bounceOutRight':''}}" wx:if="{{coupon_nickName}}">{{coupon_nickName}}获得{{coupon_reduce}}元</view>
        <image class="abs" src="https://retail.xiaochengxucms.com/images/12/2018/11/YQm6ooJ1GOQsooQ53TM33tt16Sw1Os.png"></image>
        <view class="abs text tc">{{voucherStatus.status=='receive'?'去分享':'拆福包'}}</view>
    </view>
</template>
