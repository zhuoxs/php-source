.cover-view-fix {
    width: 100rpx;
    height: 100rpx;
    background: red;
    display: inline-block;
    top: 0rpx;
    height: 100rpx;
    z-index: 99999999999;
}

.isNewsLine-sec {
    position: fixed;
    top: 100rpx;
    bottom: 0rpx;
    left: 0rpx;
    right: 0rpx;
    overflow-x: hidden;
    overflow-y: auto;
    background: green;
}

.isNewsLine-sec view,.isNewsLine-sec view web-view {
    width: 100%;
    height: 100%;
    display: block;
    background: yellowgreen;
}