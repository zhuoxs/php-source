<openSetting isSetting="{{isSetting}}" scopeType="writePhotosAlbum" settingApp="{{settingApp}}" settingText="{{settingText}}"></openSetting>
<view class="{{isIphoneX?'isIphoneX':''}}">
    <view style="margin:20rpx 0rpx 0rpx 55rpx;width:641rpx;height:1066rpx;{{imagePath?'box-shadow: 0 0 15rpx rgba(21,13,13,0.2); ':''}}">
        <painter bind:imgOK="onImgOK" bindtap="previewImage" customStyle="" palette="{{template}}"></painter>
    </view>
    <view style="height:40rpx;"></view>
    <view class="poster-footer-button tc">
        <button bindtap="changeImage" class="br-30 tc">换一换</button>
        <button bindtap="saveImage" class="br-30 tc bgff1c1c">保存海报</button>
    </view>
    <view style="height:40rpx;"></view>
</view>
