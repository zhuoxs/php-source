<import src="../../../templates/auth/auth.wxml"></import>
<view catchtap="toUpdate" class="uCenter-info-sec rel" wx:if="{{auth_user_status==true}}">
    <image class="abs circle" src="{{userData.avatarUrl||userDefault}}"></image>
    <view class="name ellipsis">{{userData.nickName}}</view>
    <view class="flex flex-cooperation rel">
        <view bindtap="toJump" class="content" data-status="toEditInfo" data-url="/longbing_card/users/pages/uCenter/editInfo/editInfo">点击更新我的个人资料 <i class="iconfont icon-right"></i>
        </view>
    </view>
</view>
<button bindgetuserinfo="getUserInfo" class="uCenter-info-sec rel" hoverClass="none" lang="zh_CN" openType="getUserInfo" wx:else>
    <image class="abs circle" src="{{userData.avatarUrl||userDefault}}"></image>
    <view class="name ellipsis">{{userData.nickName}}</view>
    <view class="flex flex-cooperation rel">
        <view bindtap="toJump" class="content" data-status="toEditInfo" data-url="/longbing_card/users/pages/uCenter/editInfo/editInfo">点击更新我的个人资料 <i class="iconfont icon-right"></i>
        </view>
    </view>
</button>
<view bindtap="toJump" class="common-title-sec rel" data-status="toJumpUrl" data-url="/longbing_card/users/pages/uCenter/order/orderList/orderList?currentTab=0">我的订单<view class="abs">全部订单<i class="iconfont icon-right2 rel"></i>
    </view>
</view>
<form bindsubmit="formSubmit" class="company-nav-sec tc uCenter-order-sec clearfix" reportSubmit="true">
    <button class="fl flex100-2 tc" data-status="toJumpUrl" data-url="/longbing_card/users/pages/uCenter/order/orderList/orderList?currentTab=1" formType="submit" hoverClass="none">
        <view>
            <i class="iconfont icon-fukuan"></i>
        </view>
        <view class="ellipsis">待付款</view>
    </button>
    <button class="fl flex100-2 tc" data-status="toJumpUrl" data-url="/longbing_card/users/pages/uCenter/order/orderList/orderList?currentTab=2" formType="submit" hoverClass="none">
        <view>
            <i class="iconfont icon-baoguofahuo"></i>
        </view>
        <view class="ellipsis">待发货</view>
    </button>
    <button class="fl flex100-2 tc" data-status="toJumpUrl" data-url="/longbing_card/users/pages/uCenter/order/orderList/orderList?currentTab=3" formType="submit" hoverClass="none">
        <view>
            <i class="iconfont icon-daishouhuo"></i>
        </view>
        <view class="ellipsis">待收货</view>
    </button>
    <button class="fl flex100-2 tc" data-status="toJumpUrl" data-url="/longbing_card/users/pages/uCenter/order/orderList/orderList?currentTab=4" formType="submit" hoverClass="none">
        <view>
            <i class="iconfont icon-dingdanwancheng"></i>
        </view>
        <view class="ellipsis">已完成</view>
    </button>
</form>
<view bindtap="toJump" class="common-title-sec rel" data-status="toJumpUrl" data-url="/longbing_card/users/pages/uCenter/order/collageList/collageList?currentTab=0">我的拼团<view class="abs">全部拼团<i class="iconfont icon-right2 rel"></i>
    </view>
</view>
<form bindsubmit="formSubmit" class="company-nav-sec tc uCenter-order-sec uCenter-pin-sec clearfix" reportSubmit="true">
    <button class="fl flex100-2 tc" data-status="toJumpUrl" data-url="/longbing_card/users/pages/uCenter/order/collageList/collageList?currentTab=0" formType="submit" hoverClass="none">
        <view>
            <i class="iconfont icon-gengduo"></i>
        </view>
        <view class="ellipsis">全部拼团</view>
    </button>
    <button class="fl flex100-2 tc" data-status="toJumpUrl" data-url="/longbing_card/users/pages/uCenter/order/collageList/collageList?currentTab=1" formType="submit" hoverClass="none">
        <view>
            <i class="iconfont icon-tuandui-tianchong"></i>
        </view>
        <view class="ellipsis">拼团中</view>
    </button>
    <button class="fl flex100-2 tc" data-status="toJumpUrl" data-url="/longbing_card/users/pages/uCenter/order/collageList/collageList?currentTab=2" formType="submit" hoverClass="none">
        <view>
            <i class="iconfont icon-shoujianchenggong"></i>
        </view>
        <view class="ellipsis">拼团成功</view>
    </button>
    <button class="fl flex100-2 tc" data-status="toJumpUrl" data-url="/longbing_card/users/pages/uCenter/order/collageList/collageList?currentTab=3" formType="submit" hoverClass="none">
        <view>
            <image src="/longbing_card/resource/images/icon_fail.png"></image>
        </view>
        <view class="ellipsis">拼团失败</view>
    </button>
</form>
<form bindsubmit="formSubmit" reportSubmit="true">
    <view class="uCenter-index-info-list-sec">
        <button class="child rel" data-status="toShowCheck" formType="submit" hoverClass="none">
            <i class="abs iconfont icon-tianchongxing-"></i>
            <view class="flex">
                <view class="flex100-5 tl">门店取货核销</view>
                <view class="flex100-5 tr">扫码后输入核销码<i class="iconfont icon-right2"></i>
                </view>
            </view>
        </button>
        <button class="child rel" data-status="toJumpUrl" data-url="/longbing_card/voucher/pages/user/myearning/myearning" formType="submit" hoverClass="none">
            <i class="abs iconfont icon-qian"></i>
            <view class="flex">
                <view class="flex100-5 tl">我的收入</view>
                <view class="flex100-5 tr">可提现<text>{{userData.profit?userData.profit:'0'}}</text>元<i class="iconfont icon-right2"></i>
                </view>
            </view>
        </button>
        <button class="child rel" data-status="toJumpUrl" data-url="/longbing_card/voucher/pages/user/distribution/distribution" formType="submit" hoverClass="none">
            <i class="abs iconfont icon-wodechanpin"></i>
            <view class="flex">
                <view class="flex100-5 tl">分销商品</view>
                <view class="flex100-5 tr">
                    <i class="iconfont icon-right2"></i>
                </view>
            </view>
        </button>
        <button class="child rel" data-status="toJumpUrl" data-url="/longbing_card/voucher/pages/user/voulist/voulist" formType="submit" hoverClass="none">
            <i class="abs iconfont icon-youhuiquan1"></i>
            <view class="flex">
                <view class="flex100-5 tl">我的优惠券</view>
                <view class="flex100-5 tr">
                    <i class="iconfont icon-right2"></i>
                </view>
            </view>
        </button>
    </view>
    <view class="uCenter-index-info-list-sec">
        <button class="child rel" data-status="toJumpUrl" data-url="/longbing_card/users/pages/uCenter/address/addressList/addressList" formType="submit" hoverClass="none">
            <i class="abs iconfont icon-dizhi"></i>
            <view class="flex">
                <view class="flex100-5 tl">收货地址</view>
                <view class="flex100-5 tr">
                    <i class="iconfont icon-right2"></i>
                </view>
            </view>
        </button>
    </view>
</form>
<view class="{{isIphoneX?'isIphoneX':''}}"></view>
<block wx:if="{{showCheck!='-1'}}">
    <view catchtap="toJump" class="bg_opacity_sec fix animated {{showCheck==true?'bounceInDown':'slideOutUp'}}" data-status="toCancel" style="z-index:1"></view>
    <form bindsubmit="formSubmitCheck" reportSubmit="true">
        <view class="showCheck-sec fix br-15 animated {{showCheck==true?'bounceInDown':'slideOutUp'}}">
            <view class="tc title">门店取货核销密码</view>
            <input class="br-15" maxlength="-1" name="pwd" placeholder="请输入核销密码" type="text"></input>
            <button formType="submit" hoverClass="btn-hover" type="primary">确认核销</button>
        </view>
    </form>
</block>
