@import "voice.wxss";
@import "extra.wxss";
input{
    padding-top: 10rpx;
    padding-bottom:10rpx;
    width: 100%;
}

.extra-btn-style{
    width: 50rpx;
    height: 50rpx;
    padding:25rpx 15rpx;
    display: flex;
    flex-shrink:0;
}
.input-text-voice-super{
    display: flex;
    flex-direction: row;
    background-color: white;
    width: 100%;
    align-items: center;
    height:100rpx;
}
.new-chat-sec{
    width: 100%;
    height: 100rpx;
    display: block;
    background: white;
    position: fixed;
    bottom: 120rpx;
    /* bottom: 100rpx; */
}
.new-chat-sec .user,
.new-chat-sec .staff{
    width: 94%;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0rpx 3%;
    display: block;
    font-size: 24rpx;
    color: #646464;
}
.new-chat-sec .user text,
.new-chat-sec .staff .use text{
    width: 144rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 24rpx;
    color: #646464;
    margin: 0rpx 10rpx;
    border-radius: 30rpx;
    display: inline-block;
    border: 1rpx solid #f0f0f0;
}
.new-chat-sec .staff .use{
    width: 50%;
    float: left;
    height: 100rpx;
    line-height: 100rpx;
}
.new-chat-sec .staff .source{
    width: 50%;
    float: right;
    text-align: right;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
} 
.showUseMessage{
    width: 100%;
    height: 790rpx;
    display: block;
    position: fixed;
    bottom: 0rpx;
    z-index: 999999
}
.showUseMessage .title{
    height: 98rpx;
    line-height: 98rpx;
    padding: 0rpx 4%;
    display: block;
    font-size: 34rpx;
    color: #333333;
    border-radius: 15rpx 15rpx 0rpx 0rpx;
    border-bottom: 1rpx solid #f0f0f0;
    background: white;
}
.showUseMessage .title i{
    float: right;
    font-size: 34rpx;
    color: #999999;
}
.showUseMessage .content{
    width: 100%;
    height: 692rpx;
    background: white;
    display: block;
    position: fixed;
    bottom: 0rpx;
    overflow: auto;
}
.showUseMessage .content .nav-left{ 
    width: 200rpx;
    height: 692rpx;
    position: fixed; 
    left: 0rpx;
    bottom: 0rpx;
    overflow: auto;
    background: #f7f7f7;
}
.showUseMessage .content .nav-left .child{
    width:160rpx;
    height: 90rpx;
    line-height: 90rpx;
    padding: 0rpx 20rpx;
    display: block;
    font-size: 26rpx;
    color: #646464;
}
.showUseMessage .content .nav-left .child.active{
    color: #ff0909;
    background: white;
}
.showUseMessage .content .nav-right{
    margin-left: 200rpx;
    /* height: 692rpx;  */
    display: block;
    overflow-x: hidden;
}
.add-useMessage-sec{
    width: 40%;
    height: 84rpx;
    line-height: 84rpx;
    margin: 30rpx 3% 10rpx 3%;
    float: left;
    font-size: 28rpx;
    text-align: center;
    color: #ff0000;
    border: 1rpx solid #f0f0f0;
    border-radius: 42rpx;
    box-shadow: 0 3rpx 12rpx rgba(0, 0, 0, .1);
}
.add-useMessage-sec i{
    margin-right: 10rpx;
}
.showUseMessage .content .nav-right .child{
    height: auto;
    margin: 20rpx 40rpx;
    display: block;
    border: 1rpx solid #f0f0f0;
    border-radius: 5rpx;
    display: block; 
}
.showUseMessage .content .nav-right .child .text{
    font-size: 24rpx;
    color: #666666; 
    line-height: 34rpx;
    margin: 20rpx;
}
.showUseMessage .content .nav-right .child .line{
    width: 100%;
    border-bottom: 1rpx solid #f0f0f0;
}
.showUseMessage .content .nav-right .child .edit,
.showUseMessage .content .nav-right .child .delete{
    width: 49.5%;
    height: 40rpx;
    line-height: 40rpx;
    margin: 6rpx 0rpx;
    text-align: center; 
    font-size: 24rpx;
    color: #5c5c5c;
    display: inline-block;
}
.showUseMessage .content .nav-right .child .edit{
    border-right: 1rpx solid #f0f0f0;
}
.showUseMessage .content .nav-right .child .edit i,
.showUseMessage .content .nav-right .child .delete i{
    display: inline-block;
}
.input-flex-column{
    width:100%;
    display: flex;
    flex-direction:column;
    position: fixed;
    left: 0;
    bottom: 0;
    background: white;
    padding-bottom: 20rpx;
}

.list-divide-line {
    width: 100%;
    height: 1rpx;
    background-color: #dddddd;
}

.chat-input-style{
    border-radius:10rpx;
    border:1rpx solid gainsboro;
    margin-top:14rpx;
    margin-bottom: 13rpx;
    padding:10rpx;
    min-height: 51rpx;
    background-color: #EFEFEF;
    font-size: 28rpx;
}

.chat-input-send-button-style{
    width: 100rpx;
    padding: 15rpx 0;
    font-size: 30rpx;
    text-align: center;
    margin: 0 10rpx;
    border-radius: 10rpx;
}