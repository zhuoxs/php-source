<template name="auth">
    <block wx:if="{{authStatus == false}}">
        <view class="bg_opacity_sec fix"></view>
        <view class="auth-getUserInfo-sec fix"> 
            <view class="avatar tc">
                <image class="circle" src="{{globalData.configInfo.my_company.logo}}"/>
            </view> 
            <view class="text tc">你好！初次使用，请先登录</view>
            <button open-type="getUserInfo" hover-class="none" bindgetuserinfo="getUserInfo" lang="zh_CN">
                微信登录
            </button>
        </view>
    </block>
</template> 