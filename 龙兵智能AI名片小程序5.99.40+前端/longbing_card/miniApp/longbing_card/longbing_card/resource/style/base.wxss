
page { 
  font-family: "微软雅黑";
  background: #f1f1f1;
} 
image{
  display: block;
}
/*显示隐藏*/
.show{
  display: block !important;
}
.hide{
  display: none !important;
}
/* 兼容iPhoneX */
.isIphoneX{
  padding-bottom: 68rpx;
}
/*透明背景层*/
.bg_opacity_sec{
  background: #000;
  background: rgba(0,0,0,0.5);
  filter:Alpha(opacity=50);
  color: white;
  width: 100%;
  height: 100%;
  display: inline-block;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  z-index: 99999999;
}
.check_auth{
  width: 70%;
  height:190rpx;
  padding: 0rpx 5%;
  display: inline-block;
  background: white;
  top: 50%;
  right: 10%;
  -webkit-transform: translate(0,-50%);
  transform: translate(0,-50%);
  z-index: 9999; 
}
.check_auth .content{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #333;
  margin-top:40rpx;
}
.check_auth button{
  width: 100%;
  text-align: right;
  font-size: 28rpx;
  line-height: 60rpx;
  color: #17a234;
  margin-top:20rpx;
  padding:0rpx;
}
.check_auth button:after{
  display:none;
}
/*分_享*/ 
button{
  background: none;
}
button::after{
  display: none;
}
