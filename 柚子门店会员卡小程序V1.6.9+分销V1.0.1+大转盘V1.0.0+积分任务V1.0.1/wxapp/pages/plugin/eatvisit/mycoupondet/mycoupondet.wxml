<view class="container">
    <view class="cont-body">
        <view class="session">
            <view class="wrap">
                <view class="wrap-title">让商家扫码进行核销</view>
                <view class="qrcode">
                    <canvas canvasId="qrcode"></canvas>
                </view>
                <view class="order-num">{{coupon.ordernum}}</view>
            </view>
        </view>
        <view class="detail">
            <view class="level">
                <image src="../../resource/images/icon36.png"></image>
                <text>{{award[coupon.award]}}</text>
            </view>
            <view class="prize">{{coupon.prize}}</view>
            <view class="shop">
                <image src="../../resource/images/icon37.png"></image>
                <text>商家信息</text>
            </view>
            <view>
                <view class="name">商家名称：</view>
                <view class="des">
                    <text>{{coupon.storename}}</text>
                </view>
            </view>
            <view class="phone">
                <view class="name">商家电话：</view>
                <view class="des">
                    <text>{{coupon.tel}}</text>
                    <image bindtap="getDialog" class="icon" src="../../resource/images/icon34.png"></image>
                </view>
            </view>
            <view>
                <view class="name">商家地址：</view>
                <view class="des">
                    <text class="txt">{{coupon.address}}</text>
                    <image bindtap="toMap" class="icon" src="../../resource/images/icon33.png"></image>
                </view>
            </view>
        </view>
    </view>
</view>
