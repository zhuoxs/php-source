page {
    width: 100%;
    height: 100%;
    background: #fff;
    font-size: 24rpx;
}

.wrap {
    position: fixed;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

image {
    margin: 100rpx 0 50rpx;
}

.wrap>view:nth-child(2) {
    line-height: 50rpx;
    color: #333;
    font-size: 30rpx;
}

.wrap>view:nth-child(3) {
    line-height: 50rpx;
    color: #999;
    font-size: 26rpx;
}

.wrap>view:nth-child(3) {
    line-height: 50rpx;
    color: #333;
    font-size: 24rpx;
}

.btn {
    width: 500rpx;
    height: 90rpx;
    line-height: 90rpx;
    margin-top: 40rpx;
    background: #4BB7D3;
    color: #fff;
    border-radius: 10rpx;
    font-size: 34rpx;
}

.button-hover {
    opacity: 0.8;
}