.sec-footer {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 750rpx;
    height: 98rpx;
    display: flex;
    flex-direction: row;
    background: #fff;
    z-index: 11;
    box-shadow: 0rpx -2rpx 6rpx #eee;
}

.item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 98rpx;
    color: #999;
    font-size: 20rpx;
}

.img-box {
    position: relative;
    flex: 1;
    width: 60rpx;
    height: 60rpx;
    padding-top: 10rpx;
}

.item-img {
    display: block;
    width: 60rpx;
    height: 60rpx;
    margin: 0 auto;
}

.item-txt {
    width: 100%;
    height: 30rpx;
    line-height: 30rpx;
    white-space: nowrap;
    pointer-events: auto;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-align: center;
}

.point {
    display: block;
    position: absolute;
    top: -45rpx;
    left: 50%;
    width: 90rpx;
    height: 90rpx;
    padding: 10rpx;
    transform: translate(-50%,0);
    border-radius: 50%;
    background: #fff;
    box-shadow: 0rpx -2rpx 2rpx #eee,-2rpx -4rpx 2rpx #eee,2rpx -4rpx 2rpx #eee;
}

.iphone-x {
    padding-bottom: 40rpx;
}

.choose {
    color: #ffb62b;
}