.nav {
    background: #fff;
}

.swiper-box {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding-top: 20rpx;
}

.nav-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 150rpx;
    padding-bottom: 20rpx;
    font-size: 24rpx;
}

.nav-item image {
    display: block;
    width: 82rpx;
    height: 82rpx;
}

.nav-item view {
    padding: 10rpx 10rpx 0;
}

.ellips1 {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.item {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 150rpx;
    padding-bottom: 20rpx;
    font-size: 24rpx;
    justify-content: center;
}

.img-box {
    position: relative;
    width: 82rpx;
    height: 82rpx;
}

.item-img {
    display: block;
    width: 82rpx;
    height: 82rpx;
    margin: 0 auto;
}

.item-txt {
    padding: 10rpx 10rpx 0;
    height: 30rpx;
    line-height: 30rpx;
    white-space: nowrap;
    pointer-events: auto;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-align: center;
}

button {
    margin-left: 0;
    margin-right: 0;
}