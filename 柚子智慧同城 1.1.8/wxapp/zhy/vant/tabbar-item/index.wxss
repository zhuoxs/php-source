@import "../area/index.wxss";

.van-tabbar-item {
    color: #7d7e80;
    height: 100%;
    display: flex;
    line-height: 1;
    font-size: 12px;
    align-items: center;
    flex-direction: column;
    justify-content: center;
}

.van-tabbar-item__icon {
    font-size: 18px;
    margin-bottom: 5px;
    position: relative;
}

.van-tabbar-item__icon--dot::after {
    top: 0;
    right: -8px;
    width: 8px;
    height: 8px;
    content: ' ';
    position: absolute;
    border-radius: 100%;
    background-color: #f44;
}

.van-tabbar-item__icon image {
    width: 30px;
    height: 18px;
    display: block;
}

.van-tabbar-item--active {
    color: #1989fa;
}