.container {
    padding-bottom: 0;
}

.order-list {
    overflow: hidden;
}

.order-item:first-child {
    margin-top: 0;
}

.order-item {
    margin-bottom: 8px;
    background: #fff;
    padding-top: 5px;
}

.test-card {
    padding: 10px 15px!important;
    border-bottom: 1px solid #eee;
}

.order-btn {
    padding: 3px 10px;
    font-size: 12px;
    background: #f60;
    line-height: 20px;
    color: #fff;
    display: inline-block;
    vertical-align: middle;
    margin-right: 5px;
}

.order-btn.bg-red {
    background: #f44;
}

.order-btn.bg-green {
    background: #00B26A;
}

.order-btn.bg-yellow {
    background: #F4D000;
}

.order-btn.bg-olive {
    background: #8dc63f;
}

.order-item .order-title .zan-cell__ft {
    color: #f00;
}

.order-item .order-item-cover {
    width: 80px;
    height: 80px;
    overflow: hidden;
    background-size: cover;
    position: relative;
    margin-left: auto;
    margin-right: auto;
    display: inline-block;
    margin-left: 8px;
    margin-top: 2px;
}

.order-item .order-item-cover:nth-child(4n+1) {
    margin-left: 0;
}

.order-item .order-item-cover image {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: auto;
    height: auto;
    max-width: 100%;
    max-height: 100%;
}

.order-item .order-button-group {
    margin: 0;
}

.order-card .zan-card__thumb .zan-card__image {
    border-radius: 0;
}

.cu-form-group input {
    text-align: left;
}

.item-ordersn {
    font-size: 14px;
    color: #666;
    margin-bottom: 20rpx;
    padding: 0 30rpx 20rpx;
    border-bottom: 1px solid #eee;
}

.list-item {
    width: 100%;
    background: #fff;
    position: relative;
    padding: 20rpx 0 0;
    margin-bottom: 10px;
}

.list-item navigator {
    padding: 0 30rpx 20rpx;
    border-bottom: 1px solid #eee;
}

.list-item .inline {
    vertical-align: middle;
}

.item-img {
    width: 100rpx;
    height: 100rpx;
    border-radius: 10rpx;
    margin-right: 20rpx;
    display: block;
}

.item-title {
    font-size: 14px;
    color: #333;
    margin-bottom: 10rpx;
    font-size: 15px;
}

.w80 {
    max-width: 80%;
}

.cu-form-group picker .picker {
    text-align: left;
}

.cu-form-group picker::after {
    font-family: "iconfont";
    content: "\e6ef";
    font-size: 40rpx;
}