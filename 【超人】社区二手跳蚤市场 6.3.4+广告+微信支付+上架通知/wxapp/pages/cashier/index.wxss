.mask-layer {
    position: fixed;
    right: 0;
    bottom: 0;
    left: 0;
    top: 0;
    background: rgba(0,0,0,.5);
    text-align: center;
    z-index: 11;
}

.cashier-open-setting {
    background: #fff;
    width: 70%;
    margin: 50% auto;
    border-radius: 4px;
}

.cashier-open-setting-title {
    padding: 8px 0;
    color: #000;
    font-size: 16px;
}

.cashier-open-setting-msg {
    margin-top: -8px;
    padding: 15px 20px;
    color: #9c9c9c;
    font-size: 14px;
}

.cashier-open-setting-btn {
    border-top: 1px solid #e6e6e6;
}

.cashier-open-setting-btn button {
    background: none!important;
    font-size: 16px;
}

.cashier-open-setting-btn button:after {
    border: none!important;
}

.cashier-open-setting-btn-cancel {
    border-radius: 0;
    border-right: 1px solid #e6e6e6;
}

.cashier-open-setting-btn-cancel {
    color: #000;
}

.cashier-open-setting-btn-confirm {
    color: #4cbf1c;
}

.cashier-hd {
    background: #fff;
    position: relative;
    z-index: 0;
    padding-bottom: 5px;
}

.cashier-hd .cashier-address-bg {
    position: absolute;
    width: 100%;
    height: 2px;
    background-repeat: repeat-x;
    left: 0;
    bottom: 0;
    z-index: 1;
}

.cashier-hd .cashier-address-bg image {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: auto;
    height: auto;
    max-width: 100%;
    max-height: 100%;
}

.cashier-bd {
    margin-top: 8px;
    padding-bottom: 30px;
}

.cashier-bd .cashier-item {
    padding: 10px;
    background: #fff;
}

.cashier-bd .cashier-item .zan-card__thumb {
    width: 80px;
    height: 80px;
}

.cashier-bd .cashier-item-stepper {
    line-height: 100px;
    padding-right: 10px;
}

.cashier-bd .cashier-item-title {
    color: #353535;
}

.cashier-bd .cashier-item-sub-title {
    color: #888;
    max-height: 20px;
    line-height: 20px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
}

.cashier-bd .cashier-delivery-type {
    position: relative;
}

.cashier-bd .cashier-delivery-fee {
    position: absolute;
    top: 20px;
    right: 10px;
}

.cashier-bd .order-free-shipping {
    text-decoration: line-through;
}

.cashier-bd .cashier-remark-order {
    margin-top: 5px;
    position: relative;
}

.cashier-bd .cashier-remark-order textarea {
    height: 65px!important;
}

.cashier-bd .cashier-remark-order .cashier-remark-order-wordcount {
    position: absolute;
    bottom: 2px;
    right: 2px;
}

.cashier-bd .cashier-anonymous {
    background: #fff;
    margin-top: 8px;
}

.cashier-ft {
    padding: 5px;
}

.bg-white {
    background: #fff;
    margin-top: 20rpx;
}

.weui-btn {
    background: #f60!important;
}

.item-cover {
    display: inline-block;
    vertical-align: middle;
}

.item-cover image {
    width: 100rpx;
}

.item-info {
    display: inline-block;
    margin-left: 10px;
    vertical-align: middle;
    width: 42%;
}

.item-info-more {
    width: 70%;
}

.item-title {
    width: 90%;
    font-size: 14px;
    font-weight: bold;
    margin-bottom: 3px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.item-price {
    font-size: 12px;
    color: #f00;
}

.item-total {
    float: right;
    font-size: 14px;
    color: #666;
}

.item-quantity {
    float: right;
    width: 115px;
    margin-top: 26rpx;
}