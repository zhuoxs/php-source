.container {
    padding: 0;
}

.item-scroll {
    white-space: nowrap;
}

.list-item {
    width: 100%;
    background: #fff;
    position: relative;
    padding: 25rpx 35rpx;
    border-bottom: 1px solid #eee;
    display: inline-block;
    box-sizing: border-box;
}

.list-item .inline {
    vertical-align: middle;
}

.list-item .w20 {
    width: 18%;
}

.relative {
    position: relative;
}

.item-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #f40;
    position: absolute;
    top: -4rpx;
    right: 16rpx;
    z-index: 2;
}

.list-item .w80 {
    width: 82%;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.item-img {
    width: 100rpx;
    height: 100rpx;
    border-radius: 10rpx;
    margin-right: 20rpx;
    display: block;
}

.item-title {
    font-size: 14px;
    color: #333;
    margin-bottom: 10rpx;
    font-size: 15px;
}

.clearfix:after {
    content: '';
    width: 0;
    height: 0;
    display: block;
    clear: both;
    visibility: visible;
}

.list-item .inline .pull-left {
    width: 76%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.list-item .inline .pull-right {
    width: 24%;
    text-align: right;
    font-size: 14px;
}

.like-btn {
    background: #f60;
    color: #fff;
    font-size: 12px;
    border-radius: 10rpx;
    padding: 8rpx 0;
    text-align: center;
}

.scroll-hide {
    width: 110rpx;
    display: inline-block;
    text-align: center;
    color: #fff;
    height: 148rpx;
    line-height: 148rpx;
    vertical-align: top;
    font-size: 14px;
}

.delete-item {
    background: #ff4444;
}

.stick-item {
    background: #f60;
}