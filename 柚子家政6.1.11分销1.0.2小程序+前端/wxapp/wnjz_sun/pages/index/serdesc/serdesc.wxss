.header {
    text-align: center;
    background-color: #fff;
}

.serimg {
    width: 750rpx;
    height: 530rpx;
}

swiper {
    height: 530rpx;
}

.serimg image {
    width: 750rpx;
    height: 530rpx;
}

.title {
    margin-top: 24rpx;
    font-size: 32rpx;
    font-weight: 700;
    line-height: 32rpx;
}

.desc {
    color: #666;
    margin-top: 16rpx;
    line-height: 42rpx;
}

.price {
    font-size: 32rpx;
    color: #f33030;
    font-weight: 700;
    margin-top: 22rpx;
    padding-bottom: 45rpx;
}

.order-nav {
    width: 750rpx;
    height: 90rpx;
    display: flex;
    justify-content: space-between;
    background: #fff;
    line-height: 90rpx;
    margin-top: 20rpx;
}

.order-nav view {
    width: 375rpx;
    height: 90rpx;
    text-align: center;
    font-size: 28rpx;
    color: #999;
    font-weight: 700;
}

.nav {
    display: inline-block;
    height: 90rpx;
}

.on {
    box-sizing: border-box;
    color: #41c2fc;
    width: 355rpx;
    border-bottom: 4rpx solid #41c2fc;
}

.session {
    padding-top: 6rpx;
    background: #fff;
    padding-bottom: 150rpx;
}

.serdesc {
    width: 750rpx;
    height: 1299rpx;
}

.session-title {
    font-weight: 700;
    font-size: 24rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 18rpx 0rpx 30rpx;
    color: #666;
}

.session-title:before,.session-title:after {
    content: " ";
    width: 58rpx;
    height: 2rpx;
    background: #ececec;
    margin-right: 20rpx;
}

.session-title:after {
    margin-left: 20rpx;
}

.session-comment {
    padding-bottom: 100rpx;
}

.uface {
    height: 80rpx;
    width: 80rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.list {
    padding: 32rpx 20rpx 50rpx;
    display: flex;
    border-bottom: 1rpx solid #ececec;
}

.content {
    margin-top: 10rpx;
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
    color: #999;
    width: 610rpx;
    line-height: 26rpx;
}

.comment {
    width: 610rpx;
    margin-top: 20rpx;
    color: #222;
    font-size: 24rpx;
    line-height: 32rpx;
}

rich-text {
    width: 710rpx;
    white-space: wrap;
}

rich-text p {
    width: 710rpx;
    word-break: break-all;
    white-space: wrap!important;
}

.submit {
    padding: 0rpx 20rpx;
    height: 120rpx;
    background-color: #fff;
    position: fixed;
    bottom: 0rpx;
    border-top: 1rpx solid #d2d2d2;
}

.submit .btn {
    height: 90rpx;
    width: 710rpx;
    margin-top: 19rpx;
    font-size: 34rpx;
    color: #fff;
    background-color: #41c2fc;
}

.gobackindex {
    position: fixed;
    bottom: 190rpx;
    right: 30rpx;
    z-index: 1000;
    background: #ffffff;
    border-radius: 50px;
}

.gobackindex image {
    width: 50px;
    height: 50px;
    border-radius: 50%;
}