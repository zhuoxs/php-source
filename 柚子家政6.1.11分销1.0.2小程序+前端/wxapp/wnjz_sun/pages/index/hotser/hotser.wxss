page {
    overflow: visible;
}

.container {
    margin-top: 1px solid #cbcbcb;
}

.time {
    padding: 10rpx 20rpx 14rpx;
    font-size: 28rpx;
    font-weight: 700;
    color: #41c2fc;
    line-height: 38rpx;
    text-align: center;
}

.cont {
    line-height: 50rpx;
    padding-bottom: 100rpx;
    margin: 0rpx 20rpx;
    width: 710rpx;
}

.cont image {
    width: 100%;
    margin-top: 30rpx;
}

view:after {
    overflow: visible;
}

.details-wrap {
    width: 710rpx;
    white-space: wrap;
    overflow: hidden;
    word-wrap: break-word;
}

rich-text {
    width: 710rpx;
    white-space: wrap;
}

rich-text p {
    width: 710rpx;
    word-break: break-all;
    white-space: wrap!important;
}

.share {
    width: 750rpx;
    height: 98rpx;
    background: #fff;
    box-shadow: 0rpx -3rpx 3rpx 0rpx rgba(180,180,180,0.078);
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    display: flex;
    justify-content: space-between;
}

.share button {
    background: #41c2fc;
    color: #fff;
    font-size: 32rpx;
    width: 375rpx;
    border-radius: 0rpx;
    line-height: 98rpx;
}

.share button::after {
    border: none;
}

.share .arcShare {
    background: #f23030;
}

.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

.drawer_box {
    width: 750rpx;
    overflow: hidden;
    position: fixed;
    bottom: 0rpx;
    left: 0;
    z-index: 1001;
    background: #f8f8f8;
}

.icon {
    width: 90rpx;
    height: 90rpx;
    margin-bottom: 30rpx;
}

.drawer_content {
    height: 240rpx;
    display: flex;
    justify-content: space-between;
}

.shareList {
    display: flex;
    flex-direction: column;
    height: 240rpx;
    width: 375rpx;
    justify-content: center;
    align-items: center;
    background: #fff;
    line-height: 26rpx;
    font-size: 28rpx;
}

.shareList::after {
    border: none;
}

.shareList view {
    display: inline-block;
}

.shareList view:last-child {
    font-size: 24rpx;
    color: #999;
    margin-top: 12rpx;
}

.drawer_footer {
    background: #fff;
    width: 750rpx;
    height: 100rpx;
    margin-top: 12rpx;
    font-size: 34rpx;
    text-align: center;
    line-height: 100rpx;
}

.section {
    width: 750rpx;
    height: 422rpx;
    margin-bottom: 20rpx;
}

video {
    width: 750rpx;
    height: 422rpx;
}

.preview {
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.7);
    position: fixed;
    z-index: 1001;
    top: 0rpx;
}

.preview image {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
}

.preview button {
    width: 40%;
    position: absolute;
    bottom: 50rpx;
    left: 30%;
    z-index: 9999;
}

.canvas {
    position: absolute;
    top: -3000rpx;
}

.gobackindex {
    position: fixed;
    bottom: 190rpx;
    right: 30rpx;
    z-index: 1000;
    background: #ffffff;
    border-radius: 50px;
}

.gobackindex image {
    width: 50px;
    height: 50px;
    border-radius: 50%;
}