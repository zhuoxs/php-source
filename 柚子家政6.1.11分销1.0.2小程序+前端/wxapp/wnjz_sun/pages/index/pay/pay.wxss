.container {
    justify-content: flex-start;
    min-height: 100%;
}

.section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 30rpx;
    color: #666;
    background: #fff;
    padding: 0rpx 20rpx;
}

.section-price {
    margin: 20rpx;
    height: 96rpx;
    border-radius: 12rpx;
    border: 1rpx solid #cbcbcb;
}

.section__title {
    padding-left: 4rpx;
    color: #222;
}

.input {
    width: 375rpx;
    font-size: 58rpx;
    height: 96rpx;
    display: flex;
    align-items: center;
}

.input input {
    padding: 0rpx;
    text-align: right;
    min-height: 0rem;
    height: 96rpx;
    background: #fff;
    padding-right: 4rpx;
    font-weight: 700;
    color: #f33030;
}

.holder {
    font-weight: 500;
    font-size: 30rpx;
    color: #999;
}

.card-price {
    display: flex;
    align-items: center;
}

.card-price view {
    font-size: 36rpx;
    color: #f33030;
    font-weight: 700;
}

.right {
    width: 12rpx;
    height: 18rpx;
    margin-left: 0rpx;
}

.choose-card {
    background: #fff;
    margin-top: 40rpx;
}

.choose-cards {
    border-top: 1rpx solid #cbcbcb;
    border-bottom: 1rpx solid #cbcbcb;
}

.session-card {
    height: 88rpx;
    padding: 0rpx;
    margin: 0rpx 20rpx;
}

.session-card:nth-child(1) {
    border-bottom: 1rpx solid #ececec;
}

.session-card text {
    font-size: 36rpx;
    color: #f33030;
    font-weight: 700;
}

.choose-pay {
    background: #fff;
    padding-bottom: 40rpx;
}

.session-pay {
    height: 80rpx;
    border-bottom: 1rpx solid #ececec;
    margin: 0rpx 20rpx;
    padding: 0rpx;
}

.radio {
    width: 710rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    font-size: 32rpx;
    color: #999;
    border-bottom: 1rpx solid #ececec;
    margin: 0rpx 20rpx;
}

.radio radio {
    width: 48rpx;
    height: 48rpx;
}

.det {
    display: flex;
    align-items: center;
}

.wxicon {
    width: 34rpx;
    height: 34rpx;
    margin-left: 24rpx;
}

.btn-area {
    width: 680rpx;
    margin: 0 auto;
    margin-top: 40rpx;
}

.btn-area button {
    background: rgba(65,194,252,0.7);
    color: #fff;
    font-size: 36rpx;
    height: 88rpx;
}

.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

.drawer_box {
    width: 750rpx;
    overflow: hidden;
    position: fixed;
    bottom: 0rpx;
    left: 0;
    z-index: 1001;
    background: #fff;
}

.drawer_title {
    font-size: 32rpx;
    color: #222;
    padding: 24rpx 20rpx;
    display: flex;
    justify-content: space-between;
}

.cancel {
    width: 30rpx;
    height: 30rpx;
}

.drawer_content {
    height: 500rpx;
    overflow-y: scroll;
}

.cards {
    margin: 20rpx 20rpx 30rpx;
    font-size: 24rpx;
    box-shadow: 0rpx 0rpx 10rpx 0rpx rgba(109,205,253,0.11);
    background: rgb(236,249,255);
}

.card-prices {
    padding: 6rpx 20rpx 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: cneter;
    border: 1rpx solid rgb(65,194,252);
    color: #41c2fc;
    border-bottom: 1rpx dashed rgb(65,194,252);
    border-radius: 12rpx 12rpx 0rpx 0rpx;
    position: relative;
}

.card-prices:before,.card-prices:after {
    content: " ";
    display: block;
    width: 16rpx;
    height: 16rpx;
    background: #f8f8f8;
    border-radius: 50%;
    position: absolute;
    bottom: -12rpx;
    border: 1rpx solid rgb(65,194,252);
    z-index: 99;
    border-left: 1rpx solid transparent;
    border-bottom: 1rpx solid transparent;
}

.card-prices:before {
    left: -10rpx;
    transform: rotate(45deg);
}

.card-prices:after {
    transform: rotate(-135deg);
    right: -10rpx;
}

.card-time {
    border: 1rpx solid rgb(65,194,252);
    border-top: 1rpx dashed rgb(65,194,252);
    border-radius: 0rpx 0rpx 12rpx 12rpx;
    height: 118rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 20rpx;
    line-height: 40rpx;
    color: #666;
}

.price {
    display: flex;
    line-height: 92rpx;
    margin-top: 16rpx;
}

.price text:nth-child(1) {
    font-size: 42rpx;
    margin-top: 16rpx;
}

.price text:nth-child(2) {
    font-size: 92rpx;
}

.right {
    width: 12rpx;
    height: 22rpx;
    margin-left: 22rpx;
}

.use {
    margin-top: 54rpx;
    font-weight: 700;
}

.gobackindex {
    position: fixed;
    bottom: 100rpx;
    right: 30rpx;
    z-index: 1000;
    background: #ffffff;
    border-radius: 50px;
}

.gobackindex image {
    width: 50px;
    height: 50px;
    border-radius: 50%;
}