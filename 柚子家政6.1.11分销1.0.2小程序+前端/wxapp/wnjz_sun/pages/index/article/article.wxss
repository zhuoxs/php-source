.nav-group {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    background: #fff;
    font-size: 30rpx;
    height: 92rpx;
    line-height: 92rpx;
    padding: 0rpx 20rpx;
    border-bottom: 1rpx solid #ececec;
    width: 710rpx;
    white-space: nowrap;
}

.nav-group view {
    margin-right: 56rpx;
    display: inline-block;
}

.nav {
    display: inline-block;
    height: 92rpx;
}

.nav-group view:last-child {
    margin-right: 0rpx;
}

.on {
    color: #41c2fc;
    border-bottom: 4rpx solid #41c2fc;
    box-sizing: border-box;
}

.session {
    background: #fff;
}

.section-list {
    padding: 32rpx 20rpx 30rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 1rpx solid #ececec;
}

.section-list:last-child {
    border-bottom: 0rpx solid #fff;
}

.list-left {
    font-size: 26rpx;
    width: 516rpx;
}

.title {
    width: 510rpx;
    line-height: 40rpx;
    font-size: 32rpx;
    font-weight: 700;
    margin-bottom: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.desc {
    width: 100%;
    line-height: 38rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 26rpx;
}

.thumb {
    height: 168rpx;
    width: 168rpx;
    border-radius: 6rpx;
}

.gobackindex {
    position: fixed;
    bottom: 100rpx;
    right: 30rpx;
    z-index: 1000;
    background: #ffffff;
    border-radius: 50px;
}

.gobackindex image {
    width: 50px;
    height: 50px;
    border-radius: 50%;
}