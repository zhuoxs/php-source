#mz {
    margin-top: 20rpx;
    padding: 30rpx 50rpx;
    background: #fff;
}

.mz-card {
    background: #000;
    color: #f5ac32;
    position: relative;
    height: 380rpx;
    width: 650rpx;
    border-radius: 30rpx;
    box-shadow: 0rpx 2rpx 21rpx rgba(0,0,0,0.5);
    background-size: cover;
}

.mz-logo {
    width: 600rpx;
    position: absolute;
    top: 50rpx;
    left: 50%;
    margin-left: -300rpx;
}

.mz-logo ._mzLogo {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 34rpx;
    color: #f5ac32;
    font-weight: 700;
}

._mzLogo text {
    display: block;
    width: 600rpx;
    overflow: hidden;
    height: 46rpx;
    line-height: 46rpx;
    text-align: center;
}

.hklogo {
    width: 88rpx;
    height: 88rpx;
    margin-bottom: 20rpx;
    border-radius: 50%;
    display: block;
    overflow: hidden;
}

.uthumb {
    width: 82rpx;
    height: 82rpx;
    border-radius: 50%;
    overflow: hidden;
    display: block;
}

.mz-right {
    text-align: center;
}

.mz-right text {
    display: inline-block;
    margin-bottom: 20rpx;
}

.rightNow {
    width: 190rpx;
    height: 70rpx;
    border-radius: 12rpx;
    line-height: 70rpx;
    text-align: center;
    background: #412d2e;
    font-size: 30rpx;
    border: 1rpx solid #f5ac32;
}

.mz-cont {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 246rpx 30rpx 0rpx;
}

.mz-awater {
    display: flex;
    line-height: 40rpx;
}

.commission>text {
    line-height: 46rpx;
    font-size: 36rpx;
    font-weight: 700;
}

.block {
    display: flex;
    align-items: center;
    margin-top: 20rpx;
    background: #fff;
    height: 150rpx;
}

.block>view {
    flex: 1;
    height: 90rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    line-height: 46rpx;
    text-align: center;
}

.block>view:first-child {
    box-sizing: border-box;
    border-right: 1rpx solid #dcdcdc;
}

.hasPay {
    color: #f5ac32;
}

.notPay {
    color: #f33030;
}

.countDet {
    font-size: 32rpx;
}

.session {
    display: flex;
    flex-wrap: wrap;
    margin-top: 30rpx;
    padding: 0rpx 50rpx;
}

.list {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 200rpx;
    height: 200rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    background: #fff;
}

.list:nth-child(3n) {
    margin-right: 0rpx;
}

.list>image {
    width: 60rpx;
    height: 60rpx;
    margin-top: 20rpx;
    margin-bottom: 16rpx;
}

.fxMoney {
    color: #f5ac32;
    font-weight: 700;
    margin-top: 20rpx;
    font-size: 26rpx;
}

.canvas {
    position: absolute;
    top: -3000rpx;
}

.shareBtn {
    position: absolute;
    top: 100rpx;
    right: 30rpx;
    z-index: 1001;
    width: 60rpx;
    height: 60rpx;
    background: rgba(0,0,0,0.7);
    border-radius: 50%;
    color: #fff;
    font-size: 22rpx;
    display: flex;
    align-items: center;
    padding: 20rpx;
    justify-content: center;
    text-align: center;
    line-height: 34rpx;
}

.shareBtn>text {
    display: inline-block;
}

.preview {
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.7);
    position: fixed;
    z-index: 1001;
    top: 0rpx;
}

.preview image {
    width: 80%;
    position: absolute;
    top: 10%;
    left: 10%;
    z-index: 9999;
}

.preview button {
    width: 40%;
    position: absolute;
    bottom: 100rpx;
    left: 30%;
    z-index: 9999;
}

.gobackindex {
    position: fixed;
    bottom: 100rpx;
    right: 30rpx;
    z-index: 1000;
    background: #ffffff;
    border-radius: 50px;
}

.gobackindex image {
    width: 50px;
    height: 50px;
    border-radius: 50%;
}