.order-nav {
    height: 80rpx;
    display: flex;
    align-items: center;
    background: #fff;
    justify-content: space-around;
}

.order-nav view {
    display: inline-block;
    height: 80rpx;
    line-height: 80rpx;
    box-sizing: border-box;
    color: #666;
    font-size: 30rpx;
}

.order-nav .on {
    border-bottom: 4rpx solid #f5ac32;
    color: #f5ac32;
}

.order-nav text {
    padding: 0rpx 10rpx;
}

.list {
    margin-top: 20rpx;
    background: #fff;
}

.ordernum {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 82rpx;
    padding: 0rpx 20rpx;
    border-bottom: 1rpx solid #ececec;
    font-size: 28rpx;
}

.orderStu {
    color: #f33030;
}

.user {
    display: flex;
    padding: 20rpx 20rpx;
}

.uthumb>image {
    height: 120rpx;
    width: 120rpx;
    border-radius: 50%;
}

.userDet {
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100rpx;
    padding: 10rpx 0rpx;
}

.userDet>view:last-child {
    font-size: 30rpx;
    color: #f5ac32;
    font-weight: 700;
}

.showGoods {
    width: 750rpx;
    padding: 10rpx;
    text-align: center;
    border-top: 1rpx solid #ececec;
}

.show {
    transform: rotate(180deg);
}

.showGoods>image {
    width: 50rpx;
    height: 50rpx;
    margin: auto;
}

.goods {
    padding-left: 20rpx;
}

.more {
    animation: show 0.8s 1;
}

@keyframes show {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

.goodsList {
    display: flex;
    justify-content: space-between;
    padding: 20rpx 20rpx 20rpx 0rpx;
    border-bottom: 1rpx solid #ececec;
}

.goodsList:last-child {
    border-bottom: 0rpx solid #ececec;
}

.goodsList .goodsDet {
    width: 450rpx;
}

.goodsList .goodsImg {
    width: 180rpx;
}

.goodsList .goodsImg>image {
    height: 180rpx;
    width: 180rpx;
    margin-right: 20rpx;
}

.goodsNum {
    white-space: nowrap;
    line-height: 46rpx;
}

.goodsDet {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.title {
    font-size: 30rpx;
    line-height: 46rpx;
}

.money {
    color: #f5ac32;
    font-size: 30rpx;
}

.extract {
    width: 750rpx;
    height: 60rpx;
    margin: 20rpx 0rpx;
    line-height: 60rpx;
    border-radius: 30rpx;
    background: #f8f8f8;
    font-size: 24rpx;
    color: #666;
    text-align: center;
}

.no {
    margin-top: 200rpx;
    height: 270rpx;
    width: 750rpx;
}

.disFlex {
    height: 80rpx;
    display: flex;
    align-items: center;
    background: #fff;
    justify-content: space-around;
    margin-bottom: 10rpx;
    font-size: 32rpx;
}

.disFlex>view {
    padding: 20rpx;
}

.disFlex .on {
    border-bottom: 4rpx solid #f5ac32;
    color: #f5ac32;
}

.qrcode {
    margin: 50rpx auto;
    width: 420rpx;
    text-align: center;
}

.qrcode>canvas {
    width: 200rpx;
    height: 200rpx;
    margin-top: 20rpx;
}